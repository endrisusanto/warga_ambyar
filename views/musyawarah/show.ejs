<%- include('../partials/head') %>
    <%- include('../partials/navbar') %>

        <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
        <style>
            /* Custom Quill Editor Styling for Comments */
            .ql-toolbar.ql-snow {
                background: rgba(255, 255, 255, 0.05);
                border: 1px solid rgba(255, 255, 255, 0.1) !important;
                border-radius: 12px 12px 0 0;
                padding: 4px 8px !important;
            }

            .ql-container.ql-snow {
                background: rgba(255, 255, 255, 0.02);
                border: 1px solid rgba(255, 255, 255, 0.1) !important;
                border-top: none !important;
                border-radius: 0 0 12px 12px;
                color: #f3f4f6;
            }

            .ql-editor {
                font-size: 0.875rem;
            }

            /* For the input editor */
            #commentEditor .ql-editor {
                min-height: 80px;
                padding: 8px 12px !important;
            }

            /* For the display bubble - NO internal padding */
            .timeline-item .ql-editor {
                padding: 0 !important;
                min-height: unset !important;
            }

            /* Remove ALL margins from prose/quill content in comments */
            .timeline-item .ql-editor * {
                margin: 0 !important;
                padding: 0 !important;
            }

            .timeline-item .ql-editor p {
                margin: 0 !important;
                padding: 0 !important;
                line-height: 1.3 !important;
            }

            .timeline-item .ql-editor>*:first-child {
                margin-top: 0 !important;
            }

            .timeline-item .ql-editor>*:last-child {
                margin-bottom: 0 !important;
            }

            /* Override prose styles in comments */
            .timeline-item .prose p {
                margin-top: 0 !important;
                margin-bottom: 0 !important;
            }

            .timeline-item .prose>* {
                margin-top: 0 !important;
                margin-bottom: 0 !important;
            }

            /* Remove any inherited spacing */
            .timeline-item .ql-editor {
                line-height: 1.3 !important;
                white-space: normal !important;
            }

            .timeline-item .ql-editor p {
                white-space: normal !important;
            }

            .timeline-item .ql-editor * {
                white-space: normal !important;
            }

            .ql-toolbar.ql-snow .ql-stroke {
                stroke: #9ca3af !important;
            }

            .ql-toolbar.ql-snow .ql-fill {
                fill: #9ca3af !important;
            }

            .ql-toolbar.ql-snow .ql-picker {
                color: #9ca3af !important;
            }

            .custom-scrollbar::-webkit-scrollbar {
                width: 4px;
            }

            .custom-scrollbar::-webkit-scrollbar-track {
                background: rgba(255, 255, 255, 0.05);
            }

            .custom-scrollbar::-webkit-scrollbar-thumb {
                background: rgba(255, 255, 255, 0.1);
                border-radius: 10px;
            }

            /* Timeline Styling */
            .timeline-container {
                position: relative;
                padding-left: 2rem;
            }

            .timeline-line {
                position: absolute;
                left: 0.5rem;
                top: 0;
                bottom: 0;
                width: 2px;
                background: rgba(99, 102, 241, 0.2);
            }

            .timeline-item {
                position: relative;
                margin-bottom: 0.75rem;
            }

            .timeline-dot {
                position: absolute;
                left: -1.85rem;
                top: 0.25rem;
                width: 0.75rem;
                height: 0.75rem;
                border-radius: 50%;
                background: #6366f1;
                border: 2px solid rgba(255, 255, 255, 0.1);
                box-shadow: 0 0 10px rgba(99, 102, 241, 0.5);
            }

            .timeline-dot.log {
                background: #10b981;
                box-shadow: 0 0 10px rgba(16, 185, 129, 0.5);
            }
        </style>

