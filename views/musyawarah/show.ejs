<%- include('../partials/head') %>
    <%- include('../partials/navbar') %>

        <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">

        <div class="max-w-4xl mx-auto py-6 sm:px-6 lg:px-8">
            <div class="bg-white overflow-hidden shadow-sm sm:rounded-lg">
                <div class="p-6 bg-white border-b border-gray-200">
                    <div class="mb-6">
                        <div class="mb-4">
                            <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-2">
                                <%= item.judul %>
                            </h1>
                            <div class="text-sm text-gray-500 flex flex-wrap items-center">
                                <span class="mr-4 flex items-center mb-1 sm:mb-0">
                                    <svg class="mr-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z">
                                        </path>
                                    </svg>
                                    Meeting: <%= moment(item.tanggal).format('DD MMM YYYY') %>
                                </span>
                                <span class="flex items-center">
                                    <svg class="mr-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    Posted: <%= moment(item.created_at).format('DD MMM YYYY') %>
                                </span>
                            </div>
                        </div>

                        <div class="grid grid-cols-2 gap-3 sm:flex sm:justify-end sm:space-x-3">
                            <a href="/musyawarah"
                                class="flex items-center justify-center w-full sm:w-auto px-6 py-2 rounded-full bg-gray-100 hover:bg-gray-200 text-gray-700 font-bold border border-gray-200 transition-colors">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                                </svg>
                                Back
                            </a>
                            <% if(user.role==='admin' || user.role==='ketua' || user.role==='bendahara' ) { %>
                                <a href="/musyawarah/delete/<%= item.id %>" onclick="return confirm('Hapus info ini?')"
                                    class="flex items-center justify-center w-full sm:w-auto px-6 py-2 rounded-full bg-red-100 hover:bg-red-200 text-red-600 font-bold border border-red-200 transition-colors">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16">
                                        </path>
                                    </svg>
                                    Hapus
                                </a>
                                <% } %>
                        </div>
                    </div>

                    <div class="ql-editor prose max-w-none mb-8" style="padding: 0;">
                        <%- item.konten %>
                    </div>

                    <% if(item.lampiran) { %>
                        <div class="mt-8 border-t pt-6">
                            <h3 class="text-lg font-bold mb-3">Lampiran</h3>
                            <div class="flex items-center p-4 bg-gray-50 rounded border">
                                <svg class="h-8 w-8 text-indigo-500 mr-4" fill="none" stroke="currentColor"
                                    viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13">
                                    </path>
                                </svg>
                                <div class="flex-1 truncate mr-4">
                                    <%= item.lampiran %>
                                </div>
                                <a href="/uploads/musyawarah/<%= item.lampiran %>" target="_blank"
                                    class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded text-sm">
                                    Download / Lihat
                                </a>
                            </div>
                            <% if(item.lampiran.match(/\.(jpg|jpeg|png|gif)$/i)) { %>
                                <div class="mt-4">
                                    <img src="/uploads/musyawarah/<%= item.lampiran %>"
                                        class="max-w-full rounded shadow">
                                </div>
                                <% } %>
                        </div>
                        <% } %>

                </div>
            </div>
        </div>

        <%- include('../partials/footer') %>