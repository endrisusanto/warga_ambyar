<%- include('../partials/head') %>
    <%- include('../partials/navbar') %>

        <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
            <div
                class="flex flex-col md:flex-row md:justify-between md:items-center mb-6 md:mb-8 px-4 sm:px-0 space-y-4 md:space-y-0">
                <h1 class="text-2xl sm:text-3xl font-bold text-gray-100 flex items-center">
                    <svg class="w-8 h-8 mr-3 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor"
                        viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z">
                        </path>
                    </svg>
                    <span class="break-words">Musyawarah & Informasi</span>
                </h1>
                <div class="flex items-center space-x-3 w-full md:w-auto text-sm sm:text-base">
                    <a href="/warga"
                        class="glass-button flex-1 md:flex-none justify-center text-gray-300 font-medium py-2 px-4 rounded-lg flex items-center transition border border-white/10">
                        <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z">
                            </path>
                        </svg>
                        Data Warga
                    </a>
                    <% if(user.role==='admin' || user.role==='bendahara' || user.role==='ketua' ) { %>
                        <a href="/musyawarah/create"
                            class="glass-button flex-1 md:flex-none justify-center bg-white/10 hover:bg-white/15 text-gray-200 font-medium py-2 px-4 rounded-lg flex items-center border border-white/15">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M12 4v16m8-8H4">
                                </path>
                            </svg>
                            Info Baru
                        </a>
                        <% } %>
                </div>
            </div>

            <!-- Timeline Style -->
            <div class="px-4 sm:px-0">
                <% if(list.length===0) { %>
                    <div class="glass-card p-12 rounded-lg border border-dashed border-white/10 text-center">
                        <svg class="mx-auto h-12 w-12 text-gray-500" fill="none" stroke="currentColor"
                            viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z">
                            </path>
                        </svg>
                        <h3 class="mt-2 text-sm font-medium text-gray-300">Belum ada informasi</h3>
                        <p class="mt-1 text-sm text-gray-500">Mulai tulis informasi atau hasil musyawarah warga.</p>
                    </div>
                    <% } else { %>
                        <div class="relative border-l-2 border-white/20 ml-3 md:ml-6 space-y-8 pb-12">
                            <% list.forEach(item=> { %>
                                <div class="relative pl-8 md:pl-12 group">
                                    <!-- Timeline Dot -->
                                    <div
                                        class="absolute -left-[9px] top-6 w-5 h-5 rounded-full border-2 border-black shadow-sm ring-2 ring-offset-1 bg-white/20 ring-white/10 z-10 transition-transform group-hover:scale-110">
                                    </div>

                                    <!-- Card -->
                                    <div
                                        class="glass-card rounded-xl p-5 transition hover:bg-white/10 relative overflow-hidden">
                                        <a href="/musyawarah/view/<%= item.id %>" class="block">
                                            <div
                                                class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-3">
                                                <h2
                                                    class="text-xl font-bold text-gray-100 group-hover:text-gray-200 transition-colors">
                                                    <%= item.judul %>
                                                </h2>
                                                <div class="text-sm text-gray-400 flex items-center mt-2 sm:mt-0">
                                                    <svg class="w-4 h-4 mr-1 text-gray-500" fill="none"
                                                        stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round"
                                                            stroke-width="2"
                                                            d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z">
                                                        </path>
                                                    </svg>
                                                    <%= moment(item.tanggal).format('DD MMM YYYY, HH:mm') %>

                                                </div>
                                            </div>

                                            <div class="text-gray-400 text-sm line-clamp-2 md:line-clamp-3 mb-4"
                                                style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; line-clamp: 2;">

                                                <%- item.konten.replace(/<[^>]*>?/gm, '').substring(0, 250) %>...
                                            </div>

                                            <div
                                                class="pt-4 border-t border-white/10 flex items-center justify-between text-xs text-gray-500">
                                                <div class="flex items-center space-x-4">
                                                    <% if(item.lampiran) { %>
                                                        <span
                                                            class="flex items-center text-gray-300 font-medium bg-white/10 px-2 py-1 rounded border border-white/10">
                                                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor"
                                                                viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round"
                                                                    stroke-width="2"
                                                                    d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13">
                                                                </path>
                                                            </svg>
                                                            Lampiran
                                                        </span>
                                                        <% } %>
                                                            <span class="flex items-center text-gray-500">
                                                                <svg class="w-4 h-4 mr-1" fill="none"
                                                                    stroke="currentColor" viewBox="0 0 24 24">
                                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                                        stroke-width="2"
                                                                        d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z">
                                                                    </path>
                                                                </svg>
                                                                <%= item.penulis %>
                                                            </span>
                                                </div>
                                                <span
                                                    class="text-gray-400 hover:text-gray-200 font-medium transition-colors">Baca
                                                    selengkapnya â†’</span>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                                <% }) %>
                        </div>
                        <% } %>
            </div>
        </div>

        <%- include('../partials/footer') %>