<%- include('partials/head') %>
    <%- include('partials/navbar') %>

        <div class="min-h-full flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 flex-grow">
            <div class="max-w-md w-full space-y-8 glass-card p-10 m-4">
                <div>
                    <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-100 drop-shadow-lg">Buat Akun Baru
                    </h2>
                    <p class="mt-2 text-center text-sm text-gray-300">
                        Bergabunglah dengan komunitas Warga Ambyar
                    </p>
                </div>
                <form class="mt-8 space-y-6" action="/auth/register" method="POST">
                    <div class="space-y-4">
                        <div>
                            <label for="username" class="sr-only">Username</label>
                            <input id="username" name="username" type="text" required
                                class="glass-input appearance-none rounded-xl relative block w-full px-4 py-3 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-2 focus:ring-white/50 focus:border-white/50 focus:z-10 sm:text-sm"
                                placeholder="Username">
                        </div>
                        <div>
                            <label for="password" class="sr-only">Password</label>
                            <input id="password" name="password" type="password" required
                                class="glass-input appearance-none rounded-xl relative block w-full px-4 py-3 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-2 focus:ring-white/50 focus:border-white/50 focus:z-10 sm:text-sm"
                                placeholder="Password">
                        </div>
                        <div>
                            <label for="confirm_password" class="sr-only">Konfirmasi Password</label>
                            <input id="confirm_password" name="confirm_password" type="password" required
                                class="glass-input appearance-none rounded-xl relative block w-full px-4 py-3 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-2 focus:ring-white/50 focus:border-white/50 focus:z-10 sm:text-sm"
                                placeholder="Konfirmasi Password">
                        </div>

                        <!-- Data Warga Fields -->
                        <div class="pt-4 pb-2 border-t border-gray-200/30">
                            <h3 class="text-sm font-bold text-gray-200 mb-2 uppercase tracking-wide">Data Warga</h3>
                        </div>

                        <div>
                            <label for="nama" class="sr-only">Nama Lengkap</label>
                            <input id="nama" name="nama" type="text" required
                                class="glass-input appearance-none rounded-xl relative block w-full px-4 py-3 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-2 focus:ring-white/50 focus:border-white/50 focus:z-10 sm:text-sm"
                                placeholder="Nama Lengkap">
                        </div>

                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label for="blok" class="sr-only">Blok</label>
                                <select id="blok" name="blok" required
                                    class="glass-input appearance-none rounded-xl relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm">
                                    <option value="">Pilih Blok</option>
                                    <option value="F7">F7</option>
                                    <option value="F8">F8</option>
                                </select>
                            </div>
                            <div>
                                <label for="nomor_rumah" class="sr-only">Nomor Rumah</label>
                                <select id="nomor_rumah" name="nomor_rumah" required
                                    class="glass-input appearance-none rounded-xl relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm">
                                    <option value="">No Rumah</option>
                                    <% for(let i=1; i<=36; i++) { %>
                                        <option value="<%= i %>">
                                            <%= i %>
                                        </option>
                                        <% } %>
                                </select>
                            </div>
                        </div>

                        <div>
                            <label for="status_keluarga" class="sr-only">Status Keluarga</label>
                            <select id="status_keluarga" name="status_keluarga" required
                                class="glass-input appearance-none rounded-xl relative block w-full px-4 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm">
                                <option value="">Status Keluarga</option>
                                <option value="Kepala Keluarga">Kepala Keluarga</option>
                                <option value="Istri">Istri</option>
                                <option value="Anak">Anak</option>
                                <option value="Famili Lain">Famili Lain</option>
                            </select>
                        </div>

                        <div>
                            <label for="no_hp" class="sr-only">No HP (WhatsApp)</label>
                            <input id="no_hp" name="no_hp" type="text"
                                class="glass-input appearance-none rounded-xl relative block w-full px-4 py-3 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-2 focus:ring-white/50 focus:border-white/50 focus:z-10 sm:text-sm"
                                placeholder="No HP (WhatsApp)">
                        </div>
                    </div>

                    <div>
                        <button type="submit"
                            class="group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-bold rounded-xl text-white bg-gradient-to-r from-indigo-500 to-purple-600 hover:from-indigo-600 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 shadow-lg transform transition hover:-translate-y-0.5">
                            <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                                <svg class="h-5 w-5 text-indigo-300 group-hover:text-indigo-200"
                                    xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                                    aria-hidden="true">
                                    <path fill-rule="evenodd"
                                        d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z"
                                        clip-rule="evenodd" />
                                </svg>
                            </span>
                            Register
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <%- include('partials/footer') %>