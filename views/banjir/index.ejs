            let charts = {};
            let globalData = {};

            async function fetchData() {
                try {
                    const response = await fetch('/banjir/api/data');
                    const json = await response.json();

                    if (!json.success) throw new Error(json.error);

                    const data = json.data;
                    globalData = data; // Store globally for share

                    document.getElementById('lastUpdated').textContent = 'Updated: ' + formatTime(new Date());

                    // Update Tanjungpura
                    updateStationUI('tanjungpura', data.tanjungpura);
                    renderChart('tanjungpura', data.tanjungpura, 8, 11); // Custom Y-axis range for visual clarity

                    // Update Cibeet
                    updateStationUI('cibeet', data.cibeet);
                    renderChart('cibeet', data.cibeet, 10, 14);

                } catch (error) {
                    console.error('Fetch error:', error);
                }
            }

            function updateStationUI(id, data) {
                const el = document.getElementById(`station-${id}`);
                const badges = getStatusColor(data.alert_status);

                // Update Badge
                const statusEl = el.querySelector('.station-status');
                statusEl.className = `station-status px-3 py-1 rounded-full text-xs font-bold border flex items-center gap-1.5 uppercase tracking-wider backdrop-blur-md transition-colors duration-500 ${badges}`;
                statusEl.innerHTML = `
                    <span class="w-1.5 h-1.5 rounded-full bg-current animate-pulse"></span>
                    ${getStatusLabel(data.alert_status)}
                `;

                // Update Metric
                el.querySelector('.tma-value').textContent = data.current_level.toFixed(2);
                el.querySelector('.debit-value').textContent = (data.current_flow || 0).toFixed(2);

                // Update Trend
                el.querySelector('.trend-indicator').innerHTML = getTrendIcon(data.trend);

                // Active Card Border Color based on Status (via class replacement or inline style)
                // We'll trust the generic hover effect for cleanliness, but could enforce border color here.
            }

            function renderChart(id, data, minY, maxY) {
                const options = createChartOptions(id, data.data, data.thresholds, minY, maxY);

                // Destroy existing
                if (charts[id]) {
                    if (charts[id].main) charts[id].main.destroy();
                    if (charts[id].brush) charts[id].brush.destroy();
                }

                // Create new
                const chartMain = new ApexCharts(document.querySelector(`#chart-${id}`), options.main);
                const chartBrush = new ApexCharts(document.querySelector(`#chart-${id}-brush`), options.brush);

                chartMain.render();
                chartBrush.render();

                charts[id] = { main: chartMain, brush: chartBrush };
            }

            // Initial Fetch
            fetchData();

            // Refresh every 5 minutes
            setInterval(fetchData, 300000);

