<%- include('../partials/head') %>
    <%- include('../partials/navbar') %>

        <div class="min-h-full flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 flex-grow">
            <div class="max-w-md w-full space-y-8 glass-card p-10 m-4 relative">
                <!-- Modal-like header -->
                <div class="text-center">
                    <div
                        class="mx-auto h-16 w-16 bg-indigo-500/20 rounded-full flex items-center justify-center text-3xl shadow-sm backdrop-blur-sm mb-4 border border-indigo-500/30">
                        üìù
                    </div>
                    <h2 class="text-3xl font-extrabold text-gray-100 drop-shadow-lg">Lengkapi Profil</h2>
                    <p class="mt-2 text-sm text-gray-300">
                        Halo <strong>
                            <%= user.username %>
                        </strong>! Mohon lengkapi data diri Anda untuk melanjutkan.
                    </p>
                </div>

                <form class="mt-8 space-y-6" action="/auth/complete-profile" method="POST">
                    <div class="space-y-4">
                        <!-- Nama (Pre-filled but editable) -->
                        <div>
                            <label for="nama" class="block text-sm font-medium text-gray-300 mb-1">Nama Lengkap</label>
                            <input id="nama" name="nama" type="text" required value="<%= user.username %>"
                                class="glass-input appearance-none rounded-xl relative block w-full px-4 py-3 placeholder-gray-500 text-gray-100 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                        </div>

                        <!-- Blok & No Rumah -->
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label for="blok" class="block text-sm font-medium text-gray-300 mb-1">Blok</label>
                                <select id="blok" name="blok" required
                                    class="glass-input appearance-none rounded-xl relative block w-full px-4 py-3 text-gray-100 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                                    <option value="" disabled selected>Pilih Blok</option>
                                    <option value="F7">F7</option>
                                    <option value="F8">F8</option>
                                </select>
                            </div>
                            <div>
                                <label for="nomor_rumah" class="block text-sm font-medium text-gray-300 mb-1">No.
                                    Rumah</label>
                                <input id="nomor_rumah" name="nomor_rumah" type="number" required
                                    class="glass-input appearance-none rounded-xl relative block w-full px-4 py-3 placeholder-gray-500 text-gray-100 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                                    placeholder="Contoh: 12">
                            </div>
                        </div>

                        <!-- Status Keluarga -->
                        <div>
                            <label for="status_keluarga" class="block text-sm font-medium text-gray-300 mb-1">Status
                                Keluarga</label>
                            <select id="status_keluarga" name="status_keluarga" required
                                class="glass-input appearance-none rounded-xl relative block w-full px-4 py-3 text-gray-100 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                                <option value="" disabled selected>Pilih Status</option>
                                <option value="Kepala Keluarga">Kepala Keluarga</option>
                                <option value="Istri">Istri</option>
                                <option value="Anak">Anak</option>
                                <option value="Kakek">Kakek</option>
                                <option value="Nenek">Nenek</option>
                                <option value="Lainnya">Lainnya</option>
                            </select>
                        </div>

                        <!-- No HP -->
                        <div>
                            <label for="no_hp" class="block text-sm font-medium text-gray-300 mb-1">Nomor
                                WhatsApp</label>
                            <input id="no_hp" name="no_hp" type="tel" required
                                class="glass-input appearance-none rounded-xl relative block w-full px-4 py-3 placeholder-gray-500 text-gray-100 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                                placeholder="08xxxxxxxxxx">
                        </div>
                    </div>

                    <div>
                        <button type="submit"
                            class="group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-bold rounded-xl text-white bg-gradient-to-r from-indigo-500 to-purple-600 hover:from-indigo-600 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 shadow-lg transform transition hover:-translate-y-0.5">
                            <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                                <svg class="h-5 w-5 text-indigo-300 group-hover:text-indigo-200" fill="none"
                                    stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M5 13l4 4L19 7"></path>
                                </svg>
                            </span>
                            Simpan & Lanjutkan
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <%- include('../partials/footer') %>