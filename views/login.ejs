<%- include('partials/head') %>
    <%- include('partials/navbar') %>

        <div class="min-h-full flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 flex-grow">
            <div class="max-w-md w-full space-y-8 glass-card p-10 m-4">
                <div>
                    <div
                        class="mx-auto h-20 w-20 bg-white/30 rounded-full flex items-center justify-center text-4xl shadow-sm backdrop-blur-sm animate-pulse">
                        âš¡
                    </div>
                    <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-100 drop-shadow-lg">Selamat Datang
                    </h2>
                    <p class="mt-2 text-center text-sm text-gray-300">
                        Sign in ke akun Warga Ambyar
                    </p>
                </div>
                <form class="mt-8 space-y-6" action="/auth/login" method="POST">
                    <input type="hidden" name="remember" value="true">
                    <div class="space-y-4">
                        <div>
                            <label for="username" class="sr-only">Username</label>
                            <input id="username" name="username" type="text" required
                                class="glass-input appearance-none rounded-xl relative block w-full px-4 py-3 placeholder-gray-500 text-gray-100 focus:outline-none focus:ring-2 focus:ring-white/50 focus:border-white/50 focus:z-10 sm:text-sm text-center"
                                placeholder="Username">
                        </div>
                        <div>
                            <label for="password" class="sr-only">Password</label>
                            <input id="password" name="password" type="password" required
                                class="glass-input appearance-none rounded-xl relative block w-full px-4 py-3 placeholder-gray-500 text-gray-100 focus:outline-none focus:ring-2 focus:ring-white/50 focus:border-white/50 focus:z-10 sm:text-sm text-center"
                                placeholder="Password">
                        </div>
                    </div>

                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <input id="remember_me" name="remember_me" type="checkbox"
                                class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded bg-white/50">
                            <label for="remember_me" class="ml-2 block text-sm text-gray-300">
                                Ingat Saya
                            </label>
                        </div>
                    </div>

                    <div>
                        <button type="submit"
                            class="group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-bold rounded-xl text-white bg-gradient-to-r from-indigo-500 to-purple-600 hover:from-indigo-600 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 shadow-lg transform transition hover:-translate-y-0.5">
                            <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                                <svg class="h-5 w-5 text-indigo-300 group-hover:text-indigo-200"
                                    xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                                    aria-hidden="true">
                                    <path fill-rule="evenodd"
                                        d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z"
                                        clip-rule="evenodd" />
                                </svg>
                            </span>
                            Masuk
                        </button>
                    </div>
                </form>
            </div>
