<%- include('partials/head') %>
    <%- include('partials/navbar') %>

        <div class="min-h-full flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 flex-grow">
            <div
                class="max-w-md w-full space-y-8 glass-card p-10 m-4 shadow-[0_0_40px_-5px_rgba(0,0,0,0.1)] hover:shadow-[0_0_40px_-5px_rgba(79,70,229,0.2)] border border-white/40 ring-1 ring-black/5 transition-all duration-300">
                <div>
                    <div class="mx-auto h-24 w-24 relative flex items-center justify-center mb-2">
                        <!-- Peeking Mascot SVG -->
                        <svg id="mascot" viewBox="0 0 120 120" class="w-full h-full drop-shadow-xl overflow-visible">
                            <!-- Body/Head -->
                            <circle cx="60" cy="60" r="50"
                                class="fill-indigo-100 dark:fill-indigo-900 stroke-indigo-500 stroke-2" />
                            <path d="M30,30 L40,15 L50,30 Z" class="fill-indigo-500" /> <!-- Left Ear -->
                            <path d="M70,30 L80,15 L90,30 Z" class="fill-indigo-500" /> <!-- Right Ear -->

                            <!-- Face Group -->
                            <g id="face">
                                <!-- Eyes -->
                                <circle id="eye-l" cx="45" cy="55" r="5"
                                    class="fill-gray-900 dark:fill-white transition-all duration-200" />
                                <circle id="eye-r" cx="75" cy="55" r="5"
                                    class="fill-gray-900 dark:fill-white transition-all duration-200" />
                                <!-- Snouth/Mouth -->
                                <ellipse cx="60" cy="70" rx="10" ry="7" class="fill-white/50" />
                                <path d="M56,68 Q60,75 64,68"
                                    class="fill-none stroke-gray-900 dark:stroke-white stroke-2"
                                    stroke-linecap="round" />
                            </g>

                            <!-- Hands Group (Initially hidden/low) -->
                            <g id="hands" class="transition-all duration-300 transform translate-y-20 opacity-0">
                                <ellipse cx="40" cy="55" rx="12" ry="16"
                                    class="fill-indigo-300 dark:fill-indigo-700 stroke-indigo-500 stroke-2 transform -rotate-15" />
                                <ellipse cx="80" cy="55" rx="12" ry="16"
                                    class="fill-indigo-300 dark:fill-indigo-700 stroke-indigo-500 stroke-2 transform rotate-15" />
                            </g>
                        </svg>
                    </div>
                    <h2
                        class="mt-6 text-center text-3xl font-extrabold text-gray-900 dark:text-gray-100 drop-shadow-lg">
                        Selamat Datang
                    </h2>
                    <p class="mt-2 text-center text-sm text-gray-700 dark:text-gray-300">
                        Sign in ke akun Warga Ambyar
                    </p>
                </div>
                <form class="mt-8 space-y-6" action="/auth/login" method="POST">
                    <input type="hidden" name="remember" value="true">
                    <div class="space-y-4">
                        <div>
                            <label for="username" class="sr-only">Username</label>
                            <input id="username" name="username" type="text" required
                                class="glass-input appearance-none rounded-xl relative block w-full px-4 py-3 placeholder-gray-500 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-white/50 focus:border-white/50 focus:z-10 sm:text-sm text-center"
                                placeholder="Username">
                        </div>
                        <div>
                            <label for="password" class="sr-only">Password</label>
                            <div class="relative">
                                <input id="password" name="password" type="password" required
                                    class="glass-input appearance-none rounded-xl relative block w-full px-4 py-3 placeholder-gray-500 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-white/50 focus:border-white/50 focus:z-10 sm:text-sm text-center pr-10"
                                    placeholder="Password">
                                <button type="button" id="togglePassword"
                                    class="absolute inset-y-0 right-0 pr-3 flex items-center z-20 text-gray-400 hover:text-gray-600 focus:outline-none">
                                    <svg id="icon-eye" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
                                        viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                    </svg>
                                    <svg id="icon-eye-off" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 hidden"
                                        fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M3.98 8.223A10.477 10.477 0 001.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.45 10.45 0 0112 4.5c4.756 0 8.773 3.162 10.065 7.498a10.523 10.523 0 01-4.293 5.774M6.228 6.228L3 3m3.228 3.228l3.65 3.65m7.894 7.894L21 21m-3.228-3.228l-3.65-3.65m0 0a3 3 0 10-4.243-4.243m4.242 4.242L9.88 9.88" />
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <input id="remember_me" name="remember_me" type="checkbox"
                                class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded bg-gray-100 dark:bg-white/50">
                            <label for="remember_me" class="ml-2 block text-sm text-gray-700 dark:text-gray-300">
                                Ingat Saya
                            </label>
                        </div>
                    </div>

                    <div>
                        <button type="submit"
                            class="group relative w-full flex justify-center py-3 px-4 border border-white/20 backdrop-blur-md bg-white/20 hover:bg-white/30 text-sm font-bold rounded-xl text-gray-900 dark:text-gray-100 shadow-lg transform transition-all duration-300 hover:-translate-y-0.5 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-white/50">
                            <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                                <svg class="h-5 w-5 text-gray-700 dark:text-gray-300 group-hover:text-gray-900 dark:group-hover:text-white"
                                    xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                                    aria-hidden="true">
                                    <path fill-rule="evenodd"
                                        d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z"
                                        clip-rule="evenodd" />
                                </svg>
                            </span>
                            Masuk
                        </button>
                    </div>

                    <div class="relative my-6">
                        <div class="absolute inset-0 flex items-center">
                            <div class="w-full border-t border-gray-300/20"></div>
                        </div>
                        <div class="relative flex justify-center text-sm">
                            <span class="px-2 bg-transparent text-gray-600 dark:text-gray-400">Atau masuk dengan</span>
                        </div>
                    </div>

                    <div>
                        <a href="/auth/google"
                            class="group relative w-full flex justify-center py-3 px-4 border border-white/20 text-sm font-bold rounded-xl text-gray-200 bg-gray-200 dark:bg-white/10 hover:bg-white/20 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-white/50 shadow-lg transform transition hover:-translate-y-0.5 items-center gap-2">
                            <svg class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
                                <path
                                    d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
                                    fill="#4285F4" />
                                <path
                                    d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
                                    fill="#34A853" />
                                <path
                                    d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
                                    fill="#FBBC05" />
                                <path
                                    d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
                                    fill="#EA4335" />
                            </svg>
                            Google
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <%- include('partials/footer') %>

            <script>
                const passwordInput = document.getElementById('password');
                const toggleButton = document.getElementById('togglePassword');
                const iconEye = document.getElementById('icon-eye');
                const iconEyeOff = document.getElementById('icon-eye-off');
                const hands = document.getElementById('hands');
                const face = document.getElementById('face');
                const usernameInput = document.getElementById('username');
                const mascot = document.getElementById('mascot');
                const eyeL = document.getElementById('eye-l');
                const eyeR = document.getElementById('eye-r');

                // Helper to set hands state
                function setHandsState(state) {
                    // Clear inline transforms first
                    hands.style.transform = '';

                    // Reset classes
                    hands.classList.remove('translate-y-20', 'opacity-0', 'translate-y-4');

                    if (state === 'hidden') {
                        // Way down and invisible
                        hands.classList.add('translate-y-20', 'opacity-0');
                    } else if (state === 'peek') {
                        // Slightly down (peeking)
                        hands.classList.add('translate-y-4');
                    } else if (state === 'cover') {
                        // Default position (0,0) - fully covering eyes
                        // No extra classes needed as default is 0
                    }
                }

                // Mascot Logic - Focus/Blur
                passwordInput.addEventListener('focus', () => {
                    const type = passwordInput.getAttribute('type');
                    if (type === 'password') {
                        setHandsState('cover');
                        eyeL.setAttribute('cx', '45');
                        eyeR.setAttribute('cx', '75');
                    } else {
                        setHandsState('peek');
                    }
                });

                passwordInput.addEventListener('blur', () => {
                    setHandsState('hidden');
                });

                // Toggle Password
                toggleButton.addEventListener('click', () => {
                    const currentType = passwordInput.getAttribute('type');
                    const newType = currentType === 'password' ? 'text' : 'password';
                    passwordInput.setAttribute('type', newType);

                    // Toggle Icons
                    if (newType === 'text') {
                        iconEye.classList.add('hidden');
                        iconEyeOff.classList.remove('hidden');
                        setHandsState('peek');
                    } else {
                        iconEye.classList.remove('hidden');
                        iconEyeOff.classList.add('hidden');
                        // When hiding password, standard behavior is to cover eyes again
                        setHandsState('cover');
                    }

                    // Keep focus on input after click so interactions continue
                    passwordInput.focus();
                });

                // Username tracking
                usernameInput.addEventListener('input', (e) => {
                    const val = e.target.value.length;
                    const limit = 30;
                    const percentage = Math.min(val / limit, 1);
                    const range = 10;
                    const offset = (percentage * range) - (range / 2);

                    eyeL.setAttribute('cx', 45 + offset);
                    eyeR.setAttribute('cx', 75 + offset);
                });

                usernameInput.addEventListener('blur', () => {
                    eyeL.setAttribute('cx', 45);
                    eyeR.setAttribute('cx', 75);
                });
            </script>