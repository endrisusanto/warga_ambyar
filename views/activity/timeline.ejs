<%- include('../partials/head') %>

    <body class="bg-[#0f1115] font-sans antialiased text-gray-100 flex flex-col min-h-screen">
        <%- include('../partials/navbar') %>

            <!-- Header Section -->
            <div class="mb-8 border-b border-white/10 pb-6">
                <div class="flex justify-between items-center">
                    <h1 class="text-3xl font-bold text-gray-100 flex items-center">
                        <svg class="w-8 h-8 mr-3 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        Cash Flow Log Activity
                    </h1>
                    <div class="text-sm text-gray-400">
                        Total Transaksi: <span class="font-bold text-gray-200">
                            <%= logs ? logs.length : 0 %>
                        </span>
                    </div>
                </div>
            </div>

            <!-- Timeline Content -->
            <div class="w-full">

                <% if(logs && logs.length> 0) { %>
                    <div class="relative border-l-2 border-indigo-500/30 ml-3 md:ml-6 space-y-8 pb-12">

                        <% logs.forEach((log)=> {
                            const isMasuk = log.tipe === 'masuk';
                            const dateStr = moment(log.tanggal).locale('id').format('DD MMMM YYYY');
                            const timeStr = moment(log.tanggal).format('HH:mm');
                            %>
                            <div class="relative pl-8 md:pl-12 group">
                                <!-- Dot -->
                                <div class="absolute -left-[9px] top-6 w-5 h-5 rounded-full border-2 border-white shadow-sm ring-2 ring-offset-1 
                    <%= isMasuk ? 'bg-green-500 ring-green-100' : 'bg-red-500 ring-red-100' %> z-10"></div>

                                <!-- Card -->
                                <div
                                    class="glass-card rounded-xl border border-white/10 p-5 transition hover:bg-white/5 relative overflow-hidden group-hover:border-indigo-500/30">
                                    <!-- Decoration Item -->
                                    <div class="absolute top-0 right-0 w-16 h-16 transform translate-x-8 -translate-y-8 rounded-full opacity-10 
                        <%= isMasuk ? 'bg-emerald-500' : 'bg-red-500' %>"></div>

                                    <div
                                        class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-2 md:mb-1">
                                        <div class="text-sm text-gray-400 font-medium mb-1 sm:mb-0 flex items-center">
                                            <svg class="w-4 h-4 mr-1 text-gray-500" fill="none" stroke="currentColor"
                                                viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z">
                                                </path>
                                            </svg>
                                            <span class="mr-3">
                                                <%= dateStr %>
                                            </span>

                                            <svg class="w-4 h-4 mr-1 text-gray-500" fill="none" stroke="currentColor"
                                                viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                            </svg>
                                            <span
                                                class="text-xs bg-white/10 text-gray-300 px-2 py-0.5 rounded border border-white/5">
                                                <%= timeStr %>
                                            </span>
                                        </div>
                                        <div class="text-xs font-bold uppercase tracking-wider px-2 py-1 rounded border border-white/5
                            <%= isMasuk ? 'bg-emerald-500/20 text-emerald-400' : 'bg-red-500/20 text-red-400' %>">
                                            <%= log.tipe %>
                                        </div>
                                    </div>

                                    <div class="flex items-end justify-between mt-2">
                                        <div class="flex-grow">
                                            <h3
                                                class="text-xl font-bold <%= isMasuk ? 'text-emerald-400' : 'text-red-400' %>">
                                                <%= isMasuk ? '+' : '-' %>
                                                    <%= new Intl.NumberFormat('id-ID', { style: 'currency' ,
                                                        currency: 'IDR' , minimumFractionDigits: 0,
                                                        maximumFractionDigits: 0 }).format(Number(log.jumlah)) %>
                                            </h3>
                                            <p class="text-gray-300 text-base mt-1 font-medium">
                                                <%= log.keterangan || 'Tidak ada keterangan' %>
                                            </p>
                                        </div>
                                        <% if(log.bukti_foto) { let proofPath=log.bukti_foto.startsWith('bukti_bayar-')
                                            ? '/uploads/' + log.bukti_foto : '/uploads/keuangan/' + log.bukti_foto; %>
                                            <div class="ml-4 flex-shrink-0">
                                                <img src="<%= proofPath %>" alt="Bukti"
                                                    onclick="openBuktiModal('<%= proofPath %>', '<%= log.bukti_foto %>')"
                                                    class="w-16 h-16 rounded-lg object-cover cursor-pointer hover:opacity-80 border border-white/10 transition-opacity bg-black/20">
                                            </div>
                                            <% } %>
                                    </div>
                                </div>
                            </div>
                            <% }) %>

                    </div>
                    <% } else { %>
                        <div
                            class="text-center py-12 glass-card rounded-xl border-2 border-dashed border-white/20 mt-8">
                            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24"
                                stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                            </svg>
                            <h3 class="mt-2 text-sm font-medium text-gray-200">Belum ada aktivitas</h3>
                            <p class="mt-1 text-sm text-gray-400">Mulai catat pemasukan atau pengeluaran.</p>
                        </div>
                        <% } %>

            </div>

            </div>

            <!-- Bukti Image Modal -->
            <div id="buktiModal" class="fixed z-50 inset-0 overflow-y-auto hidden" aria-labelledby="modal-title"
                role="dialog" aria-modal="true">
                <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
                    <div class="fixed inset-0 bg-black/80 transition-opacity backdrop-blur-sm" aria-hidden="true"
                        onclick="closeBuktiModal()"></div>
                    <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
                    <div
                        class="inline-block align-bottom glass-card rounded-xl text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg w-full border border-white/10">
                        <div class="px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                            <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
                                <h3 class="text-lg leading-6 font-bold text-gray-100" id="modal-title">Bukti Transaksi
                                </h3>
                                <div class="mt-4 flex justify-center bg-black/20 rounded-lg p-2">
                                    <img id="buktiImage" src="" alt="Bukti"
                                        class="max-h-[60vh] w-auto rounded-md object-contain">
                                </div>
                                <div id="proofDetails" class="mt-4">
                                    <h4 class="text-sm font-bold text-indigo-400 mb-2">Transaksi Terkait:</h4>
                                    <div class="bg-black/20 rounded-lg p-3 max-h-40 overflow-y-auto custom-scrollbar space-y-2"
                                        id="proofTransactionsList">
                                        <!-- List populated by JS -->
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="bg-white/5 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse border-t border-white/10">
                            <button type="button" onclick="closeBuktiModal()"
                                class="w-full inline-flex justify-center rounded-lg border border-white/10 shadow-sm px-4 py-2 bg-white/10 text-base font-medium text-gray-200 hover:bg-white/20 focus:outline-none sm:ml-3 sm:w-auto sm:text-sm transition-colors">
                                Tutup
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <script>
                function openBuktiModal(src, filename) {
                    document.getElementById('buktiImage').src = src;

                    // Populate related transactions
                    const listContainer = document.getElementById('proofTransactionsList');
                    listContainer.innerHTML = '';

                    try {
                        const rawLogs = document.getElementById('logsData').getAttribute('data-logs');
                        const logs = JSON.parse(rawLogs);

                        const related = logs.filter(l => l.bukti_foto === filename);

                        if (related.length > 0) {
                            let total = 0;
                            related.forEach(l => {
                                const amount = parseInt(l.jumlah);
                                total += (l.tipe === 'masuk' ? amount : -amount);
                                const date = new Date(l.tanggal).toLocaleDateString('id-ID', { day: 'numeric', month: 'short', year: 'numeric' });

                                const div = document.createElement('div');
                                div.className = 'flex justify-between items-start text-xs border-b border-white/5 pb-1 last:border-0';
                                div.innerHTML = `
                                <div class="text-gray-300">
                                    <span class="text-gray-500 mr-2">${date}</span>
                                    ${l.keterangan || '-'}
                                </div>
                                <div class="font-bold ${l.tipe === 'masuk' ? 'text-emerald-400' : 'text-red-400'}">
                                    ${l.tipe === 'masuk' ? '+' : '-'} Rp ${amount.toLocaleString('id-ID')}
                                </div>
                            `;
                                listContainer.appendChild(div);
                            });

                            if (related.length > 1) {
                                const totalDiv = document.createElement('div');
                                totalDiv.className = 'flex justify-between items-center text-sm font-bold pt-2 border-t border-white/10 mt-1';
                                totalDiv.innerHTML = `
                                <span class="text-gray-200">Total</span>
                                <span class="${total >= 0 ? 'text-emerald-400' : 'text-red-400'}">Rp ${total.toLocaleString('id-ID')}</span>
                            `;
                                listContainer.appendChild(totalDiv);
                            }
                        } else {
                            listContainer.innerHTML = '<p class="text-xs text-gray-500 italic">Tidak ada data transaksi terkait.</p>';
                        }
                    } catch (e) {
                        console.error("Error parsing logs", e);
                    }

                    document.getElementById('buktiModal').classList.remove('hidden');
                }

                function closeBuktiModal() {
                    document.getElementById('buktiModal').classList.add('hidden');
                }
            </script>

            <%- include('../partials/footer') %>
                <div id="logsData" data-logs="<%= JSON.stringify(logs) %>" class="hidden"></div>