<%- include('../partials/head') %>
    <%- include('../partials/navbar') %>

        <div class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">

            <!-- Header Section -->
            <div class="mb-8">
                <h1
                    class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-indigo-400 to-cyan-400">
                    Profile Saya</h1>
                <p class="text-gray-400 text-sm mt-1">Kelola informasi pribadi dan keamanan akun Anda.</p>
            </div>

            <!-- Notifications -->
            <% if(success) { %>
                <div
                    class="bg-emerald-500/10 border border-emerald-500/20 text-emerald-400 px-4 py-3 rounded-xl relative mb-6 backdrop-blur-sm flex items-center gap-3">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Profile berhasil diupdate!
                </div>
                <% } %>

                    <% if(password_changed) { %>
                        <div
                            class="bg-emerald-500/10 border border-emerald-500/20 text-emerald-400 px-4 py-3 rounded-xl relative mb-6 backdrop-blur-sm flex items-center gap-3">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            Password berhasil diubah!
                        </div>
                        <% } %>

                            <!-- Bento Grid Layout -->
                            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">

                                <!-- Card 1: Profile Summary (Spans 1 col on desktop) -->
                                <div
                                    class="glass-card p-6 flex flex-col items-center text-center md:col-span-1 relative overflow-hidden group">
                                    <div
                                        class="absolute inset-0 bg-gradient-to-b from-indigo-500/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500">
                                    </div>

                                    <div class="relative z-10">
                                        <div
                                            class="w-32 h-32 rounded-full p-1 bg-gradient-to-tr from-indigo-500 to-cyan-500 mb-4 mx-auto">
                                            <div
                                                class="w-full h-full rounded-full overflow-hidden bg-gray-900 border-4 border-gray-900">
                                                <% let currentPhoto=warga ? warga.foto_profil : null; let
                                                    googlePhoto=userData ? userData.profile_photo_url : null; %>
                                                    <% if(currentPhoto) { %>
                                                        <img class="h-full w-full object-cover"
                                                            src="/uploads/profiles/<%= currentPhoto %>" alt="Profile">
                                                        <% } else if (googlePhoto) { %>
                                                            <img class="h-full w-full object-cover"
                                                                src="<%= googlePhoto %>" alt="Profile">
                                                            <% } else { %>
                                                                <div
                                                                    class="h-full w-full flex items-center justify-center bg-gray-800 text-gray-500">
                                                                    <svg class="w-16 h-16" fill="currentColor"
                                                                        viewBox="0 0 24 24">
                                                                        <path
                                                                            d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z" />
                                                                    </svg>
                                                                </div>
                                                                <% } %>
                                            </div>
                                        </div>

                                        <h2 class="text-xl font-bold text-white mb-1">
                                            <%= warga ? warga.nama : (userData ? userData.nama || userData.username
                                                : 'User' ) %>
                                        </h2>
                                        <p class="text-indigo-400 text-sm font-medium mb-4">
                                            <%= userData.role.charAt(0).toUpperCase() + userData.role.slice(1) %>
                                        </p>

                                        <% if(warga) { %>
                                            <div class="flex flex-wrap justify-center gap-2 mt-2">
                                                <span
                                                    class="px-3 py-1 rounded-full bg-white/5 border border-white/10 text-xs text-gray-300">
                                                    Blok <%= warga.blok %>-<%= warga.nomor_rumah %>
                                                </span>
                                                <span
                                                    class="px-3 py-1 rounded-full bg-white/5 border border-white/10 text-xs text-gray-300">
                                                    Tim <%= warga.tim_ronda || '-' %>
                                                </span>
                                            </div>
                                            <% } %>
                                    </div>
                                </div>

                                <!-- Card 2: Edit Profile Form (Spans 2 cols on desktop) -->
                                <div class="glass-card p-6 md:col-span-2 relative overflow-hidden">
                                    <div class="flex items-center justify-between mb-6">
                                        <h3 class="text-lg font-bold text-white flex items-center gap-2">
                                            <svg class="w-5 h-5 text-indigo-400" fill="none" stroke="currentColor"
                                                viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z">
                                                </path>
                                            </svg>
                                            Edit Informasi
                                        </h3>
                                    </div>

                                    <form action="/profile" method="POST" enctype="multipart/form-data"
                                        class="space-y-6">
                                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                            <!-- Name Input -->
                                            <div class="col-span-2 md:col-span-1">
                                                <label
                                                    class="block text-xs font-medium text-gray-400 mb-2 uppercase tracking-wider">Nama
                                                    Lengkap</label>
                                                <input type="text" name="nama"
                                                    value="<%= warga ? warga.nama : (userData ? userData.nama || userData.username : '') %>"
                                                    class="glass-input w-full rounded-xl px-4 py-3 text-sm focus:ring-2 focus:ring-indigo-500/50 transition-all">
                                            </div>

                                            <!-- Photo Input -->
                                            <!-- Photo Input -->
                                            <div class="col-span-2 md:col-span-1">
                                                <label
                                                    class="block text-xs font-medium text-gray-400 mb-2 uppercase tracking-wider">Foto
                                                    Profile</label>
                                                <div class="relative">
                                                    <input type="file" name="foto_profil" id="foto_profil"
                                                        class="hidden" accept="image/*" onchange="previewImage(this)">
                                                    <label for="foto_profil"
                                                        class="glass-input w-full rounded-xl px-4 py-3 text-sm flex items-center justify-between cursor-pointer hover:bg-white/5 transition-all group">
                                                        <span class="text-gray-400 group-hover:text-indigo-300 truncate"
                                                            id="file-name">Klik untuk upload foto baru</span>
                                                        <svg class="h-5 w-5 text-gray-400 group-hover:text-indigo-400"
                                                            fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                                stroke-width="2"
                                                                d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12">
                                                            </path>
                                                        </svg>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="pt-4 border-t border-white/5 flex justify-end">
                                            <button type="submit"
                                                class="bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-2.5 rounded-xl font-bold text-sm shadow-lg shadow-indigo-600/20 transition-all flex items-center gap-2">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor"
                                                    viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                        stroke-width="2" d="M5 13l4 4L19 7"></path>
                                                </svg>
                                                Simpan Perubahan
                                            </button>
                                        </div>
                                    </form>
                                </div>

                                <!-- Card 3: Security (Spans 2 cols on desktop) -->
                                <div class="glass-card p-6 md:col-span-2 relative overflow-hidden">
                                    <div class="flex items-center justify-between mb-6">
                                        <h3 class="text-lg font-bold text-white flex items-center gap-2">
                                            <svg class="w-5 h-5 text-emerald-400" fill="none" stroke="currentColor"
                                                viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z">
                                                </path>
                                            </svg>
                                            Keamanan Akun
                                        </h3>
                                    </div>

                                    <form action="/profile/change-password" method="POST" class="space-y-4">
                                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                                            <div>
                                                <label
                                                    class="block text-xs font-medium text-gray-400 mb-2 uppercase tracking-wider">Password
                                                    Lama</label>
                                                <input type="password" name="current_password" required
                                                    class="glass-input w-full rounded-xl px-4 py-2.5 text-sm">
                                            </div>
                                            <div>
                                                <label
                                                    class="block text-xs font-medium text-gray-400 mb-2 uppercase tracking-wider">Password
                                                    Baru</label>
                                                <input type="password" name="new_password" required minlength="6"
                                                    class="glass-input w-full rounded-xl px-4 py-2.5 text-sm">
                                            </div>
                                            <div>
                                                <label
                                                    class="block text-xs font-medium text-gray-400 mb-2 uppercase tracking-wider">Konfirmasi</label>
                                                <input type="password" name="confirm_password" required minlength="6"
                                                    class="glass-input w-full rounded-xl px-4 py-2.5 text-sm">
                                            </div>
                                        </div>

                                        <div class="pt-4 flex justify-end">
                                            <button type="submit"
                                                class="bg-white/5 hover:bg-white/10 border border-white/10 text-gray-300 hover:text-white px-6 py-2.5 rounded-xl font-bold text-sm transition-all flex items-center gap-2">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor"
                                                    viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15">
                                                    </path>
                                                </svg>
                                                Update Password
                                            </button>
                                        </div>
                                    </form>
                                </div>

                                <!-- Card 4: Logout (Spans 1 col on desktop) -->
                                <div
                                    class="glass-card p-6 md:col-span-1 flex flex-col justify-center relative overflow-hidden bg-red-500/5 border-red-500/20">
                                    <h3 class="text-lg font-bold text-red-400 mb-2 flex items-center gap-2">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1">
                                            </path>
                                        </svg>
                                        Keluar Sesi
                                    </h3>
                                    <p class="text-sm text-gray-400 mb-6">Akhiri sesi Anda saat ini dengan aman.</p>

                                    <form action="/auth/logout" method="POST" class="mt-auto">
                                        <button type="submit"
                                            class="w-full bg-red-500/10 hover:bg-red-500/20 border border-red-500/30 text-red-400 px-4 py-3 rounded-xl font-bold text-sm transition-all flex items-center justify-center gap-2 group">
                                            <span>Logout Sekarang</span>
                                            <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform"
                                                fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1">
                                                </path>
                                            </svg>
                                        </button>
                                    </form>
                                </div>

                            </div>
        </div>

        <script>
            function previewImage(input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        // Find the image in the first card to update preview immediately
                        const profileImg = document.querySelector('.glass-card img');
                        if (profileImg) {
                            profileImg.src = e.target.result;
                        }

                        // Update file name text
                        const fileNameSpan = document.getElementById('file-name');
                        if (fileNameSpan) {
                            fileNameSpan.textContent = input.files[0].name;
                            fileNameSpan.classList.remove('text-gray-400');
                            fileNameSpan.classList.add('text-indigo-300');
                        }
                    }
                    reader.readAsDataURL(input.files[0]);
                }
            }
        </script>

        <%- include('../partials/footer') %>