<%- include('../partials/head') %>
    <%- include('../partials/navbar', { useWideContainer: true, user: user }) %>

        <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
            <div class="px-4 py-6 sm:px-0">
                <div class="flex flex-col md:flex-row justify-between items-center mb-6 gap-4">
                    <div class="flex items-center space-x-4">
                        <a href="/ronda" class="text-gray-600 dark:text-gray-400 hover:text-gray-200 transition-colors">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                            </svg>
                        </a>
                        <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 flex items-center gap-3">
                            <span class="text-4xl">üìã</span>
                            Control Absensi Ronda
                        </h1>
                    </div>
<script src="https://cdn.jsdelivr.net/npm/qrcode@1.5.1/build/qrcode.min.js"></script>

                    <div class="flex flex-wrap justify-end gap-3">
                        <!-- Export Button Wrapper -->
                        <div class="glass-card p-3 flex items-center">
                            <a href="/ronda/export-control?year=<%= year %>"
                                class="flex items-center gap-2 px-3 py-2 text-sm font-bold text-green-600 dark:text-green-400 bg-green-50 dark:bg-green-900/20 rounded-lg hover:bg-green-100 dark:hover:bg-green-900/30 transition-colors">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                                </svg>
                                Export Excel
                            </a>
                        </div>

                        <div class="glass-card p-3 flex items-center space-x-2">
                            <% let prevM=parseInt(month) - 1; let prevY=parseInt(year); if(prevM===0) { prevM=12; prevY--; }
                                let nextM=parseInt(month) + 1; let nextY=parseInt(year); if(nextM===13) { nextM=1; nextY++;
                                } %>
    
                                <a href="/ronda/control?month=<%= prevM %>&year=<%= prevY %>"
                                    class="p-2 bg-gray-100 dark:bg-white/10 hover:bg-gray-200 dark:hover:bg-white/20 rounded-lg text-gray-600 dark:text-gray-300 transition-colors">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M15 19l-7-7 7-7"></path>
                                    </svg>
                                </a>
    
                                <form method="GET" class="flex space-x-2">
                                    <select name="month" onchange="this.form.submit()"
                                        class="glass-input block w-full px-3 py-2 text-sm text-gray-900 dark:text-gray-100 rounded-xl cursor-pointer">
                                        <% moment.months().forEach((m, i)=> { %>
                                            <option value="<%= String(i + 1).padStart(2, '0') %>" <%=parseInt(month)===i + 1
                                                ? 'selected' : '' %>><%= m %>
                                            </option>
                                            <% }) %>
                                    </select>
                                    <select name="year" onchange="this.form.submit()"
                                        class="glass-input block w-full px-3 py-2 text-sm text-gray-900 dark:text-gray-100 rounded-xl cursor-pointer">
                                        <% for(let y=2024; y <=2030; y++) { %>
                                            <option value="<%= y %>" <%=parseInt(year)===y ? 'selected' : '' %>><%= y %>
                                            </option>
                                            <% } %>
                                    </select>
                                </form>
                                <a href="/ronda/control?month=<%= nextM %>&year=<%= nextY %>"
                                    class="p-2 bg-gray-100 dark:bg-white/10 hover:bg-gray-200 dark:hover:bg-white/20 rounded-lg text-gray-600 dark:text-gray-300 transition-colors">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M9 5l7 7-7 7"></path>
                                    </svg>
                                </a>
                        </div>
                    </div>
                </div>

                <div class="glass-card p-0 overflow-hidden m-4">
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-white/10">
                            <thead class="bg-gray-100 dark:bg-white/5 backdrop-blur-xl">
                                <tr>
                                    <th scope="col"
                                        class="px-6 py-3 text-left text-xs font-medium text-gray-700 dark:text-gray-300 uppercase tracking-wider sticky left-0 bg-gray-200 dark:bg-white/10 backdrop-blur-xl z-10 border-r border-white/10">
                                        Warga
                                    </th>
                                    <% 
                                    // Determine active Saturday (current week's Saturday)
                                    const now = moment();
                                    const currentDay = now.day();
                                    const currentHour = now.hour();
                                    let activeSaturday = null;
                                    
                                    // If it's Sunday before 6 AM, the active Saturday is yesterday
                                    if (currentDay === 0 && currentHour < 6) {
                                        activeSaturday = now.clone().subtract(1, 'days').format('YYYY-MM-DD');
                                    } else {
                                        // Find the Saturday of the current week
                                        const startOfWeek = now.clone().startOf('week');
                                        activeSaturday = startOfWeek.clone().add(6, 'days').format('YYYY-MM-DD');
                                    }
                                    
                                    saturdays.forEach(d=> { 
                                        const isActive = d === activeSaturday;
                                    %>
                                        <th scope="col"
                                            class="px-6 py-3 text-center text-xs font-medium <%= isActive ? 'bg-indigo-100 dark:bg-indigo-900/30 text-indigo-900 dark:text-indigo-200 border-x-2 border-indigo-400' : 'text-gray-700 dark:text-gray-300' %> uppercase tracking-wider">
                                            <%= moment(d).format('DD MMM') %>
                                            <% if (isActive) { %>
                                                <div class="text-[10px] font-bold text-indigo-600 dark:text-indigo-300 mt-0.5">‚óè AKTIF</div>
                                            <% } %>
                                        </th>
                                        <% }) %>
                                </tr>
                            </thead>
                            <tbody class="bg-gray-100 dark:bg-white/5 backdrop-blur-xl divide-y divide-white/10">
                                <% Object.keys(matrix).forEach(wId=> {
                                    const row = matrix[wId];
                                    %>
                                    <tr class="hover:bg-gray-200 dark:bg-white/10 transition-colors">
                                        <td
                                            class="px-6 py-4 whitespace-nowrap sticky left-0 bg-gray-200 dark:bg-white/10 backdrop-blur-xl z-10 border-r border-white/10">
                                            <div class="flex items-center">
                                                <div>
                                                    <div class="text-sm font-medium text-gray-900 dark:text-gray-100">
                                                        <%= row.info.nama %>
                                                    </div>
                                                    <div class="text-xs text-gray-600 dark:text-gray-400">
                                                        Blok <%= row.info.blok %>-<%= row.info.nomor_rumah %>
                                                                <span
                                                                    class="ml-1 inline-flex items-center px-2 py-0.5 rounded text-[10px] font-medium bg-indigo-500/20 text-indigo-300 border border-indigo-400/30">
                                                                    Tim <%= row.info.tim_ronda || '-' %>
                                                                </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <% 
                                            saturdays.forEach((d, satIndex)=> {
                                            const cell = row.dates[d];
                                            const isActiveColumn = d === activeSaturday;
                                            
                                            let tdClasses = "px-6 py-4 whitespace-nowrap text-center text-sm relative ";
                                            
                                            // Active column highlighting
                                            if (isActiveColumn) {
                                                tdClasses += "bg-indigo-50 dark:bg-indigo-900/20 border-x-2 border-indigo-400 ";
                                            }
                                        %>
                                                    <td class="<%= tdClasses %>">
                                                        <div
                                                            class="relative z-10 inline-flex flex-col items-center justify-center w-full h-full">
                                                            <% if (cell.status) { %>
    <span 
        data-schedule-id="<%= cell.id %>"
        data-status="<%= cell.status %>"
        data-nama="<%= row.info.nama %>"
        data-date="<%= moment(d).format('DD MMM YYYY') %>"
        data-keterangan="<%= cell.keterangan || '' %>"
        onclick="openStatusModal(this.dataset.scheduleId, this.dataset.status, this.dataset.nama, this.dataset.date, this.dataset.keterangan)"
        class="cursor-pointer hover:ring-2 hover:ring-indigo-400 hover:scale-105 transition-all px-2 py-1 rounded text-xs font-bold uppercase mb-1 <%= cell.status === 'hadir' ? 'bg-green-100 text-green-800' : (cell.status === 'izin' ? 'bg-yellow-100 text-yellow-800' : (cell.status === 'alpa' ? 'bg-red-500 text-white' : (cell.status === 'reschedule' ? 'bg-blue-100 text-blue-800' : 'bg-gray-100 text-gray-800'))) %>"
        title="Klik untuk ubah status">
        <%= cell.status %>
    </span>
<% } else if (cell.id) { %>
     <span 
        data-schedule-id="<%= cell.id %>"
        data-status="scheduled"
        data-nama="<%= row.info.nama %>"
        data-date="<%= moment(d).format('DD MMM YYYY') %>"
        data-keterangan=""
        onclick="openStatusModal(this.dataset.scheduleId, this.dataset.status, this.dataset.nama, this.dataset.date, this.dataset.keterangan)"
        class="cursor-pointer hover:bg-gray-200 transition-colors px-2 py-1 rounded text-xs font-bold text-gray-400 uppercase mb-1">
        -
    </span>
<% } %>
<% if (cell.denda > 0) { %>
    <% if (cell.status_bayar === 'paid') { %>
        <span class="inline-flex items-center px-1.5 py-0.5 rounded text-[10px] font-bold bg-green-100 text-green-700 border border-green-200 mt-1 cursor-default">
            ‚úì Lunas
        </span>
    <% } else { %>
        <span onclick="event.stopPropagation(); openQrisPayModal('<%= cell.id %>', '<%= cell.denda %>', '<%= row.info.nama %>')" 
              class="inline-flex items-center px-1.5 py-0.5 rounded text-[10px] font-bold bg-red-100 text-red-700 border border-red-200 mt-1 cursor-pointer hover:bg-red-200 hover:scale-105 transition-all shadow-sm">
            üí∏ Bayar
        </span>
    <% } %>
<% } %>
                                                        </div>
                                                    </td>
                                                    <% }) %>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>

                    <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
                        <div class="text-xs text-gray-500">
                            <strong>Aturan Denda:</strong> Warga yang tidak hadir jadwal ronda dan tidak melakukan
                            reschedule sampai 4 jadwal ronda berikutnya akan dikenakan sanksi denda.
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pay Fine Modal -->
        <div id="payFineModal" class="fixed inset-0 bg-black/60 hidden overflow-y-auto h-full w-full z-50 backdrop-blur-sm">
            <div class="relative top-20 mx-auto p-6 glass-card w-full max-w-md shadow-2xl">
                <h3 class="text-lg font-bold text-gray-900 dark:text-gray-100 mb-6 flex items-center gap-2">
                    <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    Bayar Denda Ronda
                </h3>
                <form action="/ronda/update-fine-status" method="POST">
                    <input type="hidden" id="fineIds" name="ids">
                    <div class="mb-5">
                        <label class="block text-xs font-bold text-gray-600 dark:text-gray-400 uppercase tracking-wider mb-2">Nama Warga</label>
                        <div id="fineWargaName" class="text-gray-900 dark:text-gray-100 font-bold bg-gray-100 dark:bg-white/5 p-3 rounded-xl border border-white/10"></div>
                    </div>
                    <div class="mb-5">
                         <label class="block text-xs font-bold text-gray-600 dark:text-gray-400 uppercase tracking-wider mb-2">Total Tagihan</label>
                        <div class="text-2xl font-bold text-red-500" id="fineAmountDisplay"></div>
                    </div>
                    <div class="mb-6 bg-yellow-50 dark:bg-yellow-900/20 p-4 rounded-xl border border-yellow-200 dark:border-yellow-700/30">
                        <p class="text-sm text-yellow-800 dark:text-yellow-200">
                            <strong>Konfirmasi:</strong> Apakah Anda yakin ingin menandai denda ini sebagai <strong>LUNAS</strong>? Data akan dicatat di Kas.
                        </p>
                    </div>
                    <div class="flex justify-end gap-3">
                        <button type="button" onclick="document.getElementById('payFineModal').classList.add('hidden')"
                            class="px-6 py-2.5 rounded-xl text-sm font-bold text-gray-600 dark:text-gray-400 hover:text-gray-200 transition-colors">
                            Batal
                        </button>
                        <button type="submit"
                            class="bg-green-600 hover:bg-green-700 text-white px-8 py-2.5 rounded-xl font-bold shadow-lg transition-all">
                            Bayar & Lunas
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Status Modal -->
        <div id="statusModal" class="fixed inset-0 bg-black/60 hidden overflow-y-auto h-full w-full z-50 backdrop-blur-sm">
            <div class="relative top-20 mx-auto p-6 glass-card w-full max-w-md shadow-2xl">
                <h3 class="text-lg font-bold text-gray-900 dark:text-gray-100 mb-6 flex items-center gap-2">
                    <svg class="w-5 h-5 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
                    </svg>
                    Ubah Status Absensi
                </h3>
                <form action="/ronda/update-status" method="POST">
                    <input type="hidden" id="statusScheduleId" name="id">
                    <input type="hidden" name="redirectUrl" value="/ronda/control?month=<%= month %>&year=<%= year %>">
                    
                    <div class="mb-4">
                        <label class="block text-xs font-bold text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-1">Nama Warga</label>
                        <div id="statusWargaName" class="text-base font-bold text-gray-900 dark:text-gray-100"></div>
                        <div id="statusDateLabel" class="text-xs text-indigo-500 font-medium"></div>
                    </div>

                    <div class="mb-5">
                        <label class="block text-xs font-bold text-gray-600 dark:text-gray-400 uppercase tracking-wider mb-2">Status Kehadiran</label>
                        <select name="status" id="statusSelect" class="glass-input block w-full rounded-xl p-3 outline-none cursor-pointer text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-indigo-500">
                            <option value="scheduled" class="bg-gray-100 dark:bg-gray-800 text-gray-900 dark:text-gray-100">Scheduled (Reset)</option>
                            <option value="hadir" class="bg-gray-100 dark:bg-gray-800 text-gray-900 dark:text-gray-100">Hadir</option>
                            <option value="alpa" class="bg-gray-100 dark:bg-gray-800 text-gray-900 dark:text-gray-100">Alpa (Denda)</option>
                            <option value="reschedule" class="bg-gray-100 dark:bg-gray-800 text-gray-900 dark:text-gray-100">Reschedule</option>
                        </select>
                    </div>
                    
                    <div class="mb-6">
                        <label class="block text-xs font-bold text-gray-600 dark:text-gray-400 uppercase tracking-wider mb-2">Keterangan</label>
                        <textarea name="keterangan" id="statusKeterangan" rows="3" placeholder="Tambahkan catatan jika diperlukan..." class="glass-input block w-full rounded-xl p-3 outline-none resize-none text-gray-900 dark:text-gray-100 focus:ring-2 focus:ring-indigo-500"></textarea>
                    </div>

                    <div class="flex justify-end gap-3 pt-4 border-t border-gray-100 dark:border-white/10">
                        <button type="button" onclick="document.getElementById('statusModal').classList.add('hidden')" class="px-5 py-2.5 rounded-xl text-sm font-bold text-gray-600 dark:text-gray-400 hover:text-gray-800 hover:bg-gray-100 dark:hover:bg-white/10 transition-colors">Batal</button>
                        <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-2.5 rounded-xl font-bold shadow-lg transition-all transform hover:scale-[1.02]">Simpan Perubahan</button>
                    </div>
                </form>
            </div>
        </div>

        <script>
            function openStatusModal(id, currentStatus, name, date, keterangan) {
                document.getElementById('statusScheduleId').value = id;
                document.getElementById('statusWargaName').textContent = name;
                document.getElementById('statusDateLabel').textContent = date;
                document.getElementById('statusSelect').value = currentStatus && currentStatus !== '' ? currentStatus : 'scheduled';
                document.getElementById('statusKeterangan').value = keterangan || '';
                document.getElementById('statusModal').classList.remove('hidden');
            }

            function openPayFineModal(ids, amount, name) {
                document.getElementById('fineIds').value = ids;
                document.getElementById('fineAmountDisplay').textContent = 'Rp ' + parseInt(amount).toLocaleString('id-ID');
                document.getElementById('fineWargaName').textContent = name;
                document.getElementById('payFineModal').classList.remove('hidden');
            }
            
            function openQrisPayModal(id, denda, name) {
                document.getElementById('qrisFineId').value = id;
                document.getElementById('qrisAmountDisplay').innerText = 'Rp ' + parseInt(denda).toLocaleString('id-ID');
                document.getElementById('qrisModal').classList.remove('hidden');

                // Generate QRIS
                const qrisData = "<%= typeof staticQris !== 'undefined' ? staticQris : '' %>" + id;
                const canvas = document.getElementById('qrisCanvas');
                
                // Clear previous
                const context = canvas.getContext('2d');
                context.clearRect(0, 0, canvas.width, canvas.height);

                QRCode.toCanvas(canvas, qrisData, { width: 200, margin: 2 }, function (error) {
                    if (error) console.error(error);
                });
            }
        </script>

        <!-- QRIS Pay Modal -->
        <div id="qrisModal" class="fixed inset-0 z-[10000] hidden overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
            <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
                <div class="fixed inset-0 bg-gray-900 bg-opacity-75 transition-opacity" aria-hidden="true" onclick="document.getElementById('qrisModal').classList.add('hidden')"></div>
                <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
                <div class="inline-block align-bottom bg-white dark:bg-gray-800 rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full border border-gray-200 dark:border-gray-700">
                    <div class="px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                        <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-gray-100" id="modal-title">Bayar Denda Ronda</h3>
                        <div class="mt-4 text-center">
                            <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">Scan QRIS di bawah ini untuk membayar denda sebesar <span class="font-bold text-red-500" id="qrisAmountDisplay"></span></p>
                            <div class="flex justify-center bg-white p-4 rounded-xl mx-auto w-fit border border-gray-200">
                                <canvas id="qrisCanvas"></canvas>
                            </div>
                        </div>
                        <form action="/ronda/pay-fine-upload" method="POST" enctype="multipart/form-data" class="mt-4">
                            <input type="hidden" name="id" id="qrisFineId">
                            <input type="hidden" name="redirectUrl" value="/ronda/control?month=<%= month %>&year=<%= year %>">
                            <div class="mb-4">
                                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Upload Bukti Transfer</label>
                                <input type="file" name="foto_bukti" accept="image/*" required class="w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100">
                            </div>
                            <div class="mt-5 sm:mt-6 sm:grid sm:grid-cols-2 sm:gap-3 sm:grid-flow-row-dense">
                                <button type="submit" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-indigo-600 text-base font-medium text-white hover:bg-indigo-700 focus:outline-none sm:col-start-2 sm:text-sm">
                                    Kirim Bukti
                                </button>
                                <button type="button" onclick="document.getElementById('qrisModal').classList.add('hidden')" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none sm:mt-0 sm:col-start-1 sm:text-sm">
                                    Batal
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <%- include('../partials/footer') %>