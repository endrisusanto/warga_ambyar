<%- include('../partials/head') %>
    <%- include('../partials/navbar', { useWideContainer: true }) %>

        <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
            <div class="px-4 py-6 sm:px-0">
                <div class="flex flex-col md:flex-row justify-between items-center mb-6 gap-4">
                    <div class="flex items-center space-x-4">
                        <a href="/ronda" class="text-gray-600 dark:text-gray-400 hover:text-gray-200 transition-colors">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                            </svg>
                        </a>
                        <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 flex items-center gap-3">
                            <span class="text-4xl">ðŸ“‹</span>
                            Control Absensi Ronda
                        </h1>
                    </div>

                    <div class="glass-card p-3 flex items-center space-x-2">
                        <% let prevM=parseInt(month) - 1; let prevY=parseInt(year); if (prevM===0) { prevM=12; prevY--;
                            } let nextM=parseInt(month) + 1; let nextY=parseInt(year); if (nextM===13) { nextM=1;
                            nextY++; } %>

                            <a href="/ronda/control?month=<%= prevM %>&year=<%= prevY %>"
                                class="p-2 bg-gray-100 dark:bg-white/10 hover:bg-gray-200 dark:hover:bg-white/20 rounded-lg text-gray-600 dark:text-gray-300 transition-colors">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M15 19l-7-7 7-7"></path>
                                </svg>
                            </a>

                            <form method="GET" class="flex space-x-2">
                                <select name="month" onchange="this.form.submit()"
                                    class="glass-input block w-full px-3 py-2 text-sm text-gray-900 dark:text-gray-100 rounded-xl cursor-pointer">
                                    <% moment.months().forEach((m, i)=> { %>
                                        <option value="<%= String(i + 1).padStart(2, '0') %>" <%=parseInt(month)===i + 1
                                            ? 'selected' : '' %>>
                                            <%= m %>
                                        </option>
                                        <% }) %>
                                </select>
                                <select name="year" onchange="this.form.submit()"
                                    class="glass-input block w-full px-3 py-2 text-sm text-gray-900 dark:text-gray-100 rounded-xl cursor-pointer">
                                    <% for (let y=2024; y <=2030; y++) { %>
                                        <option value="<%= y %>" <%=parseInt(year)===y ? 'selected' : '' %>>
                                            <%= y %>
                                        </option>
                                        <% } %>
                                </select>
                            </form>

                            <a href="/ronda/control?month=<%= nextM %>&year=<%= nextY %>"
                                class="p-2 bg-gray-100 dark:bg-white/10 hover:bg-gray-200 dark:hover:bg-white/20 rounded-lg text-gray-600 dark:text-gray-300 transition-colors">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M9 5l7 7-7 7"></path>
                                </svg>
                            </a>
                    </div>
                </div>

                <div class="glass-card p-0 overflow-hidden m-4">
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-white/10">
                            <thead class="bg-gray-100 dark:bg-white/5 backdrop-blur-xl">
                                <tr>
                                    <th scope="col"
                                        class="px-6 py-3 text-left text-xs font-medium text-gray-700 dark:text-gray-300 uppercase tracking-wider sticky left-0 bg-gray-200 dark:bg-white/10 backdrop-blur-xl z-10 border-r border-white/10">
                                        Warga
                                    </th>
                                    <% saturdays.forEach(d=> { %>
                                        <th scope="col"
                                            class="px-6 py-3 text-center text-xs font-medium text-gray-700 dark:text-gray-300 uppercase tracking-wider">
                                            <%= moment(d).format('DD MMM') %>
                                        </th>
                                        <% }) %>
                                </tr>
                            </thead>
                            <tbody class="bg-gray-100 dark:bg-white/5 backdrop-blur-xl divide-y divide-white/10">
                                <% Object.keys(matrix).forEach(wId=> {
                                    const row = matrix[wId];

                                    // Hitung firstFineIndex (hari pertama yang telat/denda)
                                    let firstFineIndex = -1;
                                    for (let i = 0; i < saturdays.length; i++) { const d=saturdays[i]; const
                                        c=row.dates[d] || {}; const isLate=c.status==='scheduled' &&
                                        moment(d).add(3, 'weeks' ).isBefore(moment(), 'day' ); if (isLate || (c.denda ||
                                        0)> 0) {
                                        firstFineIndex = i;
                                        break;
                                        }
                                        }

                                        // Tentukan sampai mana range highlight
                                        let highlightEndIndex = saturdays.length - 1;
                                        if (firstFineIndex !== -1) {
                                        for (let i = firstFineIndex + 1; i < saturdays.length; i++) { const
                                            c=row.dates[saturdays[i]] || {}; if (c.status==='scheduled' ) {
                                            highlightEndIndex=i - 1; break; } } } const hasDenda=firstFineIndex !==-1;
                                            const highlightStartIndex=0; // Hitung total denda untuk warga ini let
                                            totalDenda=0; Object.values(row.dates).forEach(cell=> {
                                            if (cell && cell.denda > 0) {
                                            totalDenda += cell.denda;
                                            }
                                            });
                                            %>
                                            <tr class="hover:bg-gray-200 dark:hover:bg-white/10 transition-colors">
                                                <td
                                                    class="px-6 py-4 whitespace-nowrap sticky left-0 bg-gray-200 dark:bg-white/10 backdrop-blur-xl z-10 border-r border-white/10">
                                                    <div class="flex items-center">
                                                        <div>
                                                            <div
                                                                class="text-sm font-medium text-gray-900 dark:text-gray-100">
                                                                <%= row.info.nama %>
                                                            </div>
                                                            <div class="text-xs text-gray-600 dark:text-gray-400">
                                                                Blok <%= row.info.blok %>-<%= row.info.nomor_rumah %>
                                                                        <span
                                                                            class="ml-1 inline-flex items-center px-2 py-0.5 rounded text-[10px] font-medium bg-indigo-500/20 text-indigo-300 border border-indigo-400/30">
                                                                            Tim <%= row.info.tim_ronda || '-' %>
                                                                        </span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </td>

                                                <% saturdays.forEach((d, satIndex)=> {
                                                    const cell = row.dates[d] || {};
                                                    let tdClasses = "px-6 py-4 whitespace-nowrap text-center text-sm
                                                    relative ";

                                                    const isHighlight = hasDenda &&
                                                    satIndex >= highlightStartIndex &&
                                                    satIndex <= highlightEndIndex; if (isHighlight) { tdClasses
                                                        +="bg-red-500/5 border-y border-red-500/10 " ; if
                                                        (satIndex===highlightStartIndex) tdClasses
                                                        +="rounded-l-3xl border-l " ; if (satIndex===highlightEndIndex)
                                                        tdClasses +="rounded-r-3xl border-r " ; } %>
                                                        <td class="<%= tdClasses %>">
                                                            <div
                                                                class="relative z-10 inline-flex flex-col items-center justify-center w-full h-full">
                                                                <% if (cell.status) { %>
                                                                    <span class="px-2 py-1 rounded text-xs font-bold uppercase mb-1 
                                                    <%= cell.status === 'hadir' ? 'bg-green-100 text-green-800' : 
                                                       (cell.status === 'izin' ? 'bg-yellow-100 text-yellow-800' : 
                                                       (cell.status === 'alpa' ? 'bg-red-100 text-red-800' : 
                                                       (cell.status === 'reschedule' ? 'bg-blue-100 text-blue-800' : 
                                                       'bg-gray-100 text-gray-800'))) %>">
                                                                        <%= cell.status %>
                                                                    </span>
                                                                    <% } else { %>
                                                                        <span
                                                                            class="text-gray-700 dark:text-gray-300">-</span>
                                                                        <% } %>

                                                                            <% if (isHighlight &&
                                                                                satIndex===highlightEndIndex &&
                                                                                totalDenda> 0) { %>
                                                                                <span
                                                                                    class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-bold bg-red-100 text-red-800 border border-red-200 shadow-sm mt-1 animate-pulse">
                                                                                    âš  DENDA
                                                                                </span>
                                                                                <span
                                                                                    class="text-[10px] text-red-500 font-semibold mt-0.5">
                                                                                    Rp<%=
                                                                                        totalDenda.toLocaleString('id-ID')
                                                                                        %>
                                                                                </span>
                                                                                <% } %>
                                                            </div>
                                                        </td>
                                                        <% }) %>
                                            </tr>
                                            <% }) %>
                            </tbody>
                        </table>
                    </div>

                    <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
                        <div class="text-xs text-gray-500">
                            <strong>Aturan Denda:</strong> Warga yang tidak hadir jadwal ronda dan tidak melakukan
                            reschedule sampai 3 minggu berikutnya akan dikenakan sanksi denda.
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include('../partials/footer') %>