        <script>
            // Filter functionality - Show only upcoming or all
            const savedShowOnlyUpcoming = localStorage.getItem('showOnlyUpcoming');
            let showOnlyUpcoming = savedShowOnlyUpcoming === 'true';

            function handleTogglePastSchedules() {
                showOnlyUpcoming = !showOnlyUpcoming;
                localStorage.setItem('showOnlyUpcoming', showOnlyUpcoming);
                applyPastSchedulesFilter();
            }

            function applyPastSchedulesFilter() {
                const allCards = document.querySelectorAll('[id^="card-"]');
                const buttonText = document.getElementById('filterButtonText');
                const button = document.getElementById('togglePastSchedules');
                const container = document.getElementById('schedule-container');

                // Determine upcoming Saturday
                const now = new Date();
                const currentDay = now.getDay();
                const currentHour = now.getHours();
                let upcomingSaturday = null;
                
                // Calculate upcoming Saturday date
                const today = new Date(now.getFullYear(), now.getMonth(), now.getDate());
                
                // Logic: Upcoming Saturday is the Saturday of the current week
                // Exception: If it's Sunday before 6 AM, the active Saturday is yesterday (just passed)
                //            so upcoming becomes next Saturday
                
                if (currentDay === 0 && currentHour < 6) {
                    // Sunday before 6 AM - yesterday's Saturday is still active, so upcoming is that Saturday
                    upcomingSaturday = new Date(today);
                    upcomingSaturday.setDate(today.getDate() - 1); // Yesterday (Saturday)
                } else {
                    // Find this week's Saturday
                    // Sunday = 0, Monday = 1, ..., Saturday = 6
                    // Days until Saturday from today
                    let daysUntilSaturday;
                    if (currentDay === 0) {
                        // Sunday (after 6 AM) - upcoming Saturday is this week's Saturday
                        // Sunday(0) + 6 days = next Saturday
                        // But we want THIS week's Saturday, which is 6 days ahead
                        // Actually: Sun(0) Mon(1) Tue(2) Wed(3) Thu(4) Fri(5) Sat(6)
                        // From Sunday to Saturday = 6 - 0 = 6 days
                        // BUT: If today is Sunday Feb 2, Saturday this week is Feb 7
                        // Feb 2 + 5 = Feb 7 ‚úì
                        // The issue: we're in a new week starting Sunday
                        // So Saturday of THIS week (that contains this Sunday) is 5 days away
                        daysUntilSaturday = 5; // This week's Saturday (5 days from Sunday)
                    } else if (currentDay === 6) {
                        // Saturday
                        if (currentHour >= 18) {
                            // After 6 PM - ronda done, next Saturday is upcoming
                            daysUntilSaturday = 7;
                        } else {
                            // Before 6 PM - today is upcoming
                            daysUntilSaturday = 0;
                        }
                    } else {
                        // Monday to Friday - calculate days until Saturday
                        daysUntilSaturday = 6 - currentDay;
                    }
                    
                    upcomingSaturday = new Date(today);
                    upcomingSaturday.setDate(today.getDate() + daysUntilSaturday);
                }
                
                // Format date as YYYY-MM-DD in local timezone
                const year = upcomingSaturday.getFullYear();
                const month = String(upcomingSaturday.getMonth() + 1).padStart(2, '0');
                const day = String(upcomingSaturday.getDate()).padStart(2, '0');
                const upcomingDateStr = `${year}-${month}-${day}`;
                
                console.log('DEBUG: Upcoming Saturday:', upcomingDateStr);
                console.log('DEBUG: Current day:', currentDay, 'Current hour:', currentHour);
                console.log('DEBUG: Today:', today, 'Upcoming:', upcomingSaturday);
                let visibleCount = 0;

                if (showOnlyUpcoming) {
                    // Show only upcoming card
                    allCards.forEach(card => {
                        const cardDate = card.id.replace('card-', '');
                        console.log('DEBUG: Checking card:', cardDate, 'vs upcoming:', upcomingDateStr);
                        if (cardDate === upcomingDateStr) {
                            card.style.display = 'block';
                            setTimeout(() => {
                                card.style.opacity = '1';
                                card.style.transform = 'scale(1)';
                            }, 10);
                            visibleCount++;
                        } else {
                            card.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
                            card.style.opacity = '0';
                            card.style.transform = 'scale(0.95)';
                            setTimeout(() => {
                                card.style.display = 'none';
                            }, 300);
                        }
                    });
                    buttonText.textContent = 'Tampilkan Semua';
                    button.classList.add('!bg-indigo-500', '!text-white', '!border-indigo-400');
                } else {
                    // Show all cards
                    allCards.forEach(card => {
                        card.style.display = 'block';
                        setTimeout(() => {
                            card.style.opacity = '1';
                            card.style.transform = 'scale(1)';
                        }, 10);
                        visibleCount++;
                    });
                    buttonText.textContent = 'Hanya Upcoming';
                    button.classList.remove('!bg-indigo-500', '!text-white', '!border-indigo-400');
                }

                // Adjust Layout for Single Card
                // Use timeout to match the visual transition if needed, or immediate reset
                // Since this runs on click or load, we can set classes immediately
                // However, display:none happens after 300ms in hide logic. 
                // But for layout container, we want it to look right.

                // Note: The count calculation above assumes past cards ARE hidden or shown based on the flag.
                // In reality, animation takes time. But container class change can happen now.

                if (visibleCount === 1) {
                    // Center single card
                    container.className = 'grid grid-cols-1 gap-6 max-w-4xl mx-auto transition-all duration-300';
                    const headerCard = document.getElementById('filter-header-card');
                    if (headerCard) headerCard.className = 'glass-card mb-6 transition-all duration-300 max-w-4xl mx-auto';
                } else if (visibleCount === 4) {
                    // 4 cards: 2x2 grid on large screens, full width
                    container.className = 'grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 xl:grid-cols-4 gap-6 transition-all duration-300';
                    const headerCard = document.getElementById('filter-header-card');
                    if (headerCard) headerCard.className = 'glass-card mb-6 transition-all duration-300';
                } else if (visibleCount === 5) {
                    // 5 cards: standard 5 column grid
                    container.className = 'grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5 gap-6 transition-all duration-300';
                    const headerCard = document.getElementById('filter-header-card');
                    if (headerCard) headerCard.className = 'glass-card mb-6 transition-all duration-300';
                } else {
                    // Default: responsive grid
                    container.className = 'grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-' + Math.min(visibleCount, 5) + ' gap-6 transition-all duration-300';
                    const headerCard = document.getElementById('filter-header-card');
                    if (headerCard) headerCard.className = 'glass-card mb-6 transition-all duration-300';
                }
            }

            // Apply filter on page load
            document.addEventListener('DOMContentLoaded', function () {
                applyPastSchedulesFilter();
            });
        </script>

