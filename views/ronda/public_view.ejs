<%- include('../partials/head') %>
    <title>
        <%= title %>
    </title>
    <meta property="og:title" content="<%= title %>">
    <meta property="og:description" content="Jadwal Ronda dan Dokumentasi Warga Ambyar">
    <% if(ogImage) { %>
        <meta property="og:image" content="<%= process.env.APP_URL || '' %><%= ogImage %>">
        <meta property="og:image:width" content="800">
        <meta property="og:image:height" content="400">
        <% } %>
            </head>

            <body class="bg-white min-h-screen text-gray-900 font-sans selection:bg-indigo-500 selection:text-white">

                <!-- Background Effects -->


                <div
                    class="relative z-10 max-w-4xl mx-auto px-4 py-8 sm:px-6 lg:px-8 flex flex-col items-center justify-center min-h-screen">

                    <!-- Flash Messages -->
                    <div class="w-full mb-4">
                        <% if(locals.success_msg && locals.success_msg.length > 0) { %>
                            <div class="bg-emerald-100 border border-emerald-400 text-emerald-700 px-4 py-3 rounded-xl relative mb-4 shadow-sm animate-fade-in-down" role="alert">
                                <div class="flex items-center">
                                    <svg class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                    <span class="block sm:inline font-bold"><%= success_msg %></span>
                                </div>
                            </div>
                        <% } %>
                    
                        <% if(locals.error_msg && locals.error_msg.length > 0) { %>
                            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-xl relative mb-4 shadow-sm animate-fade-in-down" role="alert">
                                <div class="flex items-center">
                                    <svg class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                                    </svg>
                                    <span class="block sm:inline font-bold"><%= error_msg %></span>
                                </div>
                            </div>
                        <% } %>
                    </div>

                    <div class="w-full text-center mb-8">
                        <h1
                            class="text-3xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-indigo-400 to-purple-400 drop-shadow-sm mb-2">
                            <%= dateLabel %>
                        </h1>
                        <% if(teamName) { %>
                            <div
                                class="inline-flex items-center px-4 py-1.5 rounded-full bg-indigo-50 border border-indigo-200 text-indigo-700 text-sm font-bold backdrop-blur-sm shadow-sm mt-2">
                                Tim <%= teamName %>
                            </div>
                            <% } %>
                    </div>

                    <div
                        class="w-full p-6 sm:p-8 rounded-2xl overflow-hidden shadow-2xl border border-gray-200 bg-white relative">

                        <!-- Anggota Bertugas -->
                        <div class="mb-8">
                            <h2
                                class="text-xs font-bold text-gray-600 dark:text-gray-400 uppercase tracking-widest mb-4 flex items-center gap-2">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z">
                                    </path>
                                </svg>
                                Anggota Bertugas
                            </h2>
                            <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
                                <% schedule.forEach(s=> { %>
                                    <div
                                        class="flex items-center justify-between p-3 rounded-xl bg-gray-50 border border-gray-200 hover:bg-gray-100 transition-colors">
                                        <div class="flex items-center space-x-3">
                                            <div
                                                class="w-2.5 h-2.5 rounded-full shadow-lg shadow-current <%= s.status === 'hadir' ? 'bg-emerald-500 text-emerald-500' : (s.status === 'alpa' ? 'bg-red-500 text-red-500' : 'bg-gray-500 text-gray-500') %>">
                                            </div>
                                            <div>
                                                <div class="text-sm font-bold text-gray-900">
                                                    <%= s.nama %> (<%= s.blok %>-<%= s.nomor_rumah %>)
                                                </div>
                                            </div>
                                        </div>
                                            <div onclick="openStatusModal('<%= s.id %>', '<%= s.nama %>', '<%= s.status %>')" class="cursor-pointer hover:opacity-80 transition-opacity">
                                                <% 
                                                // Prioritas badge: Ganti Hari Hadir > Ganti Hari > Status lainnya
                                                const isGuest = s.is_ganti_hari;
                                                
                                                if(isGuest && s.status === 'hadir') {
                                                    // Badge Ganti Hari yang sudah Hadir (biru)
                                                %>
                                                    <span
                                                        class="px-2 py-0.5 rounded-full text-[10px] font-bold uppercase tracking-wider bg-transparent border border-blue-600 text-blue-600">
                                                        üîÑ Hadir
                                                    </span>
                                                <%
                                                } else if(isGuest || s.status === 'reschedule') {
                                                    // Badge Ganti Hari (untuk isGuest atau reschedule yang belum hadir)
                                                %>
                                                    <span
                                                        class="px-2 py-0.5 rounded-full text-[10px] font-bold uppercase tracking-wider bg-transparent border border-orange-600 text-orange-600">
                                                        üîÑ Ganti Hari
                                                    </span>
                                                <%
                                                } else if(s.status && s.status !=='scheduled') { 
                                                    // Badge status lainnya
                                                    let statusText = s.status;
                                                    let statusClass = '';
                                                    if (s.status_bayar === 'paid') {
                                                        statusText = 'Pay Up';
                                                        statusClass = 'bg-transparent border border-green-600 text-green-600';
                                                    } else if (s.status === 'hadir') {
                                                        statusClass = 'bg-transparent border border-green-600 text-green-600';
                                                    } else {
                                                        statusClass = 'bg-transparent border border-red-600 text-red-600';
                                                    }
                                                %>
                                                    <span
                                                        class="px-2 py-0.5 rounded-full text-[10px] font-bold uppercase tracking-wider <%= statusClass %>">
                                                        <%= statusText %>
                                                    </span>
                                                <% } else { %>
                                                    <span class="px-2 py-0.5 rounded-full text-[10px] font-bold uppercase tracking-wider bg-transparent border border-gray-400 text-gray-400">
                                                        ? Input
                                                    </span>
                                                <% } %>
                                            </div>
                                    </div>
                                    <% }) %>
                            </div>
                        </div>

                        <!-- Dokumentasi -->
                        <div>
                            <h2
                                class="text-xs font-bold text-gray-600 dark:text-gray-400 uppercase tracking-widest mb-4 flex items-center gap-2">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z">
                                    </path>
                                </svg>
                                Dokumentasi & Bukti
                            </h2>
                            <% if(allPhotos && allPhotos.length> 0) { %>
                                <div class="grid grid-cols-4 sm:grid-cols-6 gap-3">
                                    <% allPhotos.slice(0, 12).forEach(p=> { %>
                                        <div
                                            class="aspect-square bg-black/40 rounded-xl overflow-hidden relative border border-white/10 shadow-lg group">
                                            <% if(p.src && String(p.src).match(/\.(mp4|mov|avi|webm)$/i)) { %>
                                                <video src="/uploads/ronda/<%= p.src %>#t=1.0"
                                                    class="w-full h-full object-cover opacity-80 group-hover:opacity-100 transition-opacity"></video>
                                                <div
                                                    class="absolute inset-0 flex items-center justify-center bg-black/30 group-hover:bg-black/10 transition-colors">
                                                    <div
                                                        class="w-8 h-8 rounded-full bg-white/20 backdrop-blur-sm flex items-center justify-center border border-white/30">
                                                        <span class="text-white text-xs">‚ñ∂</span>
                                                    </div>
                                                </div>
                                                <% } else { %>
                                                    <img src="/uploads/ronda/<%= p.src %>"
                                                        class="w-full h-full object-cover opacity-80 group-hover:opacity-100 transition-opacity">
                                                    <% } %>
                                        </div>
                                        <% }) %>
                                            <% if(allPhotos.length> 12) { %>
                                                <div
                                                    class="aspect-square bg-gray-100 dark:bg-white/5 rounded-xl flex items-center justify-center border border-white/10 backdrop-blur-sm">
                                                    <span class="text-gray-600 dark:text-gray-400 text-xs font-bold">+
                                                        <%= allPhotos.length - 12 %>
                                                    </span>
                                                </div>
                                                <% } %>
                                </div>
                                <% } else { %>
                                    <div
                                        class="text-center py-8 bg-gray-100 dark:bg-white/5 rounded-xl border border-white/10 border-dashed">
                                        <p class="text-gray-500 text-sm italic">Belum ada dokumentasi.</p>
                                    </div>
                                    <% } %>
                        </div>

                        <!-- Action Buttons -->
                        <div class="mt-8 pt-6 border-t border-white/10 flex gap-3">
                            <button onclick="copyLink()"
                                class="flex-1 flex justify-center items-center px-4 py-3 bg-gray-100 hover:bg-gray-200 border border-gray-200 rounded-xl text-sm font-bold text-gray-700 hover:text-gray-900 transition-all">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z">
                                    </path>
                                </svg>
                                Copy Link
                            </button>
                            <button onclick="shareWa()"
                                class="flex-1 flex justify-center items-center px-4 py-3 bg-emerald-600/80 hover:bg-emerald-600 border border-emerald-500/50 rounded-xl text-sm font-bold text-white transition-all shadow-lg shadow-emerald-900/20 backdrop-blur-sm">
                                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
                                    <path
                                        d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z" />
                                </svg>
                                Share WA
                            </button>
                        </div>

                    </div>

                    <!-- Home Button & Footer -->
                    <div class="mt-8 flex flex-col items-center gap-4">
                        <a href="/"
                            class="flex items-center px-6 py-3 bg-gray-100 hover:bg-gray-200 border border-gray-200 rounded-full text-sm font-bold text-gray-700 hover:text-gray-900 transition-all shadow-lg">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6">
                                </path>
                            </svg>
                            Home
                        </a>

                        <div class="flex items-center gap-2 text-xs text-gray-500 font-medium tracking-wider uppercase">
                            <span>Powered by</span>
                            <span
                                class="font-bold bg-clip-text text-transparent bg-gradient-to-r from-emerald-400 to-cyan-400">Warga
                                Ambyar</span>
                        </div>
                    </div>

                    <!-- Status Update Modal -->
                    <div id="statusModal" class="fixed inset-0 z-50 hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
                        <!-- Overlay with blur -->
                        <div class="fixed inset-0 bg-gray-900/60 backdrop-blur-sm transition-opacity" onclick="closeStatusModal()"></div>

                        <div class="fixed inset-0 z-10 overflow-y-auto">
                            <div class="flex min-h-full items-center justify-center p-4 text-center sm:p-0">
                                <div class="relative transform overflow-hidden rounded-2xl bg-white dark:bg-slate-900 text-left shadow-2xl ring-1 ring-black/5 transition-all sm:my-8 sm:w-full sm:max-w-lg">
                                    <form action="/ronda/v/update-status" method="POST" enctype="multipart/form-data">
                                        <input type="hidden" name="id" id="modalScheduleId">
                                        
                                        <div class="bg-white dark:bg-slate-900 px-6 pb-6 pt-8 sm:p-8 sm:pb-8">
                                            <div class="text-center">
                                                <h3 class="text-3xl font-extrabold leading-tight tracking-tight bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent mb-2" id="modal-title">
                                                    Update Kehadiran
                                                </h3>
                                                <p class="text-sm font-medium text-slate-600 dark:text-slate-400" id="modal-subtitle">
                                                    Konfirmasi status kehadiran untuk 
                                                    <span id="modalCitizenName" class="block text-xl font-bold text-slate-800 dark:text-slate-100 mt-2 p-2 bg-slate-50 dark:bg-slate-800/50 rounded-lg border border-slate-100 dark:border-slate-700"></span>
                                                </p>
                                                
                                                <!-- Step 1: Status Selection -->
                                                <div id="step-status" class="mt-8 grid grid-cols-1 sm:grid-cols-3 gap-4">
                                                    <!-- Hadir -->
                                                    <label class="cursor-pointer group relative">
                                                        <input type="radio" name="status" value="hadir" class="peer sr-only">
                                                        <div class="h-full p-4 rounded-2xl border-2 border-slate-100 dark:border-slate-700 bg-white dark:bg-slate-800 peer-checked:border-emerald-500 peer-checked:bg-emerald-50/30 dark:peer-checked:bg-emerald-900/20 peer-checked:ring-2 peer-checked:ring-emerald-500 hover:bg-slate-50 dark:hover:bg-slate-800/80 hover:border-slate-200 dark:hover:border-slate-600 transition-all text-center shadow-sm group-hover:shadow-md">
                                                            <div class="text-4xl mb-3 grayscale peer-checked:grayscale-0 group-hover:scale-110 transition-transform duration-300">‚úÖ</div>
                                                            <div class="text-sm font-bold text-slate-700 dark:text-slate-200 peer-checked:text-emerald-700 dark:peer-checked:text-emerald-400 uppercase tracking-wider">Hadir</div>
                                                            <div class="text-[10px] text-slate-400 dark:text-slate-500 mt-1">Datang tepat waktu</div>
                                                        </div>
                                                    </label>
                                                    
                                                    <!-- Ganti Hari -->
                                                    <label class="cursor-pointer group relative">
                                                        <input type="radio" name="status" value="reschedule" class="peer sr-only">
                                                        <div class="h-full p-4 rounded-2xl border-2 border-slate-100 dark:border-slate-700 bg-white dark:bg-slate-800 peer-checked:border-orange-500 peer-checked:bg-orange-50/30 dark:peer-checked:bg-orange-900/20 peer-checked:ring-2 peer-checked:ring-orange-500 hover:bg-slate-50 dark:hover:bg-slate-800/80 hover:border-slate-200 dark:hover:border-slate-600 transition-all text-center shadow-sm group-hover:shadow-md">
                                                            <div class="text-4xl mb-3 grayscale peer-checked:grayscale-0 group-hover:scale-110 transition-transform duration-300">üîÑ</div>
                                                            <div class="text-sm font-bold text-slate-700 dark:text-slate-200 peer-checked:text-orange-700 dark:peer-checked:text-orange-400 uppercase tracking-wider">Ganti Hari</div>
                                                            <div class="text-[10px] text-slate-400 dark:text-slate-500 mt-1">Pindah minggu depan</div>
                                                        </div>
                                                    </label>
                                                    
                                                    <!-- Alpa -->
                                                    <label class="cursor-pointer group relative">
                                                        <input type="radio" name="status" value="alpa" class="peer sr-only">
                                                        <div class="h-full p-4 rounded-2xl border-2 border-slate-100 dark:border-slate-700 bg-white dark:bg-slate-800 peer-checked:border-red-500 peer-checked:bg-red-50/30 dark:peer-checked:bg-red-900/20 peer-checked:ring-2 peer-checked:ring-red-500 hover:bg-slate-50 dark:hover:bg-slate-800/80 hover:border-slate-200 dark:hover:border-slate-600 transition-all text-center shadow-sm group-hover:shadow-md">
                                                            <div class="text-4xl mb-3 grayscale peer-checked:grayscale-0 group-hover:scale-110 transition-transform duration-300">‚ùå</div>
                                                            <div class="text-sm font-bold text-slate-700 dark:text-slate-200 peer-checked:text-red-700 dark:peer-checked:text-red-400 uppercase tracking-wider">Alpha</div>
                                                            <div class="text-[10px] text-slate-400 dark:text-slate-500 mt-1">Tidak ada kabar</div>
                                                        </div>
                                                    </label>
                                                </div>

                                                <!-- Step 2: Upload Bukti Hadir -->
                                                <div id="step-upload" class="hidden mt-6 animate-fade-in-up">
                                                    <p class="text-sm font-medium text-slate-700 dark:text-slate-300 mb-4">Silakan ambil foto selfie sebagai bukti kehadiran.</p>
                                                    <div class="flex items-center justify-center w-full">
                                                        <label for="dropzone-file" class="relative flex flex-col items-center justify-center w-full h-64 border-2 border-dashed rounded-2xl cursor-pointer bg-slate-50 dark:bg-slate-800/50 border-slate-300 dark:border-slate-600 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors overflow-hidden group">
                                                            <div class="flex flex-col items-center justify-center pt-5 pb-6 z-10 group-hover:scale-105 transition-transform duration-300">
                                                                <div class="bg-indigo-100 dark:bg-indigo-900/50 p-4 rounded-full mb-3">
                                                                    <svg class="w-10 h-10 text-indigo-500 dark:text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                                                                </div>
                                                                <p class="text-sm text-slate-500 dark:text-slate-400"><span class="font-bold text-indigo-600 dark:text-indigo-400">Klik Kamera</span> untuk ambil foto</p>
                                                                <p class="text-xs text-slate-400 dark:text-slate-500 mt-1">Pastikan wajah terlihat jelas</p>
                                                            </div>
                                                            <img id="image-preview" src="#" alt="Preview" class="absolute inset-0 w-full h-full object-cover hidden opacity-50 group-hover:opacity-100 transition-opacity" />
                                                            <input id="dropzone-file" name="bukti_hadir" type="file" accept="image/*" capture="user" class="hidden" onchange="previewImage(this)" />
                                                        </label>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                        
                                        <div class="bg-gray-50/80 dark:bg-slate-800/80 px-6 py-4 sm:flex sm:flex-row-reverse sm:px-8 gap-3 border-t border-gray-100 dark:border-slate-700">
                                            <button type="button" id="btn-save" onclick="handleSaveStep()" class="inline-flex w-full justify-center rounded-xl bg-indigo-600 px-6 py-3 text-sm font-bold text-white shadow-xl shadow-indigo-500/20 hover:bg-indigo-500 hover:shadow-indigo-500/30 hover:-translate-y-0.5 transition-all duration-200 sm:w-auto">
                                                Lanjut / Simpan
                                            </button>
                                            <button type="button" onclick="closeStatusModal()" class="mt-3 inline-flex w-full justify-center rounded-xl bg-white dark:bg-slate-800 px-6 py-3 text-sm font-bold text-slate-700 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-slate-700 hover:text-slate-900 dark:hover:text-white border border-slate-200 dark:border-slate-600 transition-all sm:mt-0 sm:w-auto">
                                                Batal
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    <script>
                        function copyLink() {
                            navigator.clipboard.writeText(window.location.href).then(() => alert('Link copied!'));
                        }
                        
                        let currentModalStep = 1;

                        function openStatusModal(id, nama, currentStatus) {
                            document.getElementById('modalScheduleId').value = id;
                            document.getElementById('modalCitizenName').textContent = nama;
                            document.getElementById('statusModal').classList.remove('hidden');
                            
                            // Reset Steps
                            currentModalStep = 1;
                            document.getElementById('step-status').classList.remove('hidden');
                            document.getElementById('step-upload').classList.add('hidden');
                            document.getElementById('btn-save').textContent = 'Simpan Perubahan';
                            document.getElementById('modal-title').textContent = 'Update Kehadiran';
                            document.getElementById('modal-subtitle').classList.remove('hidden');
                            
                            // Reset Radio
                            const radios = document.getElementsByName('status');
                            for(let r of radios) {
                                if(r.value === currentStatus) r.checked = true;
                                else r.checked = false;
                            }
                        }
                        
                        function closeStatusModal() {
                            document.getElementById('statusModal').classList.add('hidden');
                        }
                        
                        function handleSaveStep() {
                            const form = document.querySelector('form[action="/ronda/v/update-status"]');
                            const radios = document.getElementsByName('status');
                            let selected = null;
                            for(let r of radios) {
                                if(r.checked) selected = r.value;
                            }
                            
                            if(!selected) {
                                alert('Pilih status terlebih dahulu!');
                                return;
                            }
                            
                            if(selected === 'hadir' && currentModalStep === 1) {
                                // Go to Step 2
                                currentModalStep = 2;
                                document.getElementById('step-status').classList.add('hidden');
                                document.getElementById('step-upload').classList.remove('hidden');
                                document.getElementById('modal-title').textContent = 'Ambil Selfie';
                                document.getElementById('modal-subtitle').classList.add('hidden');
                                document.getElementById('btn-save').textContent = 'Kirim Bukti';
                            } else {
                                // Submit
                                form.submit();
                            }
                        }
                        
                        function previewImage(input) {
                            if (input.files && input.files[0]) {
                                var reader = new FileReader();
                                reader.onload = function(e) {
                                    const img = document.getElementById('image-preview');
                                    img.src = e.target.result;
                                    img.classList.remove('hidden');
                                }
                                reader.readAsDataURL(input.files[0]);
                            }
                        }

