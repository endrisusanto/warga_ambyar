<%- include('../partials/head') %>
    <%- include('../partials/navbar') %>

        <div class="glass-card p-6 m-4 mb-6">
            <div class="flex justify-between items-center">
                <div>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-gray-100 flex items-center gap-3">
                        <span class="text-3xl">üë•</span>
                        Manajemen Tim Ronda
                    </h3>
                    <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">Atur anggota untuk Tim A, B, C, dan D.</p>
                </div>
                <a href="/ronda"
                    class="px-4 py-2 rounded-xl text-sm font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:bg-white/5 transition-all border border-white/10">‚Üê
                    Kembali</a>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <% ['A', 'B' , 'C' , 'D' ].forEach(team=> { %>
                <div class="glass-card p-0 overflow-hidden border-t-4 border-indigo-400">
                    <div
                        class="px-4 py-4 bg-gray-100 dark:bg-white/5 backdrop-blur-xl flex justify-between items-center border-b border-white/10">
                        <h3 class="text-lg font-bold text-gray-900 dark:text-gray-100">Tim <%= team %>
                        </h3>
                        <span
                            class="bg-indigo-500/20 text-indigo-300 text-xs font-medium px-3 py-1 rounded-full border border-indigo-400/30">
                            <%= teams[team].length %> Anggota
                        </span>
                    </div>
                    <div class="px-4 py-5">
                        <ul class="space-y-3">
                            <% teams[team].forEach(member=> { %>
                                <li class="flex justify-between items-center text-sm border-b border-white/10 pb-3">
                                    <div>
                                        <div class="font-medium text-gray-900 dark:text-gray-100">
                                            <%= member.nama %>
                                        </div>
                                        <div class="text-gray-600 dark:text-gray-400 text-xs">Blok <%= member.blok %>-
                                                <%= member.nomor_rumah %>
                                        </div>
                                    </div>
                                    <form action="/ronda/teams/update" method="POST" class="ml-2">
                                        <input type="hidden" name="warga_id" value="<%= member.id %>">
                                        <button type="submit" name="tim" value=""
                                            class="text-red-400 hover:text-red-300 text-xs p-1 hover:bg-red-500/10 rounded transition-all"
                                            title="Hapus dari tim">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M6 18L18 6M6 6l12 12"></path>
                                            </svg>
                                        </button>
                                    </form>
                                </li>
                                <% }) %>
                                    <% if(teams[team].length===0) { %>
                                        <li class="text-gray-500 text-sm italic text-center py-6">Belum ada anggota</li>
                                        <% } %>
                        </ul>
                    </div>
                </div>
                <% }) %>
        </div>

        <div class="glass-card p-0 overflow-hidden border-t-4 border-gray-400 m-4">
            <div
                class="px-4 py-4 bg-gray-100 dark:bg-white/5 backdrop-blur-xl flex justify-between items-center border-b border-white/10">
                <div>
                    <h3 class="text-lg font-bold text-gray-900 dark:text-gray-100">Belum Masuk Tim</h3>
                    <p class="text-sm text-gray-600 dark:text-gray-400">Warga yang wajib ronda tapi belum dapat tim.</p>
                </div>
                <button onclick="document.getElementById('addManualForm').classList.toggle('hidden')"
                    class="bg-white hover:bg-gray-50 text-gray-900 border border-gray-200 text-xs font-bold py-2 px-4 rounded-xl flex items-center gap-2 shadow-lg transition-all">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    Tambah Manual
                </button>
            </div>
            <div id="addManualForm"
                class="hidden px-4 py-4 bg-indigo-500/10 border-b border-indigo-400/20 backdrop-blur-xl transition-all">
                <form action="/ronda/manual-add" method="POST" class="flex flex-col sm:flex-row gap-3 items-end">
                    <div class="flex-grow w-full">
                        <label class="block text-xs font-medium text-gray-700 dark:text-gray-300 mb-1">Nama
                            Lengkap</label>
                        <input type="text" name="nama" required placeholder="Nama Warga"
                            class="glass-input w-full text-sm text-gray-900 dark:text-gray-100 placeholder-gray-500 px-3 py-2 rounded-xl">
                    </div>
                    <div class="w-full sm:w-24">
                        <label class="block text-xs font-medium text-gray-700 dark:text-gray-300 mb-1">Blok</label>
                        <select name="blok"
                            class="glass-input w-full text-sm text-gray-900 dark:text-gray-100 px-3 py-2 rounded-xl">
                            <option value="F7">F7</option>
                            <option value="F8">F8</option>
                        </select>
                    </div>
                    <div class="w-full sm:w-24">
                        <label class="block text-xs font-medium text-gray-700 dark:text-gray-300 mb-1">No. Rumah</label>
                        <input type="number" name="nomor_rumah" required placeholder="0"
                            class="glass-input w-full text-sm text-gray-900 dark:text-gray-100 placeholder-gray-500 px-3 py-2 rounded-xl">
                    </div>
                    <button type="submit"
                        class="w-full sm:w-auto bg-gradient-to-r from-indigo-500 to-purple-600 hover:from-indigo-600 hover:to-purple-700 text-white text-sm font-medium py-2 px-6 rounded-xl shadow-lg transition-all">
                        üíæ Simpan
                    </button>
                </form>
            </div>
            <div class="px-4 py-5">
                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
                    <% teams.Unassigned.forEach(member=> { %>
                        <div
                            class="flex items-center justify-between p-3 border border-white/10 rounded-xl bg-gray-100 dark:bg-white/5 backdrop-blur-xl hover:bg-gray-200 dark:bg-white/10 transition-all">
                            <div>
                                <div class="font-medium text-sm text-gray-900 dark:text-gray-100">
                                    <%= member.nama %>
                                </div>
                                <div class="text-gray-600 dark:text-gray-400 text-xs">Blok <%= member.blok %>-<%=
                                            member.nomor_rumah %>
                                </div>
                            </div>
                            <form action="/ronda/teams/update" method="POST">
                                <input type="hidden" name="warga_id" value="<%= member.id %>">
                                <select name="tim" onchange="this.form.submit()"
                                    class="glass-input text-xs text-gray-900 dark:text-gray-100 px-2 py-1 rounded-lg">
                                    <option value="">Pilih Tim</option>
                                    <option value="A">Tim A</option>
                                    <option value="B">Tim B</option>
                                    <option value="C">Tim C</option>
                                    <option value="D">Tim D</option>
                                </select>
                            </form>
                        </div>
                        <% }) %>
                            <% if(teams.Unassigned.length===0) { %>
                                <div class="col-span-full text-center text-gray-500 italic py-4">Semua warga sudah masuk
                                    tim.</div>
                                <% } %>
                </div>
            </div>
        </div>

        <%- include('../partials/footer') %>