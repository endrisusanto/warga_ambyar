            background: radial-gradient(ellipse at bottom, var(--bg-start) 0%, var(--bg-end) 100%);
            color: var(--text-main);
            min-height: 100vh;
            overflow-x: hidden;
            position: relative;
            transition: background 0.3s ease, color 0.3s ease;
        }

        /* Starfield only in Dark Mode */
        #starfield-canvas {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            pointer-events: none;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .dark #starfield-canvas {
            opacity: 1;
        }

        /* Lens Flare only in Dark Mode */
        .lens-flare {
            position: fixed;
            width: 300px;
            height: 300px;
            border-radius: 50%;
            pointer-events: none;
            z-index: 0;
            opacity: 0;
            transition: opacity 0.3s ease;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.3) 0%, rgba(100, 200, 255, 0.1) 30%, transparent 70%);
            filter: blur(20px);
            mix-blend-mode: screen;
            display: none;
