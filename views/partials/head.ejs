<body class="flex flex-col min-h-screen text-gray-800">
    <!-- Starfield Canvas -->
    <canvas id="starfield-canvas"></canvas>

    <!-- Lens Flare Effect -->
    <div class="lens-flare" id="lensFlare"></div>

    <!-- Interactive Starfield Script -->
    <script>
        (function () {
            const canvas = document.getElementById('starfield-canvas');
            const ctx = canvas.getContext('2d');
            const lensFlare = document.getElementById('lensFlare');

            let width = canvas.width = window.innerWidth;
            let height = canvas.height = window.innerHeight;

            const stars = [];
            const numStars = 200;
            const mouse = { x: -1000, y: -1000 };
            const avoidRadius = 150;

            // Detect mobile
            const isMobile = window.innerWidth < 768;
            const sizeMultiplier = isMobile ? 0.5 : 1;

            class Star {
                constructor() {
                    this.reset();
                    this.y = Math.random() * height;
                }

                reset() {
                    this.x = Math.random() * width;
                    this.y = Math.random() * height;

                    // Random direction for movement (360 degrees)
                    const angle = Math.random() * Math.PI * 2;
                    const speed = Math.random() * 0.3 + 0.1;
                    this.vx = Math.cos(angle) * speed;
                    this.vy = Math.sin(angle) * speed;

                    this.radius = (Math.random() * 1.5 + 0.5) * sizeMultiplier;
                    this.opacity = Math.random() * 0.5 + 0.5;
                    this.twinkleSpeed = Math.random() * 0.02 + 0.01;
                    this.twinkle = 0;
                }

                update() {
                    // Mouse avoidance
                    const dx = this.x - mouse.x;
                    const dy = this.y - mouse.y;
                    const dist = Math.sqrt(dx * dx + dy * dy);

                    if (dist < avoidRadius) {
                        const force = (avoidRadius - dist) / avoidRadius;
                        const angle = Math.atan2(dy, dx);
                        this.vx += Math.cos(angle) * force * 0.5;
                        this.vy += Math.sin(angle) * force * 0.5;
                    }

                    // Apply velocity with damping
                    this.x += this.vx;
                    this.y += this.vy;
                    this.vx *= 0.99;
                    this.vy *= 0.99;

                    // Add slight random drift to maintain movement
                    this.vx += (Math.random() - 0.5) * 0.01;
                    this.vy += (Math.random() - 0.5) * 0.01;

                    // Twinkle effect
                    this.twinkle += this.twinkleSpeed;

                    // Wrap around edges (all directions)
                    if (this.x < -10) this.x = width + 10;
                    if (this.x > width + 10) this.x = -10;
                    if (this.y < -10) this.y = height + 10;
                    if (this.y > height + 10) this.y = -10;
                }

                draw() {
                    const twinkleOpacity = this.opacity * (0.7 + Math.sin(this.twinkle) * 0.3);

                    // Glow effect
                    ctx.beginPath();
                    const gradient = ctx.createRadialGradient(this.x, this.y, 0, this.x, this.y, this.radius * 3);
                    gradient.addColorStop(0, `rgba(255, 255, 255, ${twinkleOpacity})`);
                    gradient.addColorStop(0.3, `rgba(200, 220, 255, ${twinkleOpacity * 0.5})`);
                    gradient.addColorStop(1, 'rgba(100, 150, 255, 0)');
                    ctx.fillStyle = gradient;
                    ctx.arc(this.x, this.y, this.radius * 3, 0, Math.PI * 2);
                    ctx.fill();

                    // Core
                    ctx.beginPath();
                    ctx.fillStyle = `rgba(255, 255, 255, ${twinkleOpacity})`;
                    ctx.arc(this.x, this.y, this.radius, 0, Math.PI * 2);
                    ctx.fill();
                }
            }

            // Initialize stars
            for (let i = 0; i < numStars; i++) {
                stars.push(new Star());
            }

            // Mouse tracking
            document.addEventListener('mousemove', (e) => {
                mouse.x = e.clientX;
                mouse.y = e.clientY;

                // Lens flare effect
                lensFlare.style.left = (e.clientX - 150) + 'px';
                lensFlare.style.top = (e.clientY - 150) + 'px';
                lensFlare.style.opacity = '0.6';

                clearTimeout(lensFlare.fadeTimer);
                lensFlare.fadeTimer = setTimeout(() => {
                    lensFlare.style.opacity = '0';
                }, 100);
            });

            // Animation loop
            function animate() {
                ctx.clearRect(0, 0, width, height);

                stars.forEach(star => {
                    star.update();
                    star.draw();
                });

                requestAnimationFrame(animate);
            }

            // Handle resize
            window.addEventListener('resize', () => {
                width = canvas.width = window.innerWidth;
                height = canvas.height = window.innerHeight;

                // Reinitialize stars on resize
                const newIsMobile = window.innerWidth < 768;
                if (newIsMobile !== isMobile) {
                    stars.length = 0;
                    for (let i = 0; i < numStars; i++) {
                        stars.push(new Star());
                    }
                }
            });

            animate();
        })();
    </script>

