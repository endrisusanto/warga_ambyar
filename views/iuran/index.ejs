<%- include('../partials/head') %>
    <%- include('../partials/navbar') %>

        <div class="bg-white shadow overflow-hidden sm:rounded-lg">
            <div
                class="px-4 py-5 sm:px-6 flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
                <div>
                    <h3 class="text-lg leading-6 font-medium text-gray-900">Data Iuran</h3>
                    <p class="mt-1 max-w-2xl text-sm text-gray-500">Daftar tagihan dan pembayaran iuran warga.</p>
                </div>
                <div class="flex flex-col md:flex-row space-y-2 md:space-y-0 md:space-x-3 items-center">
                    <!-- View Toggle -->
                    <div class="bg-gray-100 p-1 rounded-lg flex">
                        <button onclick="switchView('table')" id="btn-table"
                            class="px-3 py-1 rounded-md text-sm font-medium bg-white shadow-sm text-gray-900">
                            Table
                        </button>
                        <button onclick="switchView('grid')" id="btn-grid"
                            class="px-3 py-1 rounded-md text-sm font-medium text-gray-500 hover:text-gray-900">
                            Grid
                        </button>
                    </div>

                    <% if(user && (user.role==='admin' || user.role==='bendahara' )) { %>
                        <form action="/iuran/generate" method="POST" class="inline">
                            <button type="submit"
                                class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                                Generate Tagihan
                            </button>
                        </form>
                        <a href="/iuran/arrears"
                            class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700">
                            Tunggakan
                        </a>
                        <% } %>
                            <a href="/iuran/pay"
                                class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700">
                                Input Bayar
                            </a>
                </div>
            </div>

            <!-- Table View -->
            <div id="view-table" class="border-t border-gray-200">
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Periode</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Rumah</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Nama</th>
                                <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Kas (50k)
                                </th>
                                <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Sampah
                                    (20k)</th>
                                <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Aksi</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            <% iuran.forEach(item=> { %>
                                <tr class="hover:bg-gray-50">
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                        <%= moment(item.periode).format('MMM YYYY') %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 font-bold">
                                        Blok <%= item.blok %>-<%= item.nomor_rumah %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                        <%= item.nama %>
                                    </td>

                                    <!-- Status Kas -->
                                    <td class="px-6 py-4 whitespace-nowrap text-center">
                                        <% if(item.kas) { %>
                                            <div class="flex flex-col items-center">
                                                <span
                                                    class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                                                    <%= item.kas.status === 'lunas' ? 'bg-green-100 text-green-800' : 
                                                       (item.kas.status === 'menunggu_konfirmasi' ? 'bg-yellow-100 text-yellow-800' : 'bg-red-100 text-red-800') %>">
                                                    <%= item.kas.status.replace('_', ' ' ) %>
                                                </span>
                                                <% if(item.kas.bukti_bayar) { %>
                                                    <a href="<%= item.kas.bukti_bayar.startsWith('/uploads/') ? item.kas.bukti_bayar : '/uploads/' + item.kas.bukti_bayar %>"
                                                        target="_blank"
                                                        class="text-xs text-indigo-600 hover:text-indigo-900 mt-1 flex items-center">
                                                        <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor"
                                                            viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                                stroke-width="2"
                                                                d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13">
                                                            </path>
                                                        </svg>
                                                        Bukti
                                                    </a>
                                                    <% } %>
                                            </div>
                                            <% } else { %>
                                                <span class="text-gray-400 text-xs">-</span>
                                                <% } %>
                                    </td>

                                    <!-- Status Sampah -->
                                    <td class="px-6 py-4 whitespace-nowrap text-center">
                                        <% if(item.sampah) { %>
                                            <div class="flex flex-col items-center">
                                                <span
                                                    class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                                                    <%= item.sampah.status === 'lunas' ? 'bg-green-100 text-green-800' : 
                                                       (item.sampah.status === 'menunggu_konfirmasi' ? 'bg-yellow-100 text-yellow-800' : 'bg-red-100 text-red-800') %>">
                                                    <%= item.sampah.status.replace('_', ' ' ) %>
                                                </span>
                                                <% if(item.sampah.bukti_bayar) { %>
                                                    <a href="<%= item.sampah.bukti_bayar.startsWith('/uploads/') ? item.sampah.bukti_bayar : '/uploads/' + item.sampah.bukti_bayar %>"
                                                        target="_blank"
                                                        class="text-xs text-indigo-600 hover:text-indigo-900 mt-1 flex items-center">
                                                        <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor"
                                                            viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                                stroke-width="2"
                                                                d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13">
                                                            </path>
                                                        </svg>
                                                        Bukti
                                                    </a>
                                                    <% } %>
                                            </div>
                                            <% } else { %>
                                                <span class="text-gray-400 text-xs">-</span>
                                                <% } %>
                                    </td>

                                    <!-- Aksi Confirm -->
                                    <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
                                        <% if(user && (user.role==='admin' || user.role==='bendahara' )) { %>
                                            <div class="flex justify-center space-x-2">
                                                <% if(item.kas && item.kas.status==='menunggu_konfirmasi' ) { %>
                                                    <a href="/iuran/confirm/<%= item.kas.id %>"
                                                        class="text-green-600 hover:text-green-900"
                                                        title="Confirm Kas">✓ Kas</a>
                                                    <% } %>
                                                        <% if(item.sampah && item.sampah.status==='menunggu_konfirmasi'
                                                            ) { %>
                                                            <a href="/iuran/confirm/<%= item.sampah.id %>"
                                                                class="text-blue-600 hover:text-blue-900"
                                                                title="Confirm Sampah">✓ Sampah</a>
                                                            <% } %>
                                            </div>
                                            <% } %>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Grid View -->
            <div id="view-grid" class="hidden p-6 bg-gray-50">
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                    <% iuran.forEach(item=> { %>
                        <div
                            class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 hover:shadow-md transition-shadow">
                            <div class="flex justify-between items-start mb-4">
                                <div>
                                    <h4 class="text-lg font-bold text-gray-900">Blok <%= item.blok %>-<%=
                                                item.nomor_rumah %>
                                    </h4>
                                    <p class="text-sm text-gray-500">
                                        <%= item.nama %>
                                    </p>
                                </div>
                                <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded-md font-medium">
                                    <%= moment(item.periode).format('MMM YYYY') %>
                                </span>
                            </div>

                            <div class="space-y-3">
                                <!-- Kas Row -->
                                <div
                                    class="flex justify-between items-center p-2 rounded-md <%= item.kas && item.kas.status === 'lunas' ? 'bg-green-50' : 'bg-red-50' %>">
                                    <div class="flex items-center">
                                        <span
                                            class="w-2 h-2 rounded-full mr-2 <%= item.kas && item.kas.status === 'lunas' ? 'bg-green-500' : 'bg-red-500' %>"></span>
                                        <span class="text-sm font-medium text-gray-700">Kas RT</span>
                                    </div>
                                    <% if(item.kas) { %>
                                        <div class="flex flex-col items-end">
                                            <span
                                                class="text-xs font-bold <%= item.kas.status === 'lunas' ? 'text-green-700' : 'text-red-700' %>">
                                                <%= item.kas.status==='lunas' ? 'LUNAS' :
                                                    item.kas.status.replace('_', ' ' ).toUpperCase() %>
                                            </span>
                                            <div class="flex space-x-2 mt-1">
                                                <% if(item.kas.bukti_bayar) { %>
                                                    <a href="<%= item.kas.bukti_bayar.startsWith('/uploads/') ? item.kas.bukti_bayar : '/uploads/' + item.kas.bukti_bayar %>"
                                                        target="_blank" class="text-indigo-600 hover:text-indigo-900"
                                                        title="Lihat Bukti">
                                                        <svg class="w-4 h-4" fill="none" stroke="currentColor"
                                                            viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                                stroke-width="2"
                                                                d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13">
                                                            </path>
                                                        </svg>
                                                    </a>
                                                    <% } %>
                                                        <% if(item.kas.status==='menunggu_konfirmasi' &&
                                                            (user.role==='admin' || user.role==='bendahara' )) { %>
                                                            <a href="/iuran/confirm/<%= item.kas.id %>"
                                                                class="text-xs text-blue-600 hover:underline">Confirm</a>
                                                            <% } %>
                                            </div>
                                        </div>
                                        <% } else { %>
                                            <span class="text-xs text-gray-400">-</span>
                                            <% } %>
                                </div>

                                <!-- Sampah Row -->
                                <div
                                    class="flex justify-between items-center p-2 rounded-md <%= item.sampah && item.sampah.status === 'lunas' ? 'bg-green-50' : 'bg-red-50' %>">
                                    <div class="flex items-center">
                                        <span
                                            class="w-2 h-2 rounded-full mr-2 <%= item.sampah && item.sampah.status === 'lunas' ? 'bg-green-500' : 'bg-red-500' %>"></span>
                                        <span class="text-sm font-medium text-gray-700">Sampah</span>
                                    </div>
                                    <% if(item.sampah) { %>
                                        <div class="flex flex-col items-end">
                                            <span
                                                class="text-xs font-bold <%= item.sampah.status === 'lunas' ? 'text-green-700' : 'text-red-700' %>">
                                                <%= item.sampah.status==='lunas' ? 'LUNAS' :
                                                    item.sampah.status.replace('_', ' ' ).toUpperCase() %>
                                            </span>
                                            <div class="flex space-x-2 mt-1">
                                                <% if(item.sampah.bukti_bayar) { %>
                                                    <a href="<%= item.sampah.bukti_bayar.startsWith('/uploads/') ? item.sampah.bukti_bayar : '/uploads/' + item.sampah.bukti_bayar %>"
                                                        target="_blank" class="text-indigo-600 hover:text-indigo-900"
                                                        title="Lihat Bukti">
                                                        <svg class="w-4 h-4" fill="none" stroke="currentColor"
                                                            viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                                stroke-width="2"
                                                                d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13">
                                                            </path>
                                                        </svg>
                                                    </a>
                                                    <% } %>
                                                        <% if(item.sampah.status==='menunggu_konfirmasi' &&
                                                            (user.role==='admin' || user.role==='bendahara' )) { %>
                                                            <a href="/iuran/confirm/<%= item.sampah.id %>"
                                                                class="text-xs text-blue-600 hover:underline">Confirm</a>
                                                            <% } %>
                                            </div>
                                        </div>
                                        <% } else { %>
                                            <span class="text-xs text-gray-400">-</span>
                                            <% } %>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>
            </div>
        </div>

        <script>
            function switchView(view) {
                const tableBtn = document.getElementById('btn-table');
                const gridBtn = document.getElementById('btn-grid');
                const tableView = document.getElementById('view-table');
                const gridView = document.getElementById('view-grid');

                if (view === 'table') {
                    tableView.classList.remove('hidden');
                    gridView.classList.add('hidden');

                    tableBtn.classList.add('bg-white', 'shadow-sm', 'text-gray-900');
                    tableBtn.classList.remove('text-gray-500');

                    gridBtn.classList.remove('bg-white', 'shadow-sm', 'text-gray-900');
                    gridBtn.classList.add('text-gray-500');
                } else {
                    tableView.classList.add('hidden');
                    gridView.classList.remove('hidden');

                    gridBtn.classList.add('bg-white', 'shadow-sm', 'text-gray-900');
                    gridBtn.classList.remove('text-gray-500');

                    tableBtn.classList.remove('bg-white', 'shadow-sm', 'text-gray-900');
                    tableBtn.classList.add('text-gray-500');
                }

                // Save preference
                localStorage.setItem('iuranView', view);
            }

            // Load preference
            document.addEventListener('DOMContentLoaded', () => {
                const savedView = localStorage.getItem('iuranView') || 'table';
                switchView(savedView);
            });
        </script>

        <%- include('../partials/footer') %>