            <script>
                function filterTable() {
                    const input = document.getElementById('searchInput');
                    const filter = input.value.toLowerCase();
                    const table = document.getElementById('arrearsTable');
                    const tr = table.getElementsByTagName('tr');

                    for (let i = 1; i < tr.length - 1; i++) { // Skip header and footer
                        const nameCol = tr[i].querySelector('.search-name'); // Now multiple can exist
                        const blokCol = tr[i].querySelector('.search-blok');

                        let found = false;
                        if (blokCol && blokCol.textContent.toLowerCase().indexOf(filter) > -1) {
                            found = true;
                        }
                        if (!found && nameCol) { // Check all names in the row
                            const namesInRow = tr[i].querySelectorAll('.search-name');
                            for (let j = 0; j < namesInRow.length; j++) {
                                if (namesInRow[j].textContent.toLowerCase().indexOf(filter) > -1) {
                                    found = true;
                                    break;
                                }
                            }
                        }

                        if (found) {
                            tr[i].style.display = "";
                        } else {
                            tr[i].style.display = "none";
                        }
                    }
                }

                let sortDirection = 1;
                let lastSortCol = -1;

                function sortTable(n) {
                    const table = document.getElementById('arrearsTable');
                    const tbody = table.querySelector('tbody');
                    const rows = Array.from(tbody.querySelectorAll('tr'));

                    // If no data row (empty state), don't sort
                    if (rows.length === 1 && rows[0].innerText.includes('Tidak ada tunggakan')) return;

                    // Toggle direction
                    if (lastSortCol === n) {
                        sortDirection *= -1;
                    } else {
                        sortDirection = 1;
                        lastSortCol = n;
                    }

                    rows.sort((a, b) => {
                        let x, y;

                        if (n === 0) { // Rumah (Blok)
                            x = a.querySelector('.search-blok').innerText.toLowerCase();
                            y = b.querySelector('.search-blok').innerText.toLowerCase();
                        } else if (n === 2) { // Total (Numeric)
                            x = parseInt(a.querySelector('.search-total').dataset.value);
                            y = parseInt(b.querySelector('.search-total').dataset.value);
                            return (x - y) * sortDirection;
                        } else if (n === 3) { // Warga (Name)
                            // Get all resident names for the house and join them for comparison
                            const namesA = Array.from(a.querySelectorAll('.search-name')).map(el => el.innerText.toLowerCase()).join(' ');
                            const namesB = Array.from(b.querySelectorAll('.search-name')).map(el => el.innerText.toLowerCase()).join(' ');
                            x = namesA;
                            y = namesB;
                        } else {
                            return 0;
                        }

                        if (x < y) return -1 * sortDirection;
                        if (x > y) return 1 * sortDirection;
                        return 0;
                    });

                    rows.forEach(row => tbody.appendChild(row));
                }
            </script>

