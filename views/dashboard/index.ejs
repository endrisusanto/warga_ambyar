                            <!-- 2. Ronda Schedule -->
                            <div class="md:col-span-1 lg:col-span-1 glass-card p-6 flex flex-col h-full">
                                <h3 class="font-bold text-lg mb-4 text-center text-gray-900 dark:text-gray-100">
                                    Jadwal Ronda
                                </h3>

                                <% const schedule=jadwalRonda.length> 0 ? jadwalRonda[0] : null; %>

                                    <div class="flex-grow">
                                        <div class="flex flex-col items-center justify-center mb-6">
                                            <div
                                                class="text-gray-700 dark:text-gray-300 text-sm uppercase tracking-wider font-medium mb-2 text-center">
                                                <%= schedule ? schedule.day : 'Tidak ada jadwal' %>
                                            </div>
                                            <% if(schedule && schedule.isUpcoming && schedule.date) { %>
                                                <div id="ronda-countdown"
                                                    class="bg-emerald-500/10 border border-emerald-500/20 px-4 py-1 rounded-full text-emerald-400 text-xs font-bold tracking-wide shadow-[0_0_10px_rgba(16,185,129,0.1)]">
                                                    Loading...
                                                </div>
                                                <script>
                                                    (function () {
                                                        const targetDate = new Date('<%= schedule.date %>');
                                                        targetDate.setHours(23, 0, 0, 0); // Set to 23:00

                                                        function updateCountdown() {
                                                            const now = new Date();
                                                            const diff = targetDate - now;

                                                            if (diff <= 0) {
                                                                const el = document.getElementById('ronda-countdown');
                                                                if (el) el.innerText = 'Sekarang!';
                                                                return;
                                                            }

                                                            const days = Math.floor(diff / (1000 * 60 * 60 * 24));
                                                            const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                                                            const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
                                                            const seconds = Math.floor((diff % (1000 * 60)) / 1000);

                                                            let text = '';
                                                            if (days > 0) text += days + 'h ';
                                                            text += hours + 'j ' + minutes + 'm ' + seconds + 'd';

                                                            const el = document.getElementById('ronda-countdown');
                                                            if (el) el.innerText = text;
                                                        }

                                                        setInterval(updateCountdown, 1000);
                                                        updateCountdown();
                                                    })();
                                                </script>
                                                <% } %>
                                        </div>

                                        <% if(schedule && schedule.petugas.length> 0) { %>
