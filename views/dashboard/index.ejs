                                                    if (status === 'kontrak') {
                                                    bgClass = 'bg-amber-500/20 glass-strong border-amber-500/30';
                                                    } else if (status === 'tetap' || status === 'isi') {
                                                    bgClass = 'bg-blue-500/20 glass-strong border-blue-500/30';
