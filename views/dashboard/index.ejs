                                (function () {
                                    const modal = document.getElementById('complaintModal');
                                    if (!modal) return;

                                    const slides = document.querySelectorAll('.complaint-slide');
                                    const totalSlides = slides.length;
                                    let currentSlide = 0;

                                    function init() {
                                        const hideDate = localStorage.getItem('hideComplaintsDate');
                                        const today = new Date().toDateString();

                                        // Debug logging
                                        console.log('Complaint Modal Debug:', {
                                            hideDate: hideDate,
                                            today: today,
                                            shouldHide: hideDate === today,
                                            totalSlides: totalSlides
                                        });

                                        // Check if force show via URL parameter
                                        const urlParams = new URLSearchParams(window.location.search);
                                        const forceShow = urlParams.get('show_complaints') === 'true';

                                        if (hideDate === today && !forceShow) {
                                            console.log('Modal hidden due to localStorage preference');
                                            return;
                                        }

                                        modal.classList.remove('hidden');
                                        showSlide(0);
                                        console.log('Modal shown');
                                    }

                                    function showSlide(index) {
                                        slides.forEach((s, i) => {
                                            if (i === index) {
                                                s.classList.remove('opacity-0', 'translate-x-full', 'absolute', 'pointer-events-none');
                                                s.classList.add('opacity-100', 'translate-x-0', 'relative');
                                            } else {
                                                s.classList.add('opacity-0', 'translate-x-full', 'absolute', 'pointer-events-none');
                                                s.classList.remove('opacity-100', 'translate-x-0', 'relative');
                                            }
                                        });
                                        currentSlide = index;
                                        const counter = document.getElementById('slideCounter');
                                        if (counter) counter.innerText = (currentSlide + 1) + ' / ' + totalSlides;
                                    }

                                    window.nextComplaint = function () {
                                        let next = currentSlide + 1;
                                        if (next >= totalSlides) next = 0;
                                        showSlide(next);
                                    }

                                    window.prevComplaint = function () {
                                        let prev = currentSlide - 1;
                                        if (prev < 0) prev = totalSlides - 1;
                                        showSlide(prev);
                                    }

                                    let dontShowEnabled = false;

                                    window.toggleDontShow = function () {
                                        dontShowEnabled = !dontShowEnabled;
                                        const btn = document.getElementById('dontShowTodayBtn');
                                        const indicator = document.getElementById('toggleIndicator');

                                        if (dontShowEnabled) {
                                            // Active state
                                            btn.classList.remove('bg-white', 'dark:bg-white/5', 'border-gray-200', 'dark:border-white/10');
                                            btn.classList.add('bg-emerald-50', 'dark:bg-emerald-500/10', 'border-emerald-500', 'dark:border-emerald-400');

