                                        modal.classList.add('hidden');
                                        if (dontShowEnabled) {
                                            localStorage.setItem('hideComplaintsDate', new Date().toDateString());
                                        }
                                    }

                                    // Init on load
                                    init();
                                })();
                            </script>
