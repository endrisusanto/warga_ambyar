<%- include('../partials/head') %>
    <title>
        <%= title %>
    </title>
    <meta property="og:title" content="<%= title %>">
    <meta property="og:description"
        content="Keterangan: <%= share.keterangan || 'Tidak ada keterangan' %> | Tanggal: <%= moment(share.tanggal).format('DD MMM YYYY') %>">
    <meta property="og:image" content="<%= process.env.APP_URL %>/uploads/shares/events/<%= share.image_filename %>">
    <meta property="og:type" content="article">
    </head>

    <body class="bg-gray-900 min-h-screen text-gray-900 dark:text-gray-100 font-sans selection:bg-indigo-500 selection:text-white">

        <div class="fixed inset-0 z-0 pointer-events-none">
            <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-br from-indigo-900/20 via-gray-900 to-black">
            </div>
            <div class="absolute top-[-20%] left-[-10%] w-[50%] h-[50%] bg-indigo-500/10 rounded-full blur-[120px]">
            </div>
            <div class="absolute bottom-[-20%] right-[-10%] w-[50%] h-[50%] bg-purple-500/10 rounded-full blur-[120px]">
            </div>
        </div>

        <div
            class="relative z-10 max-w-4xl mx-auto px-4 py-8 sm:px-6 lg:px-8 flex flex-col items-center justify-center min-h-screen">

            <div class="w-full text-center mb-8">
                <h1
                    class="text-3xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-indigo-400 to-purple-400 drop-shadow-sm mb-2">
                    <%= title %>
                </h1>
                <p class="text-gray-600 dark:text-gray-400 text-sm">
                    <%= moment(share.tanggal).format('dddd, DD MMMM YYYY') %>
                        <% if(share.lokasi) { %> | üìç <%= share.lokasi %>
                                <% } %>
                </p>
            </div>

            <div
                class="glass-card p-2 sm:p-4 rounded-xl overflow-hidden shadow-2xl border border-white/10 bg-gray-100 dark:bg-white/5 backdrop-blur-md relative max-w-full">
                <img src="/uploads/shares/events/<%= share.image_filename %>" alt="Pengumuman"
                    class="w-full h-auto rounded-lg shadow-lg">

                <a href="/uploads/shares/events/<%= share.image_filename %>"
                    download="Pengumuman-<%= moment(share.tanggal).format('YYYY-MM-DD') %>.png"
                    class="absolute bottom-4 right-4 bg-black/50 hover:bg-black/70 text-white p-2 rounded-full backdrop-blur-sm transition-all border border-white/20"
                    title="Download Image">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                    </svg>
                </a>
            </div>

            <div class="mt-8 flex gap-4">
                <a href="/"
                    class="glass-button px-6 py-2.5 rounded-xl font-bold text-gray-700 dark:text-gray-300 hover:text-white border border-white/10 hover:bg-gray-200 dark:bg-white/10 transition-all flex items-center gap-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6">
                        </path>
                    </svg>
                    Home
                </a>
            </div>

            <div class="mt-12 text-center">
                <div
                    class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-gray-100 dark:bg-white/5 border border-white/10 backdrop-blur-sm">
                    <span class="text-xs text-gray-500 font-medium tracking-wider uppercase">Powered by</span>
                    <span
                        class="text-sm font-bold bg-clip-text text-transparent bg-gradient-to-r from-emerald-400 to-cyan-400">Warga
                        Ambyar</span>
                </div>
            </div>
        </div>

    </body>

    </html>