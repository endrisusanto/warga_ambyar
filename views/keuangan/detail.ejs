<%- include('../partials/head') %>
    <%- include('../partials/navbar') %>

        <div class="min-h-screen pb-20 pt-10">
            <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">

                <!-- Breadcrumb -->
                <nav class="flex mb-5" aria-label="Breadcrumb">
                    <ol class="flex items-center space-x-4">
                        <li>
                            <div>
                                <a href="/keuangan" class="text-gray-600 dark:text-gray-400 hover:text-gray-200">
                                    <svg class="flex-shrink-0 h-5 w-5" xmlns="http://www.w3.org/2000/svg"
                                        viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                        <path
                                            d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
                                    </svg>
                                    <span class="sr-only">Home</span>
                                </a>
                            </div>
                        </li>
                        <li>
                            <div class="flex items-center">
                                <svg class="flex-shrink-0 h-5 w-5 text-gray-500" xmlns="http://www.w3.org/2000/svg"
                                    fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                                    <path fill-rule="evenodd"
                                        d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                                        clip-rule="evenodd" />
                                </svg>
                                <a href="/keuangan"
                                    class="ml-4 text-sm font-medium text-gray-600 dark:text-gray-400 hover:text-gray-200">Keuangan</a>
                            </div>
                        </li>
                        <li>
                            <div class="flex items-center">
                                <svg class="flex-shrink-0 h-5 w-5 text-gray-500" xmlns="http://www.w3.org/2000/svg"
                                    fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                                    <path fill-rule="evenodd"
                                        d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                                        clip-rule="evenodd" />
                                </svg>
                                <a href="#" aria-current="page"
                                    class="ml-4 text-sm font-medium text-emerald-500 font-bold">Detail Transaksi</a>
                            </div>
                        </li>
                    </ol>
                </nav>

                <div class="glass-card rounded-2xl overflow-hidden shadow-2xl border border-white/10 relative">
                    <!-- Header Pattern -->
                    <div
                        class="absolute top-0 inset-x-0 h-40 bg-gradient-to-br from-emerald-600/20 via-emerald-900/40 to-black/20">
                    </div>

                    <div class="relative px-6 pt-12 pb-6 sm:px-10 sm:pt-16">
                        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center">
                            <div>
                                <h1 class="text-3xl sm:text-4xl font-black text-gray-900 dark:text-white flex items-center tracking-tight">
                                    <span
                                        class="bg-emerald-600 text-white dark:bg-emerald-500/20 dark:text-inherit p-2.5 rounded-2xl mr-4 border border-emerald-500/30 shadow-lg shadow-emerald-500/10">ðŸ§¾</span>
                                    Detail Pembayaran
                                </h1>
                                <p class="text-gray-500 dark:text-emerald-300/60 mt-3 ml-2 text-sm font-medium">ID Transaksi: <span
                                        class="text-emerald-700 dark:text-emerald-400">#<%= iuran ? iuran.id : 'MANUAL_KAS' %></span></p>
                            </div>
                        </div>
                    </div>

                    <% if (iuran && iuran.tanggal_bayar) { %>
                        <div class="mb-8 flex justify-center">
                            <div
                                class="flex items-center bg-white border-gray-300 dark:bg-white/10 dark:border-white/10 border rounded-full px-1 py-1 shadow-sm dark:shadow-inner">
                                <div class="flex items-center gap-2 px-3 py-1">
                                    <span class="text-xs text-gray-500 dark:text-gray-400 font-bold uppercase tracking-wider">Bayar</span>
                                    <span class="text-xs text-gray-700 dark:text-gray-200 font-medium">
                                        <%= moment(iuran.tanggal_bayar).format('DD MMM YYYY, HH:mm') %>
                                    </span>
                                </div>

                                <% if (iuran.tanggal_konfirmasi) { %>
                                    <div class="px-1 text-gray-600">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none"
                                            viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M9 5l7 7-7 7" />
                                        </svg>
                                    </div>
                                    <div
                                        class="flex items-center gap-2 px-3 py-1 bg-emerald-600 text-white rounded-full border border-emerald-600 shadow-sm">
                                        <span class="text-xs font-bold uppercase tracking-wider">Approved</span>
                                        <span class="text-xs font-medium">
                                            <%= moment(iuran.tanggal_konfirmasi).format('DD MMM YYYY, HH:mm') %>
                                        </span>
                                    </div>
                                    <% } %>
                            </div>
                        </div>
                        <% } %>

                            <!-- Info Grid -->
                            <div class="grid grid-cols-1 lg:grid-cols-12 gap-10 mb-10 px-6 sm:px-10 relative">
                                <!-- Left: Details -->
                                <div class="lg:col-span-7 space-y-8">
                                    <% if(iuran) { %>
                                        <div class="bg-gray-100 dark:bg-white/5 rounded-xl p-5 border border-white/5 space-y-4">
                                            <div>
                                                <label
                                                    class="block text-xs font-medium text-gray-600 dark:text-gray-400 uppercase tracking-wider">Warga</label>
                                                <div class="mt-1 flex items-center">
                                                    <div
                                                        class="h-10 w-10 rounded-full bg-emerald-500/20 flex items-center justify-center text-emerald-400 font-bold mr-3 border border-emerald-500/20">
                                                        <%= iuran.nama ? iuran.nama.charAt(0) : 'W' %>
                                                    </div>
                                                    <div>
                                                        <div class="text-lg font-bold text-gray-900 dark:text-white">
                                                            <%= iuran.warga_nama %>
                                                        </div>
                                                        <div class="text-sm text-gray-600 dark:text-gray-400">Blok <%= iuran.blok %>-<%=
                                                                    iuran.nomor_rumah %>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <% if (iuran.payer_nama) { %>
                                                <div class="pt-3 border-t border-white/5">
                                                    <label
                                                        class="block text-xs font-medium text-gray-600 dark:text-gray-400 uppercase tracking-wider mb-1">Dibayarkan
                                                        Oleh</label>
                                                    <div class="text-gray-800 dark:text-gray-200">
                                                        <%= iuran.payer_nama %>
                                                    </div>
                                                </div>
                                                <% } %>

                                                    <div class="grid grid-cols-2 gap-4 pt-3 border-t border-white/5">
                                                        <div>
                                                            <label
                                                                class="block text-xs font-medium text-gray-600 dark:text-gray-400 uppercase tracking-wider mb-1">Periode</label>
                                                            <div class="text-emerald-700 dark:text-emerald-300 font-semibold">
                                                                <%= moment(iuran.periode).format('MMMM YYYY') %>
                                                            </div>
                                                        </div>
                                                        <div>
                                                            <label
                                                                class="block text-xs font-medium text-gray-600 dark:text-gray-400 uppercase tracking-wider mb-1">Jenis</label>
                                                            <div class="text-gray-900 dark:text-white font-medium capitalize">
                                                                <%= iuran.jenis.replace('_', ' ' ) %>
                                                            </div>
                                                        </div>
                                                    </div>
                                        </div>
                                        <% } else { %>
                                            <div class="bg-gray-100 dark:bg-white/5 rounded-xl p-5 border border-white/5">
                                                <p class="text-gray-600 dark:text-gray-400 italic">Informasi detail pembayar tidak tersedia
                                                    (Transaksi Manual).</p>
                                            </div>
                                            <% } %>

                                                <!-- Transaction Breakdown -->
                                                <div class="bg-white dark:bg-black/30 rounded-xl p-5 border border-gray-200 dark:border-white/5 shadow-sm">
                                                    <h3
                                                        class="text-sm font-bold text-emerald-700 dark:text-emerald-400 uppercase tracking-wider mb-4 border-b border-gray-200 dark:border-white/10 pb-2 flex justify-between">
                                                        <span>Rincian Transaksi</span>
                                                        <span class="text-[10px] text-gray-500 font-normal normal-case">v2.1</span>
                                                    </h3>
                                                    <div class="space-y-3">
                                                        <% let total=0; %>
                                                            <% kas.forEach(t=> {
                                                                let amount = Number(t.jumlah);
                                                                if(t.tipe === 'masuk') total += amount;
                                                                else total -= amount;
                                                                %>
                                                                <div class="flex justify-between items-start text-sm group hover:bg-gray-100 dark:bg-white/5 p-1 rounded transition-colors">
                                                                    <div class="flex-1">
                                                                        <% 
                                                                            let ket = t.keterangan;
                                                                            let badge = '';
                                                                            let badgeColor = 'bg-gray-500/20 text-gray-600 dark:text-gray-400 border-gray-500/30';
                                                                            
                                                                            const match = ket.match(/\[(.*?)\]/);
                                                                            if (match) {
                                                                                badge = match[1];
                                                                                ket = ket.replace(match[0], '').trim();
                                                                                
                                                                                const b = badge.toLowerCase();
                                                                                if(b.includes('rt')) badgeColor = 'bg-cyan-500/20 text-cyan-600 dark:text-cyan-400 border-cyan-500/30';
                                                                                else if(b.includes('gang')) badgeColor = 'bg-purple-500/20 text-purple-600 dark:text-purple-400 border-purple-500/30';
                                                                                else if(b.includes('sampah') || b.includes('kebersihan')) badgeColor = 'bg-orange-500/20 text-orange-600 dark:text-orange-400 border-orange-500/30';
                                                                            }
                                                                        %>
                                                                        <div class="text-gray-800 dark:text-gray-200 font-medium">
                                                                            <%= ket %>
                                                                            <% if(badge) { %>
                                                                                <span class="inline-block ml-1 px-1.5 py-0.5 rounded text-[10px] uppercase font-bold border <%= badgeColor %>"><%= badge %></span>
                                                                            <% } %>
                                                                        </div>
                                                                        <div class="text-xs text-gray-500">
                                                                            <%= moment(t.tanggal).format('DD MMM YYYY') %>
                                                                        </div>
                                                                    </div>
                                                                    <div class="font-bold font-mono pl-4 flex items-center <%= t.tipe === 'masuk' ? 'text-emerald-400' : 'text-red-400' %>">
                                                                        <%= t.tipe==='masuk' ? '+' : '-' %> Rp <%= amount.toLocaleString('id-ID') %>
                                                                    </div>
                                                                </div>
                                                                <% }) %>

                                                                    <% if(kas.length===0) { %>
                                                                        <p
                                                                            class="text-gray-500 italic text-sm text-center py-2">
                                                                            Tidak ada data rincian.</p>
                                                                        <% } %>

                                                                            <div
                                                                                class="border-t border-gray-200 dark:border-white/10 pt-3 flex justify-between items-center mt-2">
                                                                                <span
                                                                                    class="text-gray-600 dark:text-gray-400 font-bold">Total</span>
                                                                                <span
                                                                                    class="text-xl font-bold text-gray-900 dark:text-white">Rp
                                                                                    <%= total.toLocaleString('id-ID') %>
                                                                                </span>
                                                                            </div>
                                                    </div>
                                                </div>
                                </div>

                                <!-- Right: Proof Image -->
                                <div class="lg:col-span-5 flex flex-col">
                                    <label
                                        class="block text-sm font-bold text-gray-600 dark:text-gray-400 mb-3 uppercase tracking-wider">Bukti
                                        Transfer</label>
                                    <div
                                        class="relative group rounded-3xl overflow-hidden border-8 border-white/5 bg-black/40 shadow-2xl transition-transform hover:scale-[1.01]">
                                        <% let filename=iuran ? iuran.bukti_bayar : (kas.length> 0 ? kas[0].bukti_foto :
                                            '');
                                            let proofUrl = filename && filename.startsWith('bukti_bayar-') ? '/uploads/'
                                            + filename
                                            :
                                            (filename ? '/uploads/keuangan/' + filename : '/img/placeholder.png');
                                            %>
                                            <img src="<%= proofUrl %>"
                                                class="w-full object-contain max-h-[700px] transition-transform duration-700 group-hover:scale-110"
                                                alt="Bukti Transfer">

                                            <div
                                                class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                                            </div>

                                            <a href="<%= proofUrl %>" target="_blank"
                                                class="absolute bottom-6 left-1/2 -translate-x-1/2 bg-white text-black hover:bg-emerald-500 hover:text-white rounded-2xl px-6 py-3 text-sm font-bold shadow-2xl transition-all flex items-center transform translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100">
                                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor"
                                                    viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                        stroke-width="2.5"
                                                        d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4">
                                                    </path>
                                                </svg>
                                                Lihat Full Size
                                            </a>
                                    </div>
                                    <div class="mt-4 text-center">
                                        <p class="text-xs text-gray-500">Klik tombol di atas untuk melihat ukuran penuh
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <!-- Footer -->
                            <div class="border-t border-white/10 pt-6 pb-10 flex justify-center">
                                <a href="/keuangan"
                                    class="glass-button px-6 py-2 rounded-xl text-gray-700 dark:text-gray-300 border border-white/10 flex items-center transition-all bg-gray-100 dark:bg-white/5 hover:bg-emerald-600 hover:text-white hover:border-emerald-600 dark:hover:bg-emerald-600 dark:hover:border-emerald-600 shadow-sm hover:shadow-emerald-500/30">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                                    </svg>
                                    Kembali ke Laporan
                                </a>
                            </div>

                </div>
            </div>

        </div>
        </div>

        <%- include('../partials/footer') %>
