<%- include('../partials/head') %>
    <%- include('../partials/navbar') %>

        <div class="min-h-screen pb-20">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">

                <!-- Header Section -->
                <div class="md:flex md:items-center md:justify-between mb-8">
                    <div class="flex-1 min-w-0">
                        <h2
                            class="text-2xl font-bold leading-7 text-emerald-400 sm:text-3xl sm:truncate flex items-center">
                            <span
                                class="bg-emerald-500/10 text-emerald-400 p-2 rounded-lg mr-3 border border-emerald-500/20">üí∞</span>
                            Laporan Keuangan
                        </h2>
                        <p class="mt-2 text-sm text-emerald-100/70 ml-1">
                            Neraca kas, rekapitulasi pemasukan warga, dan transparansi pengeluaran operasional.
                        </p>
                    </div>
                    <div class="mt-4 flex md:mt-0 md:ml-4 space-x-3">
                        <a href="/activity/timeline"
                            class="glass-button inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium text-gray-700 dark:text-gray-300 transition border border-white/10">
                            <span class="mr-2">üïí</span> Log
                        </a>
                        <a href="/keuangan/export" target="_blank"
                            class="glass-button inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium text-gray-700 dark:text-gray-300 transition border border-white/10">
                            <svg class="-ml-1 mr-2 h-5 w-5 text-gray-600 dark:text-gray-400"
                                xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                            </svg>
                            Export Excel
                        </a>
                        <% if(user.role==='admin' || user.role==='bendahara' ) { %>
                        <form action="/keuangan/sync" method="POST" class="inline" onsubmit="return confirm('Apakah Anda yakin ingin menyinkronkan data kas dengan data iuran? Data kas kategori iuran akan digenerate ulang.');">
                            <button type="submit" class="glass-button inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium text-gray-700 dark:text-gray-300 transition border border-white/10" title="Sync ulang kas dengan data pembayaran">
                                <svg class="-ml-1 mr-2 h-5 w-5 text-gray-600 dark:text-gray-400" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                                </svg>
                                Sync
                            </button>
                        </form>
                        <% } %>
                        <% if(user.role==='admin' || user.role==='bendahara' ) { %>
                            <button type="button" onclick="openModal()"
                                class="glass-button inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium text-emerald-100 bg-emerald-500/20 hover:bg-emerald-500/30 transition border border-emerald-500/30">
                                <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none"
                                    viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                                </svg>
                                Catat Transaksi
                            </button>
                            <% } %>
                    </div>
                </div>

                <!-- Stats Cards -->
                <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-8">
                    <!-- Saldo -->
                    <div
                        class="glass-card overflow-hidden rounded-xl border-t-2 border-white/20 hover:bg-gray-200 dark:bg-white/10 transition duration-300">
                        <div class="p-4">
                            <div class="flex items-center">
                                <div class="flex-shrink-0">
                                    <div
                                        class="rounded-full bg-emerald-500/10 w-12 h-12 flex items-center justify-center border border-emerald-500/20">
                                        <span class="text-lg font-bold text-emerald-400">Rp</span>
                                    </div>
                                </div>
                                <div class="ml-3 w-0 flex-1">
                                    <dl>
                                        <dt
                                            class="text-xs font-medium text-emerald-400/80 truncate uppercase tracking-wide">
                                            Saldo Kas</dt>
                                        <dd>
                                            <div
                                                class="text-xl font-bold text-emerald-600 dark:text-emerald-100 mt-0.5">
                                                Rp <%= Number(saldo).toLocaleString('id-ID') %>
                                            </div>
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Piutang (NEW) -->
                    <a href="/iuran/arrears"
                        class="glass-card overflow-hidden rounded-xl border-t-2 border-white/20 hover:bg-gray-200 dark:bg-white/10 transition duration-300 cursor-pointer group">
                        <div class="p-4">
                            <div class="flex items-center">
                                <div class="flex-shrink-0">
                                    <div class="rounded-full bg-amber-500/10 p-3 border border-amber-500/20 group-hover:scale-110 transition-transform">
                                        <svg class="h-6 w-6 text-amber-400" fill="none" stroke="currentColor"
                                            viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                        </svg>
                                    </div>
                                </div>
                                <div class="ml-3 w-0 flex-1">
                                    <dl>
                                        <dt
                                            class="text-xs font-medium text-amber-400/80 truncate uppercase tracking-wide flex items-center">
                                            Piutang
                                            <svg class="w-3 h-3 ml-1 opacity-0 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                                            </svg>
                                        </dt>
                                        <dd>
                                            <div class="text-xl font-bold text-amber-600 dark:text-amber-200 mt-0.5">
                                                Rp <%= Number(totalPiutang || 0).toLocaleString('id-ID') %>
                                            </div>
                                            <div class="text-[10px] text-amber-500/70 mt-0.5">Klik detail</div>
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </a>

                    <!-- Pemasukan -->
                    <div
                        class="glass-card overflow-hidden rounded-xl border-t-2 border-white/20 hover:bg-gray-200 dark:bg-white/10 transition duration-300">
                        <div class="p-4">
                            <div class="flex items-center">
                                <div class="flex-shrink-0">
                                    <div class="rounded-full bg-emerald-500/10 p-3 border border-emerald-500/20">
                                        <svg class="h-6 w-6 text-emerald-400" fill="none" stroke="currentColor"
                                            viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                                        </svg>
                                    </div>
                                </div>
                                <div class="ml-3 w-0 flex-1">
                                    <dl>
                                        <dt
                                            class="text-xs font-medium text-emerald-400/80 truncate uppercase tracking-wide">
                                            Pemasukan</dt>
                                        <dd>
                                            <div class="text-xl font-bold text-emerald-600 dark:text-emerald-200 mt-0.5">
                                                + Rp <%= Number(pemasukanBulanIni).toLocaleString('id-ID') %>
                                            </div>
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Pengeluaran -->
                    <div
                        class="glass-card overflow-hidden rounded-xl border-t-2 border-white/20 hover:bg-gray-200 dark:bg-white/10 transition duration-300">
                        <div class="p-4">
                            <div class="flex items-center">
                                <div class="flex-shrink-0">
                                    <div class="rounded-full bg-red-500/10 p-3 border border-red-500/20">
                                        <svg class="h-6 w-6 text-red-400" fill="none" stroke="currentColor"
                                            viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M13 17h8m0 0V9m0 8l-8-8-4 4-6-6" />
                                        </svg>
                                    </div>
                                </div>
                                <div class="ml-3 w-0 flex-1">
                                    <dl>
                                        <dt
                                            class="text-xs font-medium text-red-400/80 truncate uppercase tracking-wide">
                                            Pengeluaran</dt>
                                        <dd>
                                            <div class="text-xl font-bold text-red-600 dark:text-red-200 mt-0.5">- Rp <%=
                                                    Number(pengeluaranBulanIni).toLocaleString('id-ID') %>
                                            </div>
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Main Content Grid -->
                <div class="grid grid-cols-1 gap-8">

                    <!-- Financial Chart -->
                    <div class="glass-card rounded-xl p-6 w-full transition-shadow hover:bg-gray-200 dark:bg-white/10">
                        <div class="flex justify-between items-center mb-6">
                            <h3 class="text-lg font-bold text-emerald-400 flex items-center">
                                <span
                                    class="bg-emerald-500/10 p-1.5 rounded-lg mr-2 border border-emerald-500/20">üìä</span>
                                Tren
                                Keuangan (12 Bulan)
                            </h3>
                        </div>
                        <div class="relative h-80 w-full">
                            <canvas id="financeChart"></canvas>
                        </div>
                    </div>

                    <!-- Recent Transactions Table -->
                    <div
                        class="glass-card rounded-xl overflow-hidden flex flex-col w-full transition-shadow hover:bg-gray-200 dark:bg-white/10">
                        <div
                            class="px-6 py-4 border-b border-emerald-500/20 bg-emerald-500/5 flex justify-between items-center">
                            <h3 class="text-lg font-bold text-emerald-400 flex items-center">
                                <span
                                    class="bg-emerald-500/10 p-1.5 rounded-lg mr-2 border border-emerald-500/20">üìù</span>
                                Mutasi
                                Terakhir
                            </h3>
                        </div>
                        <div class="p-0">
                            <table class="min-w-full divide-y divide-emerald-500/10">
                                <thead class="bg-emerald-500/10 sticky top-0 z-10">
                                    <tr>
                                        <th scope="col"
                                            class="px-6 py-3 text-left text-xs font-bold text-emerald-400 uppercase tracking-wider">
                                            Keterangan</th>
                                        <th scope="col"
                                            class="px-3 py-3 text-right text-xs font-bold text-emerald-600 dark:text-emerald-400 uppercase tracking-wider">
                                            Debit (Masuk)</th>
                                        <th scope="col"
                                            class="px-3 py-3 text-right text-xs font-bold text-red-600 dark:text-red-400 uppercase tracking-wider">
                                            Kredit (Keluar)</th>
                                    </tr>
                                </thead>
                                <tbody class="bg-gray-100 dark:bg-white/5 divide-y divide-white/10">
                                    <% transactions.forEach(t=> { %>
                                        <tr class="hover:bg-gray-200 dark:bg-white/10 transition-colors">
                                            <td class="px-6 py-4">
                                                <% 
                                                    let ket = t.keterangan;
                                                    let badge = '';
                                                    let badgeColor = 'bg-gray-500/20 text-gray-600 dark:text-gray-400 border-gray-500/30';
                                                    
                                                    const match = ket.match(/\[(.*?)\]/);
                                                    if (match) {
                                                        badge = match[1];
                                                        ket = ket.replace(match[0], '').trim();
                                                        
                                                        const b = badge.toLowerCase();
                                                        if(b.includes('rt')) badgeColor = 'bg-cyan-500/20 text-cyan-600 dark:text-cyan-400 border-cyan-500/30';
                                                        else if(b.includes('gang')) badgeColor = 'bg-purple-500/20 text-purple-600 dark:text-purple-400 border-purple-500/30';
                                                        else if(b.includes('sampah') || b.includes('kebersihan')) badgeColor = 'bg-orange-500/20 text-orange-600 dark:text-orange-400 border-orange-500/30';
                                                    }
                                                %>
                                                <div class="text-sm font-semibold text-gray-800 dark:text-gray-200">
                                                    <%= ket %>
                                                    <% if(badge) { %>
                                                        <span class="inline-block ml-2 px-1.5 py-0.5 rounded text-[10px] uppercase font-bold border <%= badgeColor %>"><%= badge %></span>
                                                    <% } %>
                                                </div>
                                                <div class="flex items-center mt-1 space-x-2">
                                                    <span class="text-xs text-gray-500">
                                                        <%= moment(t.tanggal).format('DD MMM YYYY HH:mm') %>
                                                    </span>
                                                    <% if(t.bukti_foto) { let
                                                        proofPath=t.bukti_foto.startsWith('bukti_bayar-') ? '/uploads/'
                                                        + t.bukti_foto : '/uploads/keuangan/' + t.bukti_foto; %>
                                                        <a href="/keuangan/transaksi/<%= t.bukti_foto %>"
                                                            class="ml-2 text-emerald-400 hover:text-emerald-300 text-xs flex items-center transition-colors px-2 py-0.5 rounded-full bg-emerald-500/10 hover:bg-emerald-500/20 border border-emerald-500/20">
                                                            <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor"
                                                                viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round"
                                                                    stroke-width="2"
                                                                    d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                                                <path stroke-linecap="round" stroke-linejoin="round"
                                                                    stroke-width="2"
                                                                    d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z">
                                                                </path>
                                                            </svg>
                                                            Lihat Bukti
                                                        </a>
                                                        <% } %>

                                                            <% if(user && (user.role==='admin' ||
                                                                user.role==='bendahara' )) { %>
                                                                <form action="/keuangan/delete/<%= t.id %>"
                                                                    method="POST" class="inline ml-2"
                                                                    onsubmit="return confirm('Apakah anda yakin ingin menghapus transaksi ini?');">
                                                                    <button type="submit"
                                                                        class="text-red-400 hover:text-red-300 text-xs flex items-center transition-colors px-2 py-0.5 rounded-full bg-red-500/10 hover:bg-red-500/20 border border-red-500/20"
                                                                        title="Hapus Transaksi">
                                                                        <svg class="w-3 h-3" fill="none"
                                                                            stroke="currentColor" viewBox="0 0 24 24">
                                                                            <path stroke-linecap="round"
                                                                                stroke-linejoin="round" stroke-width="2"
                                                                                d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16">
                                                                            </path>
                                                                        </svg>
                                                                    </button>
                                                                </form>
                                                                <% } %>

                                                </div>
                                            </td>
                                            <td
                                                class="px-3 py-4 whitespace-nowrap text-right text-sm font-bold text-emerald-600 dark:text-emerald-300">
                                                <%= t.tipe==='masuk' ? Number(t.jumlah).toLocaleString('id-ID') : '-' %>
                                            </td>
                                            <td
                                                class="px-3 py-4 whitespace-nowrap text-right text-sm font-bold text-red-600 dark:text-red-300">
                                                <%= t.tipe==='keluar' ? Number(t.jumlah).toLocaleString('id-ID') : '-'
                                                    %>
                                            </td>
                                        </tr>
                                        <% }) %>
                                            <% if(transactions.length===0) { %>
                                                <tr>
                                                    <td colspan="3" class="px-6 py-10 text-center text-gray-500">Belum
                                                        ada transaksi saat ini.</td>
                                                </tr>
                                                <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal Tambah Transaksi -->
        <div id="addModal" class="fixed inset-0 z-50 hidden overflow-y-auto font-sans" aria-labelledby="modal-title"
            role="dialog" aria-modal="true">
            <div class="flex items-center justify-center min-h-screen px-4 pt-4 pb-20 text-center sm:p-0">
                <div class="fixed inset-0 bg-black/60 transition-opacity backdrop-blur-sm" aria-hidden="true"
                    onclick="closeModal()"></div>

                <div
                    class="relative inline-block align-bottom glass-card rounded-2xl text-left overflow-hidden transform transition-all sm:my-8 sm:max-w-lg sm:w-full">
                    <form action="/keuangan/add" method="POST" enctype="multipart/form-data">
                        <div class="bg-gray-200 dark:bg-white/10 px-4 py-4 sm:px-6 border-b border-white/10">
                            <h3 class="text-lg leading-6 font-bold text-gray-900 dark:text-gray-100 flex items-center"
                                id="modal-title">
                                <svg class="h-6 w-6 mr-2 text-emerald-400" fill="none" stroke="currentColor"
                                    viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M9 13h6m-3-3v6m-9 1V7a2 2 0 012-2h6l2 2h6a2 2 0 012 2v8a2 2 0 01-2 2H5a2 2 0 01-2-2z" />
                                </svg>
                                Catat Transaksi Baru
                            </h3>
                        </div>
                        <div class="px-4 pt-5 pb-4 sm:p-6">

                            <div class="mb-5">
                                <label class="block text-sm font-bold text-gray-700 dark:text-gray-300 mb-2">Jenis
                                    Transaksi</label>
                                <div class="flex bg-black/20 p-1 rounded-lg border border-white/10">
                                    <label class="flex-1 cursor-pointer">
                                        <input type="radio" name="tipe" value="masuk" class="peer sr-only" checked>
                                        <div
                                            class="py-2 text-center rounded-md text-sm font-bold text-gray-600 dark:text-gray-400 peer-checked:bg-emerald-500 peer-checked:text-white peer-checked:shadow-lg transition-all">
                                            üì• Pemasukan
                                        </div>
                                    </label>
                                    <label class="flex-1 cursor-pointer">
                                        <input type="radio" name="tipe" value="keluar" class="peer sr-only">
                                        <div
                                            class="py-2 text-center rounded-md text-sm font-bold text-gray-600 dark:text-gray-400 peer-checked:bg-red-500 peer-checked:text-white peer-checked:shadow-lg transition-all">
                                            üì§ Pengeluaran
                                        </div>
                                    </label>
                                </div>
                            </div>

                            <div class="mb-4">
                                <label class="block text-sm font-bold text-gray-700 dark:text-gray-300 mb-1">Nominal
                                    (Rp)</label>
                                <div class="relative rounded-md">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <span class="text-gray-600 dark:text-gray-400 sm:text-sm">Rp</span>
                                    </div>
                                    <input type="number" name="jumlah" required
                                        class="glass-input block w-full pl-10 sm:text-sm rounded-lg py-2"
                                        placeholder="0">
                                </div>
                            </div>

                            <div class="mb-4">
                                <label class="block text-sm font-bold text-gray-700 dark:text-gray-300 mb-1">Waktu
                                    Transaksi</label>
                                <input type="datetime-local" name="tanggal" required
                                    class="glass-input block w-full sm:text-sm rounded-lg py-2 px-3"
                                    value="<%= moment().utcOffset(7).format('YYYY-MM-DDTHH:mm') %>">
                            </div>

                            <div class="mb-4">
                                <label
                                    class="block text-sm font-bold text-gray-700 dark:text-gray-300 mb-1">Keterangan</label>
                                <textarea name="keterangan" rows="3" required
                                    class="glass-input block w-full sm:text-sm rounded-lg py-2 px-3"
                                    placeholder="Deskripsi transaksi..."></textarea>
                            </div>

                            <div class="mb-4">
                                <div class="mb-4">
                                    <label class="block text-sm font-bold text-gray-700 dark:text-gray-300 mb-2">Bukti
                                        Foto / Struk
                                        <span class="text-red-400 text-xs ml-1">(Wajib)</span></label>
                                    <div id="trx-dropzone"
                                        class="relative border-2 border-dashed border-gray-600 hover:border-emerald-400 bg-gray-100 dark:bg-white/5 rounded-xl p-6 transition-all group cursor-pointer text-center">
                                        <input type="file" name="bukti_foto" id="trx-file-input"
                                            accept="image/*,application/pdf" multiple class="sr-only" required>

                                        <!-- Prompt -->
                                        <div id="trx-dropzone-prompt"
                                            class="flex flex-col items-center justify-center space-y-2 pointer-events-none">
                                            <div
                                                class="w-12 h-12 bg-gray-100 dark:bg-white/5 rounded-full flex items-center justify-center mb-1 group-hover:scale-110 transition-transform">
                                                <svg class="w-6 h-6 text-gray-600 dark:text-gray-400 group-hover:text-emerald-400"
                                                    fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12">
                                                    </path>
                                                </svg>
                                            </div>
                                            <p class="text-sm text-gray-700 dark:text-gray-300 font-medium">Click or
                                                Drag files here</p>
                                            <p class="text-xs text-gray-500">Support Multiple Files (Images/PDF)</p>
                                        </div>

                                        <!-- Preview Grid -->
                                        <div id="trx-preview-grid"
                                            class="hidden grid grid-cols-2 sm:grid-cols-3 gap-3 mt-2 text-left">
                                            <!-- Items will be injected here -->
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div
                                class="bg-gray-100 dark:bg-white/5 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse border-t border-white/10">
                                <button type="submit"
                                    class="w-full inline-flex justify-center rounded-lg px-4 py-2 border border-emerald-600 text-emerald-600 hover:bg-emerald-50 dark:border-emerald-400 dark:text-emerald-400 dark:hover:bg-emerald-900/20 text-base font-medium sm:ml-3 sm:w-auto sm:text-sm transition-all">Simpan
                                    Transaksi</button>
                                <button type="button" onclick="closeModal()"
                                    class="glass-button mt-3 w-full inline-flex justify-center rounded-lg px-4 py-2 text-base font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:bg-white/10 focus:outline-none sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm border border-white/10">Batal</button>
                            </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Modal Preview Bukti -->
        <div id="proofModal" class="fixed inset-0 z-[60] hidden overflow-y-auto" aria-labelledby="modal-proof-title"
            role="dialog" aria-modal="true">
            <div class="flex items-center justify-center min-h-screen px-4 pt-4 pb-20 text-center sm:p-0">
                <div class="fixed inset-0 bg-black/60 transition-opacity backdrop-blur-sm" aria-hidden="true"
                    onclick="closeProofModal()"></div>

                <div
                    class="relative inline-block align-bottom glass-card rounded-lg text-left overflow-hidden transform transition-all sm:my-8 sm:max-w-3xl sm:w-full">
                    <div class="px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                        <div class="sm:flex sm:items-start sm:justify-between mb-4">
                            <h3 class="text-lg leading-6 font-bold text-gray-900 dark:text-gray-100 flex items-center"
                                id="modal-proof-title">
                                <span
                                    class="bg-emerald-500/10 text-emerald-400 p-1.5 rounded-lg mr-2 border border-emerald-500/20 text-xl">üßæ</span>
                                Detail Pembayaran
                            </h3>
                            <button type="button" class="text-gray-600 dark:text-gray-400 hover:text-gray-200"
                                onclick="closeProofModal()">
                                <span class="sr-only">Close</span>
                                <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M6 18L18 6M6 6l12 12" />
                                </svg>
                            </button>
                        </div>

                        <!-- Loading State -->
                        <div id="proofLoading" class="hidden py-10 text-center">
                            <div
                                class="inline-block animate-spin rounded-full h-8 w-8 border-t-2 border-b-2 border-emerald-500">
                            </div>
                            <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">Memuat detail...</p>
                        </div>

                        <div id="proofContent">
                            <!-- Info Warga (Optional, inserted via JS) -->
                            <div id="proofWargaInfo" class="mb-5 hidden space-y-3">
                                <!-- Injected content -->
                            </div>

                            <div class="mb-2">
                                <p class="text-sm font-bold text-gray-600 dark:text-gray-400 mb-1">Bukti Transfer:</p>
                                <div
                                    class="flex justify-center bg-black/40 rounded-lg p-2 border border-white/10 relative group">
                                    <img id="proofImage" src="" alt="Bukti"
                                        class="max-w-full max-h-[50vh] object-contain rounded cursor-pointer"
                                        onclick="window.open(this.src, '_blank')">
                                    <div
                                        class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none">
                                        <span class="bg-black/70 text-white text-xs px-2 py-1 rounded">Klik untuk
                                            perbesar</span>
                                    </div>
                                </div>
                                <div class="text-right mt-1">
                                    <a id="viewFullImage" href="#" target="_blank"
                                        class="text-xs text-emerald-400 hover:underline">Lihat Ukuran Penuh</a>
                                </div>
                            </div>

                            <div id="proofDetails" class="mt-4">
                                <h4 class="text-sm font-bold text-emerald-400 mb-2 border-b border-white/10 pb-1">
                                    Transaksi Terkait:</h4>
                                <div class="bg-black/20 rounded-lg p-3 max-h-40 overflow-y-auto custom-scrollbar space-y-2"
                                    id="proofTransactionsList">
                                    <!-- List populated by JS -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="chartDataContainer" data-chart="<%= chartData %>" class="hidden"></div>
        <div id="transactionsData" data-transactions="<%= JSON.stringify(transactions) %>" class="hidden"></div>

        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

        <script>
            function openModal() {
                document.getElementById('addModal').classList.remove('hidden');
            }
            function closeModal() {
                document.getElementById('addModal').classList.add('hidden');
            }

            async function showProof(src, filename) {
                const modal = document.getElementById('proofModal');
                const loading = document.getElementById('proofLoading');
                const content = document.getElementById('proofContent');
                const infoDiv = document.getElementById('proofWargaInfo');
                const img = document.getElementById('proofImage');
                const fullLink = document.getElementById('viewFullImage');
                const listContainer = document.getElementById('proofTransactionsList');

                // Reset state
                img.src = src;
                fullLink.href = src;
                infoDiv.innerHTML = '';
                infoDiv.classList.add('hidden');
                listContainer.innerHTML = '';

                modal.classList.remove('hidden');
                loading.classList.remove('hidden');
                content.classList.add('hidden');

                try {
                    // Try fetch rich details
                    const response = await fetch(`/keuangan/detail/${filename}`);
                    const result = await response.json();

                    if (result.success && result.data.iuran) {
                        const iuran = result.data.iuran;
                        // Format data
                        const paidBy = iuran.payer_nama ? `(Dibayar oleh: ${iuran.payer_nama})` : '';
                        const jenisNice = iuran.jenis.replace('_', ' ').toUpperCase() + ' - ' + new Date(iuran.periode).toLocaleDateString('id-ID', { month: 'long', year: 'numeric' });
                        const statusColor = iuran.status === 'lunas' ? 'text-emerald-600 dark:text-emerald-400' : 'text-yellow-600 dark:text-yellow-400';
                        const statusText = iuran.status.toUpperCase();

                        infoDiv.innerHTML = `
                             <div class="grid grid-cols-1 gap-1 text-sm text-gray-700 dark:text-gray-300">
                                <div class="font-bold text-lg text-emerald-100 border-b border-white/10 pb-2 mb-2">
                                    Warga: ${iuran.warga_nama} <span class="text-sm text-gray-600 dark:text-gray-400 font-normal">(Blok ${iuran.blok}-${iuran.nomor_rumah})</span>
                                    <div class="text-xs text-gray-500 font-normal italic mt-0.5">${paidBy}</div>
                                </div>
                                <div class="flex justify-between border-b border-white/5 pb-1">
                                    <span class="text-gray-600 dark:text-gray-400">Jenis:</span>
                                    <span class="font-semibold text-gray-200">${jenisNice}</span>
                                </div>
                                <div class="flex justify-between border-b border-white/5 pb-1">
                                    <span class="text-gray-600 dark:text-gray-400">Nominal:</span>
                                    <span class="font-mono text-emerald-600 dark:text-emerald-300">Rp ${Number(iuran.jumlah).toLocaleString('id-ID')}</span>
                                </div>
                                <div class="flex justify-between pt-1">
                                    <span class="text-gray-600 dark:text-gray-400">Status:</span>
                                    <span class="font-bold tracking-wider ${statusColor}">${statusText}</span>
                                </div>
                             </div>
                        `;
                        infoDiv.classList.remove('hidden');

                        // Use server provided trasactions if available
                        if (result.data.kas && result.data.kas.length > 0) {
                            renderTransactionsList(result.data.kas, listContainer);
                        } else {
                            // Fallback to local parsing or empty
                            renderTransactionsList([], listContainer);
                        }

                    } else {
                        // Fallback: Manual Transaction (Not found in Iuran)
                        // Use local data from data-attribute
                        const rawTrans = document.getElementById('transactionsData').getAttribute('data-transactions');
                        const transactions = JSON.parse(rawTrans);
                        const related = transactions.filter(t => t.bukti_foto === filename);
                        renderTransactionsList(related, listContainer);

                        infoDiv.innerHTML = `<p class="text-gray-600 dark:text-gray-400 italic text-center text-sm py-2">Transaksi Manual (Non-Iuran)</p>`;
                        infoDiv.classList.remove('hidden');
                    }
                } catch (error) {
                    console.error("Fetch details error", error);
                    // Fallback to local data
                    const rawTrans = document.getElementById('transactionsData').getAttribute('data-transactions');
                    const transactions = JSON.parse(rawTrans);
                    const related = transactions.filter(t => t.bukti_foto === filename);
                    renderTransactionsList(related, listContainer);
                } finally {
                    loading.classList.add('hidden');
                    content.classList.remove('hidden');
                }
            }

            function renderTransactionsList(transactions, container) {
                if (transactions.length > 0) {
                    let total = 0;
                    transactions.forEach(t => {
                        const amount = parseInt(t.jumlah);
                        total += (t.tipe === 'masuk' ? amount : -amount);
                        const date = new Date(t.tanggal).toLocaleDateString('id-ID', { day: 'numeric', month: 'short', year: 'numeric' });

                                let ket = t.keterangan;
                                let badgeHtml = '';
                                const match = ket.match(/\[(.*?)\]/);
                                if (match) {
                                    const badge = match[1];
                                    ket = ket.replace(match[0], '').trim();
                                    
                                    let badgeColor = 'bg-gray-500/20 text-gray-600 dark:text-gray-400 border-gray-500/30';
                                    const b = badge.toLowerCase();
                                    
                                    if(b.includes('rt')) badgeColor = 'bg-cyan-500/20 text-cyan-600 dark:text-cyan-400 border-cyan-500/30';
                                    else if(b.includes('gang')) badgeColor = 'bg-purple-500/20 text-purple-600 dark:text-purple-400 border-purple-500/30';
                                    else if(b.includes('sampah') || b.includes('kebersihan')) badgeColor = 'bg-orange-500/20 text-orange-600 dark:text-orange-400 border-orange-500/30';
                                    
                                    badgeHtml = `<span class="inline-block ml-2 px-1.5 py-0.5 rounded text-[10px] uppercase font-bold border ${badgeColor}">${badge}</span>`;
                                }

                                const div = document.createElement('div');
                                div.className = 'flex justify-between items-start text-xs border-b border-white/5 pb-1 last:border-0';
                                div.innerHTML = `
                                    <div class="text-gray-700 dark:text-gray-300">
                                        <span class="text-gray-500 mr-2">${date}</span>
                                        ${ket} ${badgeHtml}
                                    </div>
                            <div class="font-bold ${t.tipe === 'masuk' ? 'text-emerald-600 dark:text-emerald-400' : 'text-red-600 dark:text-red-400'}">
                                ${t.tipe === 'masuk' ? '+' : '-'} Rp ${amount.toLocaleString('id-ID')}
                            </div>
                        `;
                        container.appendChild(div);
                    });

                    // Add Total if more than 1
                    if (transactions.length > 1) {
                        const totalDiv = document.createElement('div');
                        totalDiv.className = 'flex justify-between items-center text-sm font-bold pt-2 border-t border-white/10 mt-1';
                        totalDiv.innerHTML = `
                            <span class="text-emerald-100">Total Transaksi</span>
                            <span class="text-emerald-600 dark:text-emerald-400">Rp ${total.toLocaleString('id-ID')}</span>
                        `;
                        container.appendChild(totalDiv);
                    }
                } else {
                    container.innerHTML = '<p class="text-xs text-gray-500 italic">Tidak ada data transaksi terkait.</p>';
                }
            }

            function closeProofModal() {
                document.getElementById('proofModal').classList.add('hidden');
                document.getElementById('proofImage').src = '';
            }

            // Chart Configuration - Monochrome
            try {
                const rawData = document.getElementById('chartDataContainer').getAttribute('data-chart');
                const chartData = JSON.parse(rawData);

                if (chartData) {
                    const ctx = document.getElementById('financeChart').getContext('2d');

                    const gradientMasuk = ctx.createLinearGradient(0, 0, 0, 400);
                    gradientMasuk.addColorStop(0, 'rgba(16, 185, 129, 0.5)'); // Emerald-500
                    gradientMasuk.addColorStop(1, 'rgba(16, 185, 129, 0.1)');

                    const gradientKeluar = ctx.createLinearGradient(0, 0, 0, 400);
                    gradientKeluar.addColorStop(0, 'rgba(239, 68, 68, 0.5)'); // Red-500
                    gradientKeluar.addColorStop(1, 'rgba(239, 68, 68, 0.1)');

                    new Chart(ctx, {
                        type: 'bar',
                        data: {
                            labels: chartData.labels,
                            datasets: [
                                {
                                    label: 'Pemasukan',
                                    data: chartData.income,
                                    backgroundColor: gradientMasuk,
                                    borderColor: '#10b981',
                                    borderWidth: 1,
                                    borderRadius: 6,
                                    barPercentage: 0.6,
                                },
                                {
                                    label: 'Pengeluaran',
                                    data: chartData.expense,
                                    backgroundColor: gradientKeluar,
                                    borderColor: '#ef4444',
                                    borderWidth: 1,
                                    borderRadius: 6,
                                    barPercentage: 0.6,
                                }
                            ]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: {
                                    position: 'top',
                                    labels: {
                                        color: document.documentElement.classList.contains('dark') ? '#d1d5db' : '#374151'
                                    }
                                },
                                tooltip: {
                                    mode: 'index',
                                    intersect: false,
                                    backgroundColor: 'rgba(0, 0, 0, 0.8)',
                                    titleColor: '#f9fafb',
                                    bodyColor: '#d1d5db',
                                    borderColor: 'rgba(255, 255, 255, 0.1)',
                                    borderWidth: 1,
                                    displayColors: true,
                                    boxPadding: 4
                                }
                            },
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    grid: {
                                        color: 'rgba(255, 255, 255, 0.1)',
                                        borderDash: [2, 4]
                                    },
                                    ticks: {
                                        callback: function (value) {
                                            return 'Rp ' + (value / 1000).toLocaleString('id-ID') + 'k';
                                        },
                                        font: { size: 10 },
                                        color: document.documentElement.classList.contains('dark') ? '#9ca3af' : '#4b5563'
                                    }
                                },
                                x: {
                                    grid: { display: false },
                                    ticks: {
                                        font: { size: 10 },
                                        color: '#9ca3af'
                                    }
                                }
                            },
                            interaction: {
                                mode: 'nearest',
                                axis: 'x',
                                intersect: false
                            }
                        }
                    });
                }
            } catch (e) {
                console.log("Chart Error", e);
            }

            // --- Multi-File Dropzone Logic ---
            const trxDropzone = document.getElementById('trx-dropzone');
            const trxInput = document.getElementById('trx-file-input');
            const trxPrompt = document.getElementById('trx-dropzone-prompt');
            const trxPreviewGrid = document.getElementById('trx-preview-grid');

            // We use a DataTransfer object to hold the files
            const dt = new DataTransfer();

            // Highlight Events
            ['dragenter', 'dragover'].forEach(eventName => {
                trxDropzone.addEventListener(eventName, (e) => {
                    e.preventDefault();
                    e.stopPropagation();
                    trxDropzone.classList.add('border-emerald-500', 'bg-gray-200 dark:bg-white/10');
                }, false);
            });

            ['dragleave', 'drop'].forEach(eventName => {
                trxDropzone.addEventListener(eventName, (e) => {
                    e.preventDefault();
                    e.stopPropagation();
                    trxDropzone.classList.remove('border-emerald-500', 'bg-gray-200 dark:bg-white/10');
                }, false);
            });

            // Handle Drop
            trxDropzone.addEventListener('drop', (e) => {
                const files = e.dataTransfer.files;
                handleFiles(files);
            });

            // Handle Click
            trxDropzone.addEventListener('click', (e) => {
                // Prevent click if clicking on a remove button (bubbling)
                if (e.target.closest('.remove-file-btn')) return;
                trxInput.click();
            });

            // Handle Input Change
            trxInput.addEventListener('change', () => {
                handleFiles(trxInput.files);
            });

            function handleFiles(files) {
                for (let i = 0; i < files.length; i++) {
                    const file = files[i];
                    // Avoid duplicates if needed, or just append
                    // Ideally check name/size/type to dedupe?
                    // For simplicity, we just add them.
                    dt.items.add(file);
                }
                updateSync();
            }

            function removeTrxFile(index) {
                dt.items.remove(index);
                updateSync();
            }

            function updateSync() {
                // Sync to input
                trxInput.files = dt.files;

                // Render Previews
                trxPreviewGrid.innerHTML = '';

                if (dt.files.length > 0) {
                    trxPrompt.classList.add('hidden');
                    trxPreviewGrid.classList.remove('hidden');
                    trxDropzone.classList.remove('py-6'); // Reduce padding
                    trxDropzone.classList.add('py-4');

                    Array.from(dt.files).forEach((file, index) => {
                        const div = document.createElement('div');
                        div.className = "relative group rounded-lg overflow-hidden border border-white/10 bg-black/30 aspect-square flex items-center justify-center";

                        // Remove Button
                        const removeBtn = document.createElement('button');
                        removeBtn.type = "button";
                        removeBtn.className = "remove-file-btn absolute top-1 right-1 bg-red-500 text-white rounded-full p-1 opacity-0 group-hover:opacity-100 transition-opacity z-10 hover:bg-red-600";
                        removeBtn.innerHTML = `<svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>`;
                        removeBtn.onclick = (e) => {
                            e.stopPropagation(); // Stop click from opening dialog
                            removeTrxFile(index);
                        };
                        div.appendChild(removeBtn);

                        if (file.type.startsWith('image/')) {
                            const img = document.createElement('img');
                            img.className = "w-full h-full object-cover";
                            img.file = file;
                            div.appendChild(img);

                            // Async read
                            const reader = new FileReader();
                            reader.onload = (e) => { img.src = e.target.result; };
                            reader.readAsDataURL(file);
                        } else {
                            // Generic file icon
                            div.innerHTML += `
                                <div class="text-center p-2">
                                    <svg class="w-8 h-8 mx-auto text-gray-600 dark:text-gray-400 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
                                    <p class="text-[10px] truncate w-full text-gray-700 dark:text-gray-300">${file.name}</p>
                                </div>
                            `;
                            div.appendChild(removeBtn); // Re-append logic if overwritten
                        }
                        trxPreviewGrid.appendChild(div);
                    });

                } else {
                    trxPrompt.classList.remove('hidden');
                    trxPreviewGrid.classList.add('hidden');
                    trxDropzone.classList.add('py-6');
                    trxDropzone.classList.remove('py-4');
                }
            }

            // Custom Form Validation for Dropzone
            const addForm = document.querySelector('form[action="/keuangan/add"]');
            if (addForm) {
                addForm.addEventListener('submit', function (e) {
                    // Check if file input has files (synced from DataTransfer)
                    if (trxInput.files.length === 0) {
                        e.preventDefault();
                        alert('Mohon upload bukti foto / struk transaksi (Wajib).');
                        // Optional: shaker effect or highlight
                        trxDropzone.classList.add('border-red-500');
                        setTimeout(() => trxDropzone.classList.remove('border-red-500'), 2000);
                    }
                });
            }
        </script>

        <style>
            .custom-scrollbar::-webkit-scrollbar {
                width: 6px;
            }

            .custom-scrollbar::-webkit-scrollbar-track {
                background: rgba(255, 255, 255, 0.05);
            }

            .custom-scrollbar::-webkit-scrollbar-thumb {
                background: rgba(255, 255, 255, 0.15);
                border-radius: 4px;
            }

            .custom-scrollbar::-webkit-scrollbar-thumb:hover {
                background: rgba(255, 255, 255, 0.25);
            }
        </style>

        <%- include('../partials/footer') %>