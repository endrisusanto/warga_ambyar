<%- include('../partials/head') %>
    <%- include('../partials/navbar') %>

        <div class="glass-card overflow-hidden">
            <div
                class="px-4 py-5 sm:px-6 flex flex-col md:flex-row md:justify-between md:items-center space-y-4 md:space-y-0 border-b border-white/10">
                <div>
                    <h3 class="text-lg leading-6 font-medium text-gray-100">Data Warga</h3>
                    <p class="mt-1 max-w-2xl text-sm text-gray-400">Daftar semua warga Blok F7 & F8.</p>
                </div>
                <% if(user.role !=='warga' ) { %>
                    <div class="grid grid-cols-2 gap-3 md:flex md:space-x-3 w-full md:w-auto">
                        <a href="/warga/export"
                            class="glass-button justify-center inline-flex items-center px-4 py-2 text-sm font-medium rounded-lg text-gray-300 border border-white/10">
                            Export Excel
                        </a>
                        <a href="/warga/create"
                            class="glass-button justify-center inline-flex items-center px-4 py-2 text-sm font-medium rounded-lg text-gray-200 bg-white/10 hover:bg-white/15 border border-white/15">
                            Tambah Warga
                        </a>
                    </div>
                    <% } %>
            </div>
            <div class="border-t border-white/10">
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-white/10">
                        <thead class="bg-white/5">
                            <tr>
                                <th scope="col"
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                                    Rumah</th>
                                <th scope="col"
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                                    Nama</th>
                                <th scope="col"
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                                    Status Huni</th>
                                <th scope="col"
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                                    Status Keluarga</th>
                                <th scope="col"
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                                    Role</th>
                                <th scope="col"
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                                    Approval</th>
                                <th scope="col"
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                                    No HP</th>
                                <th scope="col"
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                                    Ronda?</th>
                                <th scope="col" class="relative px-6 py-3">
                                    <span class="sr-only">Edit</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="bg-white/5 divide-y divide-white/10">
                            <% warga.forEach(w=> { %>
                                <tr class="hover:bg-white/10 transition-colors">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm font-bold text-gray-200">Blok <%= w.blok %> - <%=
                                                    w.nomor_rumah %>
                                        </div>
                                        <div class="text-xs text-gray-500 hidden">
                                            <%= w.status_huni %>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm font-medium text-gray-200">
                                            <%= w.nama %>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <% let huniClass='bg-white/10 text-gray-300' ; if(w.status_huni==='kosong' )
                                            huniClass='bg-gray-700 text-gray-300' ; if(w.status_huni==='kontrak' )
                                            huniClass='bg-amber-500/20 text-amber-500' ; %>
                                            <span
                                                class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= huniClass %> capitalize border border-white/10">
                                                <%= w.status_huni %>
                                            </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span
                                            class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-white/10 text-gray-300 border border-white/10">
                                            <%= w.status_keluarga %>
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <% if(user.role==='admin' ) { %>
                                            <form action="/warga/update-role/<%= w.id %>" method="POST" class="inline">
                                                <select name="role" onchange="this.form.submit()"
                                                    class="glass-input text-xs rounded-md">
                                                    <option value="warga" <%=w.role==='warga' ? 'selected' : '' %>>Warga
                                                    </option>
                                                    <option value="ketua" <%=w.role==='ketua' ? 'selected' : '' %>>Ketua
                                                    </option>
                                                    <option value="bendahara" <%=w.role==='bendahara' ? 'selected' : ''
                                                        %>>Bendahara</option>
                                                    <option value="admin" <%=w.role==='admin' ? 'selected' : '' %>>Admin
                                                    </option>
                                                </select>
                                            </form>
                                            <% } else { %>
                                                <span
                                                    class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-white/10 text-gray-300 capitalize border border-white/10">
                                                    <%= w.role || 'warga' %>
                                                </span>
                                                <% } %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <% const approvalStatus=w.approval_status || 'approved' ; const
                                            approvalClass=approvalStatus==='approved'
                                            ? 'bg-emerald-500/20 text-emerald-400 border-emerald-500/30' :
                                            approvalStatus==='pending'
                                            ? 'bg-amber-500/20 text-amber-400 border-amber-500/30'
                                            : 'bg-red-500/20 text-red-400 border-red-500/30' ; %>
                                            <% if(user.role==='admin' ) { %>
                                                <form action="/warga/update-approval/<%= w.id %>" method="POST"
                                                    class="inline">
                                                    <select name="approval_status" onchange="this.form.submit()"
                                                        class="glass-input text-xs rounded-md">
                                                        <option value="approved" <%=approvalStatus==='approved'
                                                            ? 'selected' : '' %>>Approved</option>
                                                        <option value="pending" <%=approvalStatus==='pending'
                                                            ? 'selected' : '' %>>Pending</option>
                                                        <option value="rejected" <%=approvalStatus==='rejected'
                                                            ? 'selected' : '' %>>Rejected</option>
                                                    </select>
                                                </form>
                                                <% } else { %>
                                                    <span
                                                        class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= approvalClass %> capitalize border border-white/10">
                                                        <%= approvalStatus %>
                                                    </span>
                                                    <% } %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
                                        <%= w.no_hp || '-' %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <% if(user.role==='admin' ) { %>
                                            <form action="/warga/toggle-ronda/<%= w.id %>" method="POST" class="inline">
                                                <button type="submit"
                                                    class="<%= w.is_ronda ? 'bg-white/15 text-gray-200' : 'bg-white/5 text-gray-500' %> px-3 py-1 rounded-lg text-xs font-medium border border-white/10 hover:bg-white/20 transition-colors">
                                                    <%= w.is_ronda ? 'Ya' : 'Tidak' %>
                                                </button>
                                            </form>
                                            <% } else { %>
                                                <span
                                                    class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= w.is_ronda ? 'bg-white/15 text-gray-200' : 'bg-white/5 text-gray-500' %> border border-white/10">
                                                    <%= w.is_ronda ? 'Ya' : 'Tidak' %>
                                                </span>
                                                <% } %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                        <% if(user.role !=='warga' ) { %>
                                            <a href="/warga/edit/<%= w.id %>"
                                                class="text-gray-400 hover:text-gray-200 transition-colors">Edit</a>
                                            <% } %>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <%- include('../partials/footer') %>