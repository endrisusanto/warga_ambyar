<%- include('../partials/head') %>
    <%- include('../partials/navbar') %>

        <div class="glass-card overflow-hidden">
            <div
                class="px-4 py-5 sm:px-6 flex flex-col md:flex-row md:justify-between md:items-center space-y-4 md:space-y-0 border-b border-white/10">
                <div>
                    <h3 class="text-lg leading-6 font-medium text-gray-100">Data Warga</h3>
                    <p class="mt-1 max-w-2xl text-sm text-gray-400">Daftar semua warga Blok F7 & F8.</p>
                </div>
                <% if(user.role !=='warga' ) { %>
                    <div class="grid grid-cols-2 gap-3 md:flex md:space-x-3 w-full md:w-auto">
                        <a href="/warga/export"
                            class="glass-button justify-center inline-flex items-center px-4 py-2 text-sm font-medium rounded-lg text-gray-300 border border-white/10">
                            Export Excel
                        </a>
                        <a href="/warga/create"
                            class="glass-button justify-center inline-flex items-center px-4 py-2 text-sm font-medium rounded-lg text-gray-200 bg-white/10 hover:bg-white/15 border border-white/15">
                            Tambah Warga
                        </a>
                    </div>
                    <% } %>
            </div>
            <div class="border-t border-white/10">
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-white/10">
                        <thead class="bg-white/5">
                            <tr>
                                <th scope="col"
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                                    Rumah</th>
                                <th scope="col"
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                                    Nama</th>
                                <th scope="col"
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                                    Status Huni</th>
                                <th scope="col"
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                                    Status Keluarga</th>
                                <th scope="col"
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                                    Role</th>
                                <th scope="col"
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                                    Approval</th>
                                <th scope="col"
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                                    No HP</th>
                                <th scope="col"
                                    class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                                    Ronda?</th>
                                <th scope="col" class="relative px-6 py-3">
                                    <span class="sr-only">Edit</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="bg-white/5 divide-y divide-white/10">
                            <% warga.forEach(w=> { %>
                                <tr class="hover:bg-white/10 transition-colors">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm font-bold text-gray-200">Blok <%= w.blok %> - <%=
                                                    w.nomor_rumah %>
                                        </div>
                                        <div class="text-xs text-gray-500 hidden">
                                            <%= w.status_huni %>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm font-medium text-gray-200">
                                            <%= w.nama %>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <% let huniClass='bg-white/10 text-gray-300' ; if(w.status_huni==='kosong' )
                                            huniClass='bg-gray-700 text-gray-300' ; if(w.status_huni==='kontrak' )
                                            huniClass='bg-amber-500/20 text-amber-500' ; if(w.status_huni==='tidak huni'
                                            ) huniClass='bg-blue-500/20 text-blue-400' ; %>
                                            <span
                                                class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= huniClass %> capitalize border border-white/10">
                                                <%= w.status_huni %>
                                            </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span
                                            class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-white/10 text-gray-300 border border-white/10">
                                            <%= w.status_keluarga %>
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <% if(user.role==='admin' ) { %>
                                            <form action="/warga/update-role/<%= w.id %>" method="POST" class="inline">
                                                <select name="role" onchange="this.form.submit()"
                                                    class="glass-input text-xs rounded-md">
                                                    <option value="warga" <%=w.role==='warga' ? 'selected' : '' %>>Warga
                                                    </option>
                                                    <option value="ketua" <%=w.role==='ketua' ? 'selected' : '' %>>Ketua
                                                    </option>
                                                    <option value="bendahara" <%=w.role==='bendahara' ? 'selected' : ''
                                                        %>>Bendahara</option>
                                                    <option value="admin" <%=w.role==='admin' ? 'selected' : '' %>>Admin
                                                    </option>
                                                </select>
                                            </form>
                                            <% } else { %>
                                                <span
                                                    class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-white/10 text-gray-300 capitalize border border-white/10">
                                                    <%= w.role || 'warga' %>
                                                </span>
                                                <% } %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <% const approvalStatus=w.approval_status || 'approved' ; let approvalClass='' ;
                                            if(approvalStatus==='approved' ) {
                                            approvalClass='bg-emerald-500/20 text-emerald-400 border-emerald-500/30' ; }
                                            else if(approvalStatus==='pending' ) {
                                            approvalClass='bg-amber-500/20 text-amber-400 border-amber-500/30' ; } else
                                            { approvalClass='bg-red-500/20 text-red-400 border-red-500/30' ; } %>
                                            <% if(user.role==='admin' ) { %>
                                                <form action="/warga/update-approval/<%= w.id %>" method="POST"
                                                    class="inline">
                                                    <select name="approval_status" onchange="this.form.submit()"
                                                        class="glass-input text-xs rounded-md border <%= approvalClass %> font-medium focus:ring-0 focus:border-opacity-70 transition-colors cursor-pointer">
                                                        <option value="approved" class="bg-gray-900 text-emerald-400"
                                                            <%=approvalStatus==='approved' ? 'selected' : '' %>>Approved
                                                        </option>
                                                        <option value="pending" class="bg-gray-900 text-amber-400"
                                                            <%=approvalStatus==='pending' ? 'selected' : '' %>>Pending
                                                        </option>
                                                        <option value="rejected" class="bg-gray-900 text-red-400"
                                                            <%=approvalStatus==='rejected' ? 'selected' : '' %>>Rejected
                                                        </option>
                                                    </select>
                                                </form>
                                                <% } else { %>
                                                    <span
                                                        class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= approvalClass %> capitalize border">
                                                        <%= approvalStatus %>
                                                    </span>
                                                    <% } %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
                                        <% if(w.no_hp && w.no_hp.length> 5) { %>
                                            <a href="https://wa.me/<%= w.no_hp.replace(/^0/, '62').replace(/\D/g, '') %>"
                                                target="_blank"
                                                class="text-emerald-400 hover:text-emerald-300 hover:underline flex items-center gap-2">
                                                <svg class="w-4 h-4 flex-shrink-0" fill="currentColor"
                                                    viewBox="0 0 24 24">
                                                    <path
                                                        d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z" />
                                                </svg>
                                                <%= w.no_hp %>
                                            </a>
                                            <% } else { %>
                                                -
                                                <% } %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <% if(user.role==='admin' ) { %>
                                            <form action="/warga/toggle-ronda/<%= w.id %>" method="POST" class="inline">
                                                <button type="submit"
                                                    class="<%= w.is_ronda ? 'bg-white/15 text-gray-200' : 'bg-white/5 text-gray-500' %> px-3 py-1 rounded-lg text-xs font-medium border border-white/10 hover:bg-white/20 transition-colors">
                                                    <%= w.is_ronda ? 'Ya' : 'Tidak' %>
                                                </button>
                                            </form>
                                            <% } else { %>
                                                <span
                                                    class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= w.is_ronda ? 'bg-white/15 text-gray-200' : 'bg-white/5 text-gray-500' %> border border-white/10">
                                                    <%= w.is_ronda ? 'Ya' : 'Tidak' %>
                                                </span>
                                                <% } %>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-3">
                                        <% if(user.role !=='warga' ) { %>
                                            <a href="/warga/edit/<%= w.id %>"
                                                class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold bg-blue-500/20 text-blue-400 hover:bg-blue-500/30 transition-colors border border-blue-500/30">Edit</a>
                                            <a href="/warga/delete/<%= w.id %>"
                                                onclick="return confirm('Apakah Anda yakin ingin menghapus warga ini? Semua data iuran terkait juga akan terhapus.')"
                                                class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold bg-red-500/20 text-red-400 hover:bg-red-500/30 transition-colors border border-red-500/30">Delete</a>
                                            <% } %>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <%- include('../partials/footer') %>