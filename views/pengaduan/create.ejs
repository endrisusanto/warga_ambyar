<%- include('../partials/head') %>
    <%- include('../partials/navbar') %>

        <div class="container mx-auto px-4 py-8 pb-24 md:pb-8">
            <div class="max-w-2xl mx-auto glass-card p-6 md:p-8 rounded-xl">
                <div class="mb-6 border-b border-white/10 pb-4">
                    <a href="/pengaduan"
                        class="text-gray-400 hover:text-white mb-4 inline-block flex items-center gap-1 text-sm">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7">
                            </path>
                        </svg>
                        Kembali
                    </a>
                    <h1 class="text-2xl font-bold text-gray-100">Buat Pengaduan</h1>
                    <p class="text-sm text-gray-400 mt-1">Identitas pelapor akan dijaga kerahasiaannya jika memilih opsi
                        anonim.</p>
                </div>

                <form action="/pengaduan/store" method="POST" enctype="multipart/form-data" class="space-y-6">
                    <div>
                        <label for="judul" class="block text-sm font-medium text-gray-300 mb-2">Judul Pengaduan</label>
                        <input type="text" name="judul" id="judul" required
                            placeholder="Contoh: Lampu jalan mati di Blok F7"
                            class="glass-input w-full px-4 py-3 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none transition-all placeholder-gray-400 text-gray-200 bg-white/5 border border-white/10">
                    </div>

                    <div>
                        <label for="deskripsi" class="block text-sm font-medium text-gray-300 mb-2">Deskripsi
                            Detail</label>
                        <textarea name="deskripsi" id="deskripsi" rows="5" required
                            placeholder="Jelaskan masalah secara rinci..."
                            class="glass-input w-full px-4 py-3 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none transition-all resize-none placeholder-gray-400 text-gray-200 bg-white/5 border border-white/10"></textarea>
                    </div>

                    <div>
                        <label for="foto" class="block text-sm font-medium text-gray-300 mb-2">Bukti Foto
                            (Opsional)</label>
                        <input type="file" name="foto" id="foto" accept="image/*" class="block w-full text-sm text-gray-400
                    file:mr-4 file:py-2 file:px-4
                    file:rounded-full file:border-0
                    file:text-sm file:font-semibold
                    file:bg-white/10 file:text-indigo-400
                    hover:file:bg-white/20
                    transition-all border border-white/10 rounded-lg p-1">
                        <p class="mt-1 text-xs text-gray-500">Maksimal 5MB. Format: JPG, PNG.</p>
                    </div>

                    <div class="flex items-center p-3 glass-card border border-white/10 rounded-lg bg-white/5">
                        <input type="checkbox" name="is_anonim" id="is_anonim"
                            class="w-4 h-4 text-indigo-600 bg-gray-700 border-gray-600 rounded focus:ring-indigo-500 focus:ring-2">
                        <label for="is_anonim" class="ml-2 text-sm font-medium text-gray-300 cursor-pointer">Kirim
                            sebagai Anonim (Nama akan diblur)</label>
                    </div>

                    <div class="pt-4 flex gap-4">
                        <a href="/pengaduan"
                            class="w-1/3 text-center px-4 py-3 rounded-lg text-gray-400 hover:text-white glass-button border border-white/10 hover:bg-white/10 transition">Batal</a>
                        <button type="submit"
                            class="w-2/3 glass-button px-4 py-3 rounded-lg text-white font-bold bg-indigo-600/20 hover:bg-indigo-600/30 border border-indigo-500/30 transition shadow-lg shadow-indigo-500/10">Kirim
                            Pengaduan</button>
                    </div>
                </form>
            </div>
        </div>

        <%- include('../partials/footer') %>